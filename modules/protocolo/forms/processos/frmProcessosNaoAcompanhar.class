MIOLO::Import('extensions::class.phpmailer.php','PHPMailer');
class frmProcessosNaoAcompanhar extends MForm
{
	protected $processo;
	protected $setores;
    function __construct($objProcesso)
    {
        global $MIOLO;
		$this->processo = $objProcesso;
        $this->setores = $MIOLO->getBusiness('protocolo','setor');
        parent::__construct('Parar de acompanhar processo por email');
        $this->eventHandler();
    }
    
    function CreateFields()
    {
    	global $MIOLO;
    	
        if (!$this->GetFormValue('conf'))
        {
            $action_sim = $this->manager->GetActionURL('protocolo','main:processos',$this->processo->numProcesso,array('form'=>'naoAcompanhar','conf'=>'sim'));
            $action_nao = $this->manager->GetActionURL('protocolo','main:processos',$this->processo->numProcesso);
		    $this->manager->Question("Tem certeza que deseja parar de acompanhar este processo por email?",$action_sim,$action_nao);          
            return;
        }
        try
        {
		$okDelete = $this->processo->descartarEmail();
		if($okDelete)
			$msg = "A partir de agora, você não receberá mais informações deste processo em seu e-mail.";
		else
			$msg = "Ocorreu algum problema e você continuará recebendo informações deste processo por e-mail.";
		$this->manager->Information($msg, $this->manager->GetActionURL('protocolo','main:processos',$this->processo->numProcesso));
        }
        catch(Exception $e) {$this->addError($e->getMessage());}
    }
 }
?>
