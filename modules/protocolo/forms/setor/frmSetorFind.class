MIOLO::Import('modules::protocolo::controls::linksetor');

class frmSetorFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
        $this->Form('Pesquisar Setores');
		$this->SetClose($MIOLO->GetActionURL($module,'main:configuracao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        $ui = $this->manager->GetUI();
        $grid = $ui->GetGrid('protocolo','gridSetor');
        $grid->SetTitle(NULL);
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $sigla = Form::GetFormValue('sigla');
        $formBusca = new MThemeBox('&nbsp;&nbsp;Busca Simples', array(new MText('','Sigla'),new MTextField('sigla',$sigla,'',30),new ButtonFind('')));
        $formBusca->width = '50%';
        $formBusca->float = 'left';
        $formBusca->padding = '6px';
        $formBusca->height = '50px';
        $fields = array(
            array(
                $formBusca
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 } 
