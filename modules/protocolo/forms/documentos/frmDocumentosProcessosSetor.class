class frmDocumentosProcessosSetor extends MForm
{
	function __construct()
    	{ 
        	parent::__construct('Relatório Processos no Setor');
        	$this->EventHandler();
		$this->defaultButton = false;
    	}


	function CreateFields()
    	{
		global $MIOLO, $module, $action, $item, $theme;
		$fields = array(
			new MLookupTextField('setor','','Setor',50),
            new MHiddenField('idSetor')
        );
		$this->SetFields($fields);
		$this->addButton( new MButton('btnPost','Gerar Relatório','PDF') );

		$this->SetFieldAttr('setor','module','common');
        $this->SetFieldAttr('setor','item','setor');
		$this->SetFieldAttr('setor','related','idSetor,setor');
	}


	function btnPost_click()
   	{
   		global $MIOLO;
   			
		$idSetor = Form::GetFormValue('idSetor');
		if ((is_null(trim($idSetor))) && (!$idSetor))
       		{
	            $this->addError("Setor inválido! Use a lupa para selecionar o setor.");
	        }
		else
		{		
			$report = new MJasperReport('sigaept');

			$parameters['SUBREPORT_DIR']  = $MIOLO->GetConf('home.modules');
		    $parameters['int_pIdUsuario']	= $MIOLO->login->idkey;
       		$parameters['pURL']		= $MIOLO->GetConf('home.url');
       		$parameters['int_idSetor'] 	= $idSetor;

		    $report->Execute('protocolo', 'ProcessosSetor', $parameters);
		}
	}
}
