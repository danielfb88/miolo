class gridGrupoAcesso extends MObjectGrid
{
    function __construct($grupo)
    {
        $MIOLO = Miolo::getInstance();
        $perms = $MIOLO->getPerms();
        
        $select = $MIOLO->getActionUrl('common','main:mad:grupo:main',$grupo->idGrupo,array('form'=>'acesso','idTransacao'=>'#0#'));
        
        $columns = array(
            new MObjectGridColumn('idTransacao','Id Transação','left',false,'',false),
            new MObjectGridHyperlink('transacao->transacao','Transação',$select,'80%',true),
            new MObjectGridColumn('direito','Direito','left',false,'20%',true,$perms->perms),
        );

        $href = $MIOLO->getActionUrl('common','main:mad:grupo:main',$grupo->idGrupo);

        $grupo->retrieveAssociation('acesso');

        if ( $grupo->acesso )
        {
            foreach ( $grupo->acesso as $acesso )
            {
                $acesso->retrieveAssociation('transacao');
                $aux[] = $acesso;
            }
            $grupo->acesso = $aux;
        }
        
        parent::__construct($grupo->acesso,$columns,$href,20);
        $this->setTitle("Acessos do Grupo");
    }
}
