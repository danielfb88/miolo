class gridTransacaoAcesso extends MObjectGrid
{
    function __construct($transacao)
    {
        $MIOLO = Miolo::getInstance();
        $perms = $MIOLO->getPerms();
        
        $select = $MIOLO->getActionUrl('common','main:mad:transacao:main',$transacao->idTransacao,array('form'=>'acesso','idGrupo'=>'#0#'));
        
        $columns = array(
            new MObjectGridColumn('idGrupo','Id Grupo','left',false,'',false),
            new MObjectGridHyperlink('grupo->grupo','Grupo',$select,'80%',true),
            new MObjectGridColumn('direito','Direito','left',false,'20%',true,$perms->perms),
        );

        $href = $MIOLO->getActionUrl('common','main:mad:transacao:main',$transacao->idTransacao);

        $transacao->retrieveAssociation('acesso');

        if ( $transacao->acesso )
        {
            foreach ( $transacao->acesso as $acesso )
            {
                $acesso->retrieveAssociation('grupo');
                $aux[] = $acesso;
            }
            $transacao->acesso = $aux;
        }
        
        parent::__construct($transacao->acesso,$columns,$href,20);
        $this->setTitle("Acessos do Transacao");
    }
}
