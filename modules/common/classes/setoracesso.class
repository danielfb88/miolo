<?php

class BusinessCommonSetorAcesso extends MBusiness
{

    var $idsetorpai;
    var $siglasetorpai;
    var $idsetorfilho;
    var $siglasetorfilho;
    var $finalidade;

    function BusinessCommonSetorAcesso($data=null)
    {
       $this->GetDatabase('common');
       if ($data)
       {
          $this->SetData($data);
       }
    }

	function SetData($data)
	{
       $this->idsetorpai = $data->idsetorpai;
       $this->siglasetorpai = $data->siglasetorpai;
       $this->idsetorfilho = $data->idsetorfilho;
       $this->siglasetorfilho = $data->siglasetorfilho;
       $this->finalidade = $data->finalidade;
	}

    function &sqlAllFields()
    {
        $sql = new sql('a.idsetorpai, s1.siglasetorpai, a.idsetorfilho, s2.siglasetorfilho, a.finalidade');
        $sql->SetJoin('cm_setoracesso a', 'cm_setor s1','(a.idsetorpai = s1.idsetor)');
        $sql->SetJoin('cm_setoracesso a', 'cm_setor s2','(a.idsetorfilho = s2.idsetor)');
        return $sql;
    } 

    function GetById($idsetorpai, $idsetorfilho, $finalidade)
    {
        $sql = $this->sqlAllFields();
        $sql->SetWhere('(idsetor = ?) and (idsetorfilho=?) and (finalidade=?)');
        $query = $this->Query($sql,array($idsetorpai, $idsetorfilho, $finalidade));
        if ( $query )
        {
            $this->SetData($query->GetRowObject());
        }
        return $this;
    }

    function Insert()
    {

        $sql = new sql('idsetorpai, idsetorfilho, finalidade','cm_setoracesso');
        $args = array(
           $this->idsetorpai,
           $this->idsetorfilho,
           $this->finalidade
        );
        $ok = $this->Execute($sql->Insert($args));
        return $ok;     
    }

    function Delete()
    {
        $sql= new sql('','cm_setoracesso','(idsetorpai = ?) and (idsetorfilho = ?) and (finalidade = ?)');
        $this->Execute($sql->Delete(array($this->idsetorpai,$this->idsetorfilho,$this->finalidade)));
        return $ok;
    }

    function ListRange($range)
    {
        $sql = $this->sqlAllFields();
        $sql->SetRange($range); 
        $query = $this->Query($sql);
        return $query;
    }

	function ListAll()
    {
		return $this->ListRange();
    }

	function CountWhere($where)
 	{
        $sql = new sql('*','cm_setoracesso',$where);
        return $this->_db->Count($sql->Select());
	}
}
