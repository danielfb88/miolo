<?php

class BusinessCommonNoticia extends Business
{
    var $idNoticia;
	var $noticia;
	var $idSistema;
    var $dataNoticia;
    var $sistema; // object

    function BusinessCommonNoticia($data=null)
    {
       $this->Business('common',$data);
    }

	function SetData($data)
	{
		$this->idNoticia = $data->idNoticia;
		$this->noticia = $data->noticia;
		$this->idSistema = $data->idSistema;
        $this->dataNoticia = $data->dataNoticia;
	}

    function GetById($id)
    {
        $this->idNoticia = $id;
        $this->retrieve();
        return $this;
    }

    function ListRange($range=NULL)
    {
        $sql = new sql('d.idsistema, s.sistema, n.dtnoticia, n.noticia','cm_noticia n, cm_sistema s','','s.sistema, n.dtnoticia');
        $sql->SetRange($range); 
        $query = $this->Query($sql);
        return $query;
    }

	function ListAll()
    {
        $criteria =  $this->getCriteria();
        return $criteria->retrieveAsQuery();
    }

    function ListBySistema($sistema)
    {
        $sistema = strtoupper($sistema);
        $criteria =  $this->getCriteria();
        $criteria->AddColumnAttribute('idSistema');
        $criteria->AddColumnAttribute('sistema.sistema');
        $criteria->AddColumnAttribute('dataNoticia','dataNoticia');
        $criteria->AddColumnAttribute('noticia');
        $criteria->addCriteria('sistema.sistema','=', "'$sistema'");
        $criteria->addOrderAttribute('sistema.sistema');
        $criteria->addOrderAttribute('dataNoticia');
        return $criteria->retrieveAsQuery();
    }
}
