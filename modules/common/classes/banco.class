<?
class BusinessCommonBanco extends MBusiness
{
   var $idBanco;
   var $nome;  
   var $agencias; // cursor
  
 
	function __construct($data=null)
	{

       parent::__construct('common',$data);
    }
    
	function OnCreate($data)
    {
        if (!empty($data))
        {       
            $this->GetById($data);
        }
    }

    function SetData($data)
    {

       $this->idBanco = $data->idBanco;
       $this->nome = strtoupper($data->nome);
    }

    function GetById($id)
    {
        $this->idBanco = $id;
        $this->retrieve();
        return $this;
    }

    function Save()
    {
        $op = $this->IsPersistent() ? OP_UPD : OP_INS;
        parent::save();
        $this->Log($op,"idbanco = $this->idbanco ; nome = $this->nome");
    }
    
    function Delete()
    {
        parent::delete();
        $this->Log(OP_DEL,"idbanco = $this->idbanco ; nome = $this->nome");
    }

	function ListAll()
    {
        $criteria =  $this->getCriteria();
        $criteria->addOrderAttribute('idBanco');
        return $criteria->retrieveAsQuery();
    }

    function ListAllAtivo()
    {
        $stts = 'S';
        $criteria = $this->getCriteria();
        $criteria->addCriteria('ativo','=', "'$stts'");
        $criteria->addOrderAttribute('idBanco');
        return $criteria->retrieveAsQuery();
    }


	function ListAgencias()
	{
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('agencias.idAgencia','idAgencia');
        $criteria->addColumnAttribute('agencias.nome');
        $criteria->addCriteria('idBanco','=', "{$this->idBanco}");
        return $criteria->retrieveAsQuery();
	}
    
	function ListAgenciasByNomeOrId($nome,$idAgencia)
	{
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('agencias.idAgencia','idAgencia');
        $criteria->addColumnAttribute('agencias.nome');
        $criteria->addCriteria('idBanco','=', "'{$this->idBanco}'");
        if ($idAgencia != '')
        {
           $criteria->addCriteria('agencias.idAgencia','LIKE', "'$idAgencia'");
        }
        elseif ($nome != '')
        {
           $criteria->addCriteria('upper(agencias.nome)','LIKE', "'$nome'");
        }
        $criteria->addOrderAttribute('nome');
        return $criteria->retrieveAsQuery();
	}
    
    function ListByNomeOrIdBanco($nome, $idBanco)
    {
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('idBanco');
        $criteria->addColumnAttribute('nome');
        if(is_numeric($idBanco))
        {
           $criteria->addCriteria('idBanco','=', "$idBanco");
        }
        else
        {
           $criteria->addCriteria('upper(nome)','LIKE', "$nome");
        }
        $criteria->addOrderAttribute('nome');
        return $criteria->retrieveAsQuery();
    }

    function getAgenciaById($idAgencia)
    {
        global $MIOLO;
        $agencia = $MIOLO->getBusiness('common','agencia');
        $agencia->getByIds($idAgencia,$this->idBanco);
        if ( ! $agencia->idAgencia )
        {
            $agencia->idBanco = $this->idBanco;
        }
        return $agencia;
    }

}
