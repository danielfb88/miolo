<?
class BusinessCommonUf extends Business
{
   var $idUF;
   var $UF;
 
   function __construct($data=null)
   {
       parent::__construct('common',$data);
    }

    function SetData($data)
   
    {
       $this->idUF = $data->idUF;
       $this->UF = strtoupper(trim($data->UF));
    }

    function GetById($idUF)
    {
        $this->idUF = $idUF;
        $this->retrieve();        
    }

	function GetByName($uf)
    {
        $sql = new sql('iduf','cm_uf','(uf=?)');
        $query = $this->Query($sql,$iduf);
        if ( !$query->eof() )
        {
            $this->SetData($query->GetRowObject());
        }
        return $this;
    }

    function Insert()
    {   global $MIOLO;
        $sql = new sql('iduf, uf','cm_uf');
        $args = array(
    		$this->iduf,
		    strtoupper($this->uf)
        );
        $ok = $this->Execute($sql->Insert($args));
        if ($ok) {$this->Log(OP_INS,"iduf = $this->iduf");} 
        return $ok;
    }

    function Update()
    {
        $sql = new sql('uf','cm_uf','iduf = ?');
        $args = array(
		    strtoupper($this->uf),
    		$this->iduf
        );
        $ok = $this->Execute($sql->Update($args));
        if ($ok) {$this->Log(OP_UPD,"iduf = $this->iduf");} 
        return $ok;
    }
    
    function Delete()
    {
        $sql = new sql('','cm_uf', 'iduf = ?');
        $ok = $this->Execute( $sql->Delete($this->iduf) );
        if ($ok) {$this->Log(OP_DEL,"iduf = $this->iduf");} 
        return $ok;
    }

    function ListRange($range=NULL)
    {
        $sql = new sql('trim(iduf), uf', 'cm_uf', '','uf');
        $sql->SetRange($range); 
        $query = $this->Query($sql);
        return $query;
    }

	function ListAll()
    {
		return $this->ListRange();
    }

    function CountWhere($where='')
    {
        $sql = new sql('*','cm_uf',$where);
        return $this->_db->Count($sql->Select());
    }

    function listMunicipios()
    {
        $municipio = $this->_miolo->getBusiness('common','municipio');
        $criteria = $municipio->getCriteria();
        $criteria->addColumnAttribute('idMunicipio');
        $criteria->addColumnAttribute('municipio');
        $criteria->addCriteria('idUf','=',"'$this->idUF'");
        $criteria->addOrderAttribute('municipio');
        return $criteria->retrieveAsQuery();
    }
    function listEstadosBrasileiros()
    {
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('idUF');
        $criteria->addColumnAttribute('UF');
        $criteria->addCriteria('idUf','not like',"'FB%'");
        $criteria->addOrderAttribute('UF');
        return $criteria->retrieveAsQuery();
    }


	function listByNome($nome)
	{
		$criteria = $this->getCriteria();
		$criteria->addCriteria('UF', 'LIKE', strtoupper("'{$nome}%'"));
		return $criteria->retrieveAsQuery();
	}
}
?>
