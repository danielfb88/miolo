<map>
    <moduleName>common</moduleName>
    <className>usuario</className>
    <tableName>cm_usuario</tableName>
    <databaseName>common</databaseName>
    <attribute>
        <attributeName>idUsuario</attributeName>
        <columnName>idusuario</columnName>
		<idgenerator>seq_cm_usuario</idgenerator>
		<key>primary</key>
    </attribute>
    <attribute>
        <attributeName>idPessoa</attributeName>
        <columnName>idpessoa</columnName>
    </attribute>
    <attribute>
        <attributeName>idSetor</attributeName>
        <columnName>idsetor</columnName>
    </attribute>
    <attribute>
        <attributeName>login</attributeName>
        <columnName>login</columnName>
    </attribute>
    <attribute>
        <attributeName>password</attributeName>
        <columnName>password</columnName>
    </attribute>
    <attribute>
        <attributeName>nick</attributeName>
        <columnName>nick</columnName>
    </attribute>
    <attribute>
        <attributeName>passMD5</attributeName>
        <columnName>passmd5</columnName>
    </attribute>
	
    <attribute>
        <attributeName>setor</attributeName>
    </attribute>

	<attribute>
        <attributeName>pessoa</attributeName>
    </attribute>

	<attribute>
        <attributeName>grupos</attributeName>
   	</attribute>
     <attribute>
        <attributeName>ativo</attributeName>
        <columnName>ativo</columnName>
    </attribute>

   <association>
      <toClassModule>common</toClassModule>
      <toClassName>grupo</toClassName>
      <associativeClassModule>common</associativeClassModule>
      <associativeClassName>grupousuario</associativeClassName>
      <cardinality>manyToMany</cardinality>
      <target>grupos</target>
	  <retrieveAutomatic>false</retrieveAutomatic>
	  <saveAutomatic>true</saveAutomatic>
	  <deleteAutomatic>true</deleteAutomatic>
	  <direction>
	     <fromAttribute>usuarios</fromAttribute>
	     <toAttribute>grupos</toAttribute>
      </direction>
   </association>

   <association>
		<toClassModule>common</toClassModule>
		<toClassName>pessoa</toClassName>
		<cardinality>oneToOne</cardinality>
		<target>pessoa</target>
		<retrieveAutomatic>true</retrieveAutomatic>
		<saveAutomatic>false</saveAutomatic>
		<entry>
			<fromAttribute>idPessoa</fromAttribute>
			<toAttribute>idpessoa</toAttribute>
		</entry>
   </association>

   <association>
		<toClassModule>common</toClassModule>
		<toClassName>setor</toClassName>
		<cardinality>oneToOne</cardinality>
		<target>setor</target>
		<retrieveAutomatic>false</retrieveAutomatic>
		<saveAutomatic>false</saveAutomatic>
		<entry>
			<fromAttribute>idSetor</fromAttribute>
			<toAttribute>idSetor</toAttribute>
		</entry>
   </association>
</map>
