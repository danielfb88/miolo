	function LookupBancoAgencia(&$lookup)
    {   
		global $MIOLO;

        $filter = $lookup->GetFilterValue('filter1');
        if (!$filter) 
           $filter = $lookup->GetFilterValue();

        $fBanco = $lookup->GetFilterValue('filter0');
        if (!$fBanco) 
