class BusinessCommonDicionarioDesc extends MBusiness
{

    var $tabela;
	var $campo;
    var $descricao; 


    /**
	 * Construtor da classe
	 *
     * @name __construct
     * @param data
     * @return
     */
    function __construct($data=null)
    {
       parent::__construct('common',$data);
    }


    /**
	 * Recupera do banco o objeto com a 'tabela' e 'campo' passada por parâmetro
	 *
     * @name GetById
     * @param id
     * @return
     */
	function GetById($tabela,$campo)
    {
        $this->tabela = $tabela;
        $this->campo = $campo;
        $this->retrieve();
        //$this->retrieveAssociation('dicionariodesc');
        return $this;
    }


    /**
     * @name GetByTabela
     * @param grupo
     * @return
     */
    function GetByTabela($tabela)
    {
        $grupo = strtoupper($tabela);
        $criteria = $this->getCriteria();
        $criteria->addCriteria('tabela','=',"'$tabela'");
        $this->retrieveFromCriteria($criteria);
        return $this;
    }


    /**
     * Lista todos os campos registrados no banco de dados
     *
     * @name ListAll
     * @param
     * @return
     */
	function ListAll()
    {
        $criteria = $this->getCriteria();
        return $criteria->retrieveAsQuery();
    }

	function ListByTabela($tabela)
    {
        $criteria = $this->getCriteria();
        $criteria->addCriteria('tabela','=',"'$tabela'");
        return $criteria->retrieveAsQuery();
    }

	function ListaCampos($tabela)
    {
        $criteria = $this->getCriteria();
        $criteria->AddColumnAttribute('campo');
        $criteria->AddColumnAttribute('descricao');
        $criteria->addCriteria('tabela','=',"'$tabela'");
        $criteria->addOrderAttribute('campo');
        return $criteria->retrieveAsQuery();
    }

	function ListaCamposByTabela($tabela)
	{
		global $MIOLO;
		$db = $MIOLO->GetDatabase('sigaept');
		
		if ( strtoupper($tabela) == 'RH_TIPO1' )
		{
			$prefixo = 't1.';
		} else if ( strtoupper($tabela) == 'RH_TIPO2' )
		{
			$prefixo = 't2.';
		}
		else 
		{
			$prefixo = '';
		}

		$sql = new sql(" '$prefixo' || campo, descricao", "cm_dicionariodesc", "tabela = '$tabela'");
		$query = $db->GetQuery($sql);
		return $query;
	}

}

