<?
class frmTransacao extends MCompoundForm
{
    protected $transacao;

    function __construct($transacao)
    {
        $this->transacao = $transacao;
        parent::__construct();
        $this->SetTitle($this->transacao->transacao);
    }
    function CreateFields()
    {
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados':
                $this->_form[0] = $ui->GetForm('common','frmTransacaoDados',$this->transacao,'transacao');
                break;
                    
            case 'acesso':
                $this->transacao->retrieveAssociation("acesso");
                $idGrupo = MForm::getFormValue('idGrupo');
                $acesso = $this->transacao->getAcesso($idGrupo);
                $this->_form[0] = $ui->GetForm('common','frmTransacaoAcesso',$acesso,'transacao');
                $this->_form[1] = $ui->GetGrid('common','gridTransacaoAcesso',$this->transacao);
                break;
                    
            case 'excluir':
                $this->_form[0] = $ui->GetForm('common','frmTransacaoDel',$this->transacao,'transacao');
                break;
        }
            
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($this->manager->GetActionURL('common','main:mad',$this->oid));
        }
            
        $action = $this->manager->getContext()->action;
        $this->_panel[0] = $panel = new MActionPanel('pn1Compound','Opções','',false);
        $panel->AddAction('Dados',$ui->GetImage('common','edit.png'),'common',$action,$this->transacao->idTransacao,array("form"=>"dados"));
        $panel->AddAction('Acesso',$ui->GetImage('common','transactions.png'),'common',$action,$this->transacao->idTransacao,array("form"=>"acesso"));
        $panel->AddAction('Excluir',$ui->GetImage('common','excluir.png'),'common',$action,$this->transacao->idTransacao,array("form"=>"excluir"));
            
        // info
        $this->_info[1] = new MTextLabel('txtNome',$this->transacao->transacao,'Transação');
    }
}
?>
