<?php
class frmGeradorTabelasDados extends MForm
{
    private $o;
    
	function __construct($o)
	{
        $this->o = $o; 
        
		parent::__construct('Dados da Tabela (Gerador de Relatórios)');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $fields = array(
			$nome = new MTextField('nome','','Tabela','30','Nome físico'),
			$descricao = new MTextField('descricao','','Descrição','55','Opcional'),
        ); 
        $this->SetFields($fields);		
		
		$nome->addAttribute('maxlength',25);
		$descricao->addAttribute('maxlength',50);
		
		$buttons = array(
            new MButton('btnSalvar','Enviar')
        );
        $this->SetButtons($buttons);
        
        $this->setData();
	}

    function setData()
    {
        foreach( $this->o as $attrName => $attrValue )
        {
            if ( $this->$attrName && trim($attrValue) )
            {
                $this->setFieldValue($attrName,trim($attrValue));
            }
        
        }
    }
    
	function btnSalvar_click()
	{
		$data = $this->GetData();
        $this->o->nome = $data->nome;
        $this->o->descricao = $data->descricao;
		try
		{
			$this->o->save();
            $this->addInfo("Tabela salva com sucesso.");
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}
}
