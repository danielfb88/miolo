class frmIngressoAviso extends MForm
{
    function __construct($login)
    {  
	    parent::__construct('Aviso COPESE');
        $user = $this->manager->GetBusinessMAD('user');
        $user->GetByLogin($login->id);
        
        $fields[] = new MLabel('Universidade Federal de Juiz de Fora,');
        $fields[] = new MLabel('Pró-Reitoria de Graduação');
        $fields[] = new MLabel('COMISSÃO PERMANENTE DE SELEÇÃO - COPESE');

        if( $this->manager->getPerms()->isMemberOf($login,'PI_FISCAL_VOLUNTARIO') && !($this->manager->getPerms()->isAdmin()) )
        {
            $fields[] = new MSpacer('15px');
            $fields[] = new MLabel('Prezado ALUNO (Programa de Monitoria VOLUNTÁRIO),','red', true);
            $fields[] = new MLabel("Concluímos no último dia 20 de dezembro a aplicação das provas do Processo PISM - Módulo I e II. <br>Você havia se inscrito para a função de fiscal de aplicação de provas. Se você foi selecionado e trabalhou no PISM, solicitamos que entre em contato com a COPESE, através do e-mail vestibular@ufjf.edu.br, informando seus dados:");
            $fields[] = new MSpacer('15px');

            $options = array(
                    new MOption('1','Nome Completo'),
                    new MOption('2','CPF'),
                    new MOption('3','PIS'),
                    new MOption('4','Nome do Banco'),
                    new MOption('5','Agência'),
                    new MOption('6','Número da conta corrente'),
                );
            $fields[] = new MUnorderedList('ul',$options);
        }
       else
        {
            $fields[] = new MSpacer('15px');
            $fields[] = new MLabel('Prezado BOLSISTA,','red', true);
            $fields[] = new MLabel("Concluímos no último dia 20 de dezembro a aplicação das provas do Processo PISM - Módulo I e II. <br>Você havia se inscrito para a função de fiscal de aplicação de provas. Se você foi selecionado e trabalhou no PISM, informamos que seus dados bancários já estão registrados na COPESE");
        }

        $fields[] = new MSpacer('15px');
        $fields[] = new MLabel('Agradecemos,');
        $fields[] = new MSpacer('15px');
        $fields[] = new MLabel('COPESE');
       $this->SetFields($fields);

       $go = $this->manager->GetActionURL('common','main');
       $this->AddButton(new MButton('btnMain','&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;', $go));
    }
}

