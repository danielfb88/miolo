		$data->dataFim    		= $this->getFieldValue('datafim');
		$data->nome       		= $this->getFieldValue('nomesetor');
		$data->tipo        		= $this->getFieldValue('tiposetor');
		//$data->fone        		= $this->getFieldValue('fone');
		//$data->fax         		= $this->getFieldValue('fax');
		$data->fone        		= $this->removeMask($this->getFieldValue('fone'), '(##)####-####');
		$data->fax         		= $this->removeMask($this->getFieldValue('fax'), '(##)####-####');
		$data->centroCusto 		= $this->getFieldValue('centrocusto');
		$data->obs         		= $this->getFieldValue('obs');
		$data->localizacao 		= $this->getFieldValue('localizacao');
		$data->idResponsavel    = $this->getFieldValue('idPessoa');
		$data->idSetorSiape		= $this->getFieldValue('idsetorsiape');
		//$data->idPaiSetor  = $this->getFieldValue('idPaiSetor');

		$data->organograma = $this->mtHierarquia->getCodeValue();
		//var_dump($data);
		return $data;
	}

	function btnPost_click($sender, $item=NULL)
	{
		$siglas 	 = $this->getFieldValue('siglas');
		$dataInicio  = $this->getFieldValue('dataini');
		$dataFim 	 = $this->getFieldValue('datafim');
		$nome 		 = $this->getFieldValue('nomesetor');
		$responsavel = $this->getFieldValue('idPessoa');
		//var_dump(Form::GetFormValue('mtHierarquia'));
		
		
		if (strpos($dataInicio, "-") == 4) //formato aaaa-mm-dd para aaaammdd
		{
			$dataInicioInvertida = str_replace("-", "", $dataInicio);
		}
		else //formato dd/mm/aaaa para aaaammdd
		{
			$dataInicioInvertida = $this->invert($dataInicio);
		}

		if(!$siglas)
		{
			$this->AddError('Favor preencher o campo "Sigla Setor"');
		}
		elseif(!$dataInicio)
		{
			$this->AddError('Favor preencher o campo "Data Inicio"');
		}
		elseif($dataFim && $dataInicioInvertida > $this->invert($dataFim)) //verifica se data inicio é anterior ou igual a data fim
		{
			$this->AddError('A data de início deve ser anterior ou igual a data de fim');
		}
		elseif(!$nome)
		{
			$this->AddError('Favor preencher o campo "Nome"');
		}
		elseif(!$responsavel)
		{
			$this->AddError('Favor escolher o responsável pelo setor clicando no ícone de busca ao lado do campo "Responsável"');
		}
		elseif( (Form::GetFormValue('fone')!='') && preg_match("/\D/", Form::GetFormValue('fone')) && 
			strlen(trim(Form::GetFormValue('fone'))) < 13 )
		{
			$this->AddError('Informe um valor válido para o campo "Telefone".');
		}
		elseif( (Form::GetFormValue('fax')!='') && preg_match("/\D/", Form::GetFormValue('fax')) && 
			strlen(trim(Form::GetFormValue('fax'))) < 13 )
		{
			$this->AddError('Informe um valor válido para o campo "Fax".');
		}
		elseif( Form::GetFormValue('tiposetor') == "")
		{
			$this->AddError('Informe o tipo do setor.');
		}
		elseif( (Form::GetFormValue('selHierarquia') == "") && (Form::GetFormValue('mtHierarquia') == ""))
		{
			$this->AddError('Informe o Organograma no campo Tipo.');
		}
		elseif( (Form::GetFormValue('selHierarquia') != "") && (Form::GetFormValue('lkpSetorId') == "") && (Form::GetFormValue('mtHierarquia') == ""))
		{
			$this->AddError('Escolha um setor.');
		}
		elseif(Form::GetFormValue('mtHierarquia') == "")
		{
			$this->AddError('Adicione um Organograma e um Setor pai.');
		}
		elseif(!$this->verificaCampoMTHierarquia(Form::GetFormValue('mtHierarquia'))) // verifica se foi adicionado um organograma/setor correto
		{
			$this->AddError('Organograma e/ou setor inexistente.');
		}
		else
		{
			$this->objSetor->SetData($this->GetData());
			try
			{
				$this->objSetor->save();
				$action = $this->manager->GetCurrentURL();
				$this->manager->Information('Setor cadastrado/alterado com sucesso.'  , $action );
			}
			catch (EMioloException $e)
			{
				$this->AddError('Erro no cadastramento/alteração das informações do setor '.$e->getMessage());
			}
		}
	}


	function btnClone_click($sender, $item=NULL)
	{
		$setor = $this->objSetor;
		$setor->SetData($this->GetData());
		try
		{
			$setor->SetPersistent(false);
			$setor->save();
			$action = $this->manager->GetActionURL('common','main:organograma',$setor->idSetor, array('form'=>'setor'));
			$this->page->redirect($action);
		}
		catch (EMioloException $e)
		{
			$this->AddError('Erro no cadastramento/alteração das informações do setor');
		}
	}


	function btnClose_click($sender, $item=NULL)
	{
		$setor = $this->objSetor;
		$k = new MKrono();
		$setor->dataFim = $k->KDate('%d/%m/%Y');
		try
		{
			$setor->save();
			$action = $this->manager->GetActionURL('common','main:organograma',$setor->idSetor, array('form'=>'setor'));
			$this->page->redirect($action);
		}
		catch (EMioloException $e)
		{
			$this->AddError('Erro no fechamento do informações do setor');
		}
	}


