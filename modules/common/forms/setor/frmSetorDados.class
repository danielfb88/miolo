	function invert($datainv)
	{//recebe a data e o separador

		$ano	=substr("$datainv",6, 4);
		$mes	=substr("$datainv",3, 2);
		$dia	=substr("$datainv",0, 2);
		$datainv="$ano$mes$dia";
		
		return $datainv;
	}
	
	function removeMask($string, $mascara) //ex: (32), (##)
	{
		if (strlen($string) == 0){
			return $string;
		}
		$mascara = str_replace("#", "", $mascara);
		for ($i = 0; $i < strlen($mascara); $i++)
		{
			$string = str_replace($mascara[$i], "", $string);
		}
		return $string;
	}
	
	function insertMask($string, $mascara) //ex: (32), (##)
	{
		if (strlen($string) == 0)
			return $string;
		$stringComMascara = "";
		for ($i = 0, $j = 0; $i < strlen($mascara); $i++)
		{
			if ($mascara[$i] != "#" && $mascara[$i] != $string[$j])
			{
				$stringComMascara = $stringComMascara.$mascara[$i];
			}
			else
			{
				$stringComMascara = $stringComMascara.$string[$j++];
			}
		}
		return $stringComMascara;
	}
	
	function rstrstr($haystack, $needle)
	{
	    return substr(strrev(strstr(strrev($haystack), strrev($needle))), 0, -strlen($needle));
	}
	
	function verificaCampoMTHierarquia($hierarquia)
	{
		foreach($hierarquia as $campoHierarquia){
			if (substr($campoHierarquia, 1, strlen('--Selecione--')) == '--Selecione--'){
				return false;
			}
			for($i = 0; $i < strlen($campoHierarquia)-1; $i++)
			{
				if (($campoHierarquia[$i] == '[') && ($campoHierarquia[$i+1] == ']'))
				{
					return false;
				}
			}
		}
		return true;
	}
