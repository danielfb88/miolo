class frmSetorDel extends MForm
{
	protected $objSetor;

    function __construct($objSetor)
    {
		$this->objSetor = $objSetor;
        parent::__construct('Excluir Setor');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('common','main:setor', $this->objSetor->idSetor, array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL('common','main:setor', $this->objSetor->idSetor);
		$conf = $this->GetFormValue('conf');
		$usuario = $this->manager->GetBusiness('common','usuario');
		$lista = $usuario->ListBySetor($this->objSetor->idSetor);
		if ($conf == 'sim')
		{


	        

		if (count($lista->result) >  0)
		{
			$MIOLO->Information('Existem usuários cadastrados neste setor.', $MIOLO->GetActionURL('common','main:setor', $this->objSetor->idSetor));
		}else	{
            		try
            		{

    			$this->objSetor->delete();			
	    		$MIOLO->Information('Setor excluído com sucesso', $MIOLO->GetActionURL('common','main:setor:find'));
			}
			catch ( Exception $e )
			{
                $MIOLO->Error($e->getMessage,$MIOLO->GetActionURL('common','main:setor', $this->objSetor->idSetor));
			}
      		 }
		}  else	{
		   $MIOLO->Question("Tem certeza que deseja excluir o Setor ". $this->objSetor->sigla . "?", $action_sim,$action_nao);
       	   		}
   }

	
}
?>
