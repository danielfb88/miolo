<?
class frmPlanoSaude extends MForm
{
    public $login;

    function __construct($login)
    {  
	    parent::__construct('Pesquisa: Planos de Saúde');
        $this->login = $login;
        $this->eventHandler();
    }

    function createFields()
    {
        $tabelaGeral = $this->manager->getBusiness('common','tabelageral');
        $query = $tabelaGeral->listByTabela('PLANOSAUDE','item1');
        $fields = array(
            new MLabel('A UFJF está fazendo um levantamento estatístico sobre Plano de Saúde na Instituição e solicita sua participação. Se você possui algum Plano de Saúde, informe abaixo ou marque a opção \'Nenhum\'.','blue',true),
            new MSpacer('15px'),
            new MSelection('plano','','Plano de Saúde',$query->chunkresult(0,0)),
            new MTextField('outro','','Outro, não listado acima',25),
            new MCheckBox('nenhum','','Nenhum',false,'Não tenho Plano de Saúde'),
            new MHr,
            new MCheckBox('out','','',false,'Não desejo participar desta pesquisa.'),
        );
        $this->SetFields($fields);
        $buttons = array(
            new MButton('btnPost','Enviar')
        );
        $this->setButtons($buttons);
        $this->setLabelWidth('20');
    }

    function btnPost_click()
    {
        $plano = $this->getFieldValue('plano');
        $outro = $this->getFieldValue('outro');
        $nenhum = $this->nenhum->checked;
        $out = $this->out->checked;
        if (($plano == '') && ($outro == '') && ($nenhum == '') && ($out == ''))
        {
            $this->addError('É necessário informar uma das opções.');            
        }
        else
        {
            $data = new FormData;
            $data->planoSaude = ($out == '') ? (($plano == '') ? (($outro == '') ? 'NENHUM' : $outro) : $plano) : 'NAOPARTICIPANTE';
            $data->login = $this->login->id;
            $data->idPessoa = 0; // $this->login->idperson;
            $plano = $this->manager->getBusiness('common','planosaude');
            $plano->setData($data);
            $plano->save();
            $this->page->Redirect($this->manager->getActionURL('common','main'));
        }

    }

}
?>
