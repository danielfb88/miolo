class frmTabelageralDados extends MForm
{
	protected $obj;

	function __construct($obj)
	{
		$this->obj = $obj;
		parent::__construct('Dados da Tabela Geral');
		$this->eventHandler();
	}

	function CreateFields()
	{
		$fields = array(
			new MHiddenField('idTabelaGeral',''),
			new MTextField('tabela','','Tabela', 30, 'Máx. 30 caracteres.'),
			new MTextField('item1','','Item 1', 30,'Máx. 30 caracteres.'),
			new MTextField('item2','','Item 2', 50, 'Máx. 50 caracteres.'),
			new MMultiLineField('item3','','Item 3', 200, 4, 50, 'Máx. 200 caracteres.'),
		);

		$this->SetFields($fields);
		$this->tabela->addAttribute('maxlength',30);
		$this->item1->addAttribute('maxlength',30);
		$this->item2->addAttribute('maxlength',50);
		$this->item3->addAttribute('maxlength',200);

		$buttons = array(
			new MButton('btnSave', 'Gravar')
		);
		$this->SetButtons($buttons);

		$validators = array(
			new MRequiredValidator('tabela'),
			new MRequiredValidator('item1')
		);
		$this->SetValidators($validators);
		$this->setData();
	}

	function setData()
	{
		$data = $this->obj;
		$this->setFieldValue('tabela',$data->tabela);
		$this->setFieldValue('idTabelaGeral',$data->idTabelaGeral);
		$this->setFieldValue('item1',$data->item1);
		$this->setFieldValue('item2',$data->item2);
		$this->setFieldValue('item3',$data->item3);
		}

	function btnSave_click()
	{
		$this->obj->setData($this->getData());

		if( strlen(trim(Form::GetFormValue('tabela'))) < 2 )
		{
			$this->AddError('A tabela geral precisa pelo menos 2 caracteres.');
		}
		elseif( strlen(trim(Form::GetFormValue('item1'))) < 2 )
		{
			$this->AddError('O item 1 precisa ter pelo menos 2 caracteres.');
		}
		else
		{
			try
			{
				$this->obj->save();
				$this->manager->information('Tabela Geral modificada com sucesso.',$this->manager->getActionUrl('common','main:tabelageral:find'));
			}
			catch ( Exception $e )
			{
				$this->addError($e->getMessage());
			}
		}
	}

}
?>
