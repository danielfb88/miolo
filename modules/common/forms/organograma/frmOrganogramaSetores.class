class frmOrganogramaSetores extends MForm
{
    protected $objOrganograma;

    function __construct($objOrganograma)
    {
        $this->objOrganograma = $objOrganograma;
        parent::__construct('Setores do organograma ' . $this->objOrganograma->sigla);
        $this->EventHandler();
    }

    function CreateFields()
    {
		$fields = array(
            new MCheckBox('ativo','ativo','&nbsp;',true,'Somente setores ativos'),
        );
        $this->SetFields($fields);
        $this->ativo->setAutoPostBack(true);
        $this->getTree();
    }

	function getTree()
	{   
        $ativo = $this->ativo->checked;
        $organograma = $this->objOrganograma->getOrganograma($ativo); 
        if (count($organograma))
        {
           array_unshift($organograma, array('root',0,'',''));
           $action = $this->manager->GetActionURL('common','main:organograma', $this->objOrganograma->idTipoOrganograma, array('form'=>'setor','setor'=>'#'));
           $tree = new MTreeMenu('tree',0, $action,'_self');
           $tree->SetItemsFromArray($organograma,'0','1,3,2');
           $this->AddField($tree);        
        } 
	}
 }

