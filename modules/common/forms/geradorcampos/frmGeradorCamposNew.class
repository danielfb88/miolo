<?php
class frmGeradorCamposNew extends MForm
{

	function __construct()
	{
		parent::__construct('Incluir Novo Campo para Gerador de Relatório');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $tab = $this->manager->getBusiness('common','tabelarelat');
        $query = $tab->listAll();
        
		$fields = array(
			$campo = new MTextField('campo','','Campo','25','Nome físico'),
			$titulo = new MTextField('titulo','','Título','25','Título (no Cabeçalho) (para o usuário)'),
			$descricao = new MTextField('descricao','','Descrição','55'),
            $tabela = new MSelection('idTabelaRelat','','Tabela',$query->result),
        ); 
        $this->SetFields($fields);		


        $buttons = array(
            new MButton('btnNew','Incluir Campo')
        );
        $this->SetButtons($buttons);

		
        $validators = array(
            new MRequiredValidator('campo'),
            new MRequiredValidator('titulo'),

        );
        $this->SetValidators($validators);
	}
    
	public function btnNew_click()
	{
		$data = $this->GetData();
		$o = $this->manager->GetBusiness('common','camporelat');
        $o->campo = $data->campo;
        $o->titulo = $data->titulo;
        $o->descricao = $data->descricao;
        $o->idTabelaRelat = $data->idTabelaRelat;
		try
		{
			$o->save();
			$go = $this->manager->GetActionURL('common','main:mad:geradorcampos:main',$o->idCampoRelat);
			$this->page->Redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}
}
?>
