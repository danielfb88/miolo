class frmSistemaDel extends MForm
{
	protected $objSistema;

	function __construct($objSistema)
	{
		$this->objSistema = $objSistema;
		parent::__construct('Excluir Sistema');
		$this->EventHandler();
	}

	function CreateFields()
	{
		global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('common','main:sistema',$this->objSistema->idSistema,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL('common','main:sistema',$this->objSistema->idSistema);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objSistema->Delete();
				$MIOLO->Information('Sistema excluído com sucesso',$MIOLO->GetActionURL('common','main:sistema:find'));
			}
			catch ( Exception $e )
			{
				if( strstr($e, 'chave estrangeira'))
					$MIOLO->Error("O sistema não pode ser removido pois ele é utilizado.",$MIOLO->GetActionURL('common','main:sistema',$this->objSistema->idSistema));
				else
					$MIOLO->Error($e->getMessage,$MIOLO->GetActionURL('common','main:sistema',$this->objSistema->idSistema));
			}
		}
		else
		{
			$MIOLO->Question("Tem certeza que deseja excluir o Sistema ".$this->objSistema->sistema."?",$action_sim,$action_nao);
		}
	}

}
?>
