<?
class frmBancoDados extends Form
{
    protected $objBanco;

    function __construct($objBanco)
    {
        $this->objBanco = $objBanco;
        $this->Form('Dados do Banco');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$fields = array(
            new TextField('idBanco','','Código','4','Máx. 4 caracteres'),
            new TextField('nome','','Nome','50','Máx. 50 caracteres'),
        );

        $this->SetFields($fields);



		$buttons = array(
        	new FormButton('btnSalvar', 'Salvar')
            );
		$this->SetButtons($buttons);

		$validators = array(
			new RequiredValidator('idBanco'),
			new RequiredValidator('nome')
		);
		$this->SetValidators($validators);
        $this->setData();

    }

    function setData()
    {
        $data = $this->objBanco;
        $this->setFieldValue('idBanco',$data->idBanco);
	$this->idBanco->setReadOnly('true');
        $this->setFieldValue('nome',$data->nome);
    }
    
    function btnSalvar_click()
    {
        $this->objBanco->setData($this->getData());
        try
        {
	    $go = $this->manager->GetActionURL('common','main:banco',$this->objBanco->idBanco);
            $this->objBanco->save();
            $this->manager->Information('Banco alterado com sucesso.', $go);
        }
        catch ( Exception $e )
        {
            $this->AddError($e->getMessage());
        }
    }

 }
