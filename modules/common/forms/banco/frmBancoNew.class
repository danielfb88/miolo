class frmBancoNew extends Form
{

	function __construct()
	{
		$this->Form('Incluir Novo Banco');
		$this->EventHandler();
	}

	function CreateFields()
	{
		$fields = array(
			new TextField('idBanco','','Código','4','Máx. 4 caracteres'),
			new TextField('nome','','Nome','50','Máx. 50 caracteres'),
		);

		$this->SetFields($fields);

		$buttons = array(
			new FormButton('btnNew', 'Incluir Banco')
		);
		$this->SetButtons($buttons);

		$validators = array(
			new RequiredValidator('idBanco'),
			new RequiredValidator('nome')
		);
		$this->SetValidators($validators);

	}

	function btnNew_click()
	{
		$data = $this->GetData();
		$banco = $this->manager->GetBusiness('common','banco');
		$banco->SetData($data);
		
		$b = Form::GetFormValue('idBanco');
		if( (!is_numeric($b)) or ($b<=0) )
		{
			$this->AddError('O código do banco deve ser um número.');
		}
		elseif( strlen(trim(Form::GetFormValue('nome'))) < 4  )
		{
			$this->AddError('Informe o nome do banco.');
		}
		else
		{
			try 
			{
				$banco->save();
				$go = $this->manager->GetActionURL('common','main:banco',$banco->idBanco);
				//$this->page->Redirect($go);
				$this->manager->Information('Banco cadastrado com sucesso.', $go);
			}
			catch ( Exception $e )
			{
				if( strstr($e->getMessage(), 'pk_cm_banco') )
					$this->AddError('O código já está em uso, informe outro código.');
				else
					$this->addError($e->getMessage());
			}
		}
	}

}
