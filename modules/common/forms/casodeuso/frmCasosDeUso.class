class frmCasosDeUso extends MForm
{
    var $grupo;

    function __construct($grupo)
    {
        $this->grupo = $grupo;
        parent::__construct("A&ccedil;&otilde;es do Grupo (Ator): $grupo->grupo");
        $this->eventHandler();
    }

    function createFields()
    {
        $this->grupo->retrieveAssociation('acesso');

        foreach ( $this->grupo->acesso as $acesso )
        {
            $acesso->retrieveAssociation('transacao');
            $transacao = new MTextField("transacao[$acesso->idTransacao]",$acesso->transacao->transacao,'Transa&ccedil;&atilde;o',40);
            $transacao->readonly = TRUE;
            $fields[] = $transacao;
            $fields[] = new MLabel();
            $fields[] = new MTextField("descricao[$acesso->idTransacao]",$acesso->transacao->descricao,'Descri&ccedil;&atilde;o',60);
            $fields[] = new MSeparator();
        }

        $this->setFields($fields);

        $buttons = array(
                new MButton('btnPost','Enviar')
                );

        $this->setButtons($buttons);        
    }

    function btnPost_click()
    {
        $descricoes = $this->getFormValue('descricao');
        foreach ( $descricoes as $key=>$value )
        {
            if ($value)
            {
                try
                {
                    $transacao = $this->manager->getBusinessMad('transaction');
                    $transacao->getById($key);
                    $transacao->descricao = $value;
                    $transacao->save();
                    $this->manager->information("Descricoes salvas com sucesso!");
                }
                catch ( Excpetion $e )
                {
                    $this->addErro($e->getMessage());
                }
            }
        }
    }
}
?>
