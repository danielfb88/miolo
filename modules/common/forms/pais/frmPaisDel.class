class frmPaisDel extends MForm
{
	protected $obj;
    protected $oid;

    function __construct($obj)
    {
		$this->obj = $obj;
        parent::__construct('Excluir Pais');
        $this->eventHandler();
    }

    function createFields()
    {
        //global $MIOLO;

        $id = $this->obj->idPais;
        $txt = $this->obj->pais;
		
		$action_sim = $this->manager->getActionURL('common','main:pais',$id,array("form"=>"excluir", 'conf'=>'sim'));
		$action_nao = $this->manager->getActionURL('common','main:pais',$id);

		$conf = $this->getFormValue('conf');
		if ($conf == "sim")
		{
			try
            {
				$this->obj->Delete();
	    		$this->manager->Information('País excluído com sucesso',$this->manager->getActionURL('common','main:pais:find'));
			}
			catch ( Exception $e )
			{
				
				$this->manager->Error($e->getMessage,$this->manager->GetActionURL('common','main:pais',$this->id));
			}
		}
		else
		{
		   $this->manager->Question("Tem certeza que deseja excluir o Pais ".$txt."?",$action_sim,$action_nao);
		}
    }
 }
?>
