<?
class frmPais extends MCompoundForm
{
	public $oid;
    protected $pais;
    protected $module;

    function __construct($obj)
    {
	global $MIOLO;
	
	$this->pais = $obj;
	//var_dump($item);
        $this->module = 'common';
        parent::__construct();
        $this->setClose($this->manager->getActionURL($this->module,'main:pais:find'));
        $this->setTitle($this->pais->pais);
        $this->setIcon($this->manager->getUi()->getImage($this->module,'mini.png'));
    }

    function CreateFields()
    {
		global $context,$history,$self;

        $pais = $this->pais;

        if ($this->oid == NULL) $this->oid = $pais->idPais;
// form
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->getForm($this->module,'frmPaisDados', $pais, 'pais'); 
                break;
            case 'excluir' : 
                $this->_form[0] = $ui->getForm($this->module,'frmPaisDel', $pais, 'pais'); 
                break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->setClose($this->manager->getActionURL($this->module, 'main:pais',$pais->idPais));
        }
		
// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new MActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('pais',A_EXECUTE,'Editar',$ui->getImage($this->module,'edit.png'),$this->module,$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('pais',A_EXECUTE,'Excluir',$ui->getImage($this->module,'trash.png'),$this->module,$action, $this->oid, array("form"=>"excluir"));

// info
		$this->_info[0]	= new MTextLabel('txtPais',$this->pais->pais,'Pais');
       
	}
}
?>
