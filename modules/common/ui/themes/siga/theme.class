<?php
class Theme extends BaseTheme
{
    function __construct()
    {
       parent::__construct('siga', $module='');
// top
           $aTop1 = array(
                new TextHeader('','1','Instituto Federal de Educação Tecnológica '),
                new TextHeader('','2','SIGA - Sistema Integrado de Gestão Acadêmica')
           );
           $img = new ImageButton('','Home',$MIOLO->$url, "/themes/ufjf/images/logonet.gif");  
           $img->image->AddAttribute('width','60px');
           $img->image->AddAttribute('height','60px');
           $top = array(new Div('',$img,'topLogo'), new Div('',$aTop1,'topText'));  
       $this->SetElement('top',$top);  
// navigation
       $this->SetElement('navigation',new NavigationBar());  
// bottom
       $this->SetElement('bottom',new StatusBar());  
    }

    function Generate()
    {
        echo HtmlPainter::Comment("START OF THEME - KENOBI");
        $html = $this->GenerateElement('top');
        $html .= $this->GenerateElement('navigation');
        if ( $this->HasMenuOptions() )
        {
            $html .= $this->GenerateElement('menus'); 
        }
        $html .= $this->GenerateElement('content'); 
        $html .= $this->GenerateElement('bottom');  
        echo HtmlPainter::Div('','container',$html);
        echo HtmlPainter::Comment("END OF THEME - KENOBI");
    }

}

class LookupTheme extends Theme
{
    function __construct()
    {
       parent::__construct();
    }
    function Generate()
    {
        echo HtmlPainter::Comment("START OF THEME LOOKUP - KENOBI");
        $html = $this->GenerateElement('content'); 
        $div = new Div('', $html,'container');
        $div->AddStyle('width','100%');  
        echo HtmlPainter::GenerateToString($div);
        echo HtmlPainter::Comment("END OF THEME LOOKUP - KENOBI");
    }

    function GenerateContent()
    {
        $html = '';
        if ($content = $this->theme->GetContent())
        {
           $div = new Div('contentContainer',$content);
           $div->AddStyle('width','95%');  
           $html = HtmlPainter::GenerateToString($div);
        }
        return $html;
    }

}

