class gridProvimentosTerceirizados extends MDataGrid
{
    var $listURL;
    protected $terceirizado;

    function gridProvimentosTerceirizados($objTerceirizado)
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $columns = array(
            new MDataGridColumn('contrato','Contrato','center', false,'10%',true),
            new MDataGridColumn('datainicio','Data Início','center', false,'10%',true),
            new MDataGridColumn('idterceirizado','ID','center', false,'10%',false),
            new MDataGridColumn('datafim','Data Fim','center', false,'10%',true),
            new MDataGridColumn('local','Local de Trabalho','center', false,'15%',true),
            new MDataGridColumn('setor','Setor','center', false,'10%',true),
            new MDataGridColumn('jornada','Jornada','center', false,'10%',true),
            new MDataGridColumn('funcao','Função','center', false,'20%',true),
            //new MDataGridColumn('instituicao','Instituição','center', false,'30%',true),                        
            new MDataGridColumn('ocorrencia','Ocorrência','center', false,'20%',true)
        );
        
        $action = $MIOLO->GetActionURL('rh','main:terceirizado',$objTerceirizado->idTerceirizado,array('form'=>'provimento','data'=>'#0#'));
        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($objTerceirizado->ListProvimentos(), $columns, $href_grid,25);
        $this->setRowMethod('gridProvimentosTerceirizados','MyRowMethod');
        $this->AddActionIcon('ID','select.gif',$action);
        $this->SetTitle('Provimentos');
        $this->SetFilter(false);
        $this->SetIndex(0);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

    public function myRowMethod( $i, $row, $actions, $columns )
    {
        global $MIOLO;
		$dataInicio = $columns['datainicio']->control[$i]->GetValue();
		$id = $columns['idterceirizado']->control[$i]->GetValue();
		//$idContrato = $columns['contrato']->control[$i]->GetValue();
		
		$provimento = $MIOLO->GetBusiness('rh','provterceirizado');
		$provimento = $provimento->GetById($id, $dataInicio);
		$provimento->retrieveAssociation('jornada');	
		$provimento->retrieveAssociation('contrato');
		
		if	($provimento->contrato)
		{
		    $columns['contrato']->control[$i]->SetValue($provimento->contrato->numContrato);
		}
		else
		{
		    $columns['contrato']->control[$i]->SetValue('INFORMAR');
		}
		
		if ($provimento->isEscala())
		{
		    $columns['jornada']->control[$i]->SetValue($provimento->escala->descricao);
		}
		else 
		{
		    $columns['jornada']->control[$i]->SetValue($provimento->jornada->descricao);
		}
    }
}
