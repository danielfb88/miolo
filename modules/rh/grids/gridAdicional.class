class gridAdicional extends MObjectGrid
{
	protected $objVinculo;
    /**
     * Constructor
     */
    function __construct($objVinculo)
    {
        global $MIOLO;
        $perms = $MIOLO->getPerms();

		$this->objVinculo = $objVinculo;
		
        $columns = array(
            new MObjectGridColumn('dataInicio','Início','left', false,'20%',true),
            new MObjectGridColumn('dataFim','Fim','left', false,'20%',true),
            new MObjectGridColumn('adicional','Adicional','left', false,'60%',true),
        );

        $ctlArray = array (
            new FormButton('btnNew', 'Incluir Adicional',$MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'adicional','id'=>'new')))
        );

        $href_grid = $MIOLO->GetActionURL('rh','main:vinculo');
        parent::__construct($objVinculo->adicionais, $columns, $href_grid,25);
        $this->SetTitle("Adicionais");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        if ( $objVinculo->isAtivo() && $perms->checkAccess('rh_adicional',A_ACCESS) )
        {
            $this->SetControls($ctlArray);
		    $action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'adicional','id'=>'#0#'));
		    $this->AddActionIcon('ID','select.gif',$action);
        }
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
