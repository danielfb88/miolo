class gridProadesReunioes extends MDataGrid
{
	function __construct($proades)
	{

        $MIOLO = MIOLO::getInstance(); 
        
		$href = $MIOLO->getActionURL('rh','main:proades:main','#0#');

		$columns = array(
				new MDataGridColumn('idreuniao','Código','center',false,'10%',false),
				new MDataGridColumn('data','Data','left',false,'85%',true),
				new MDataGridColumn('inicio','Início','left',false,'7%',true),
				new MDataGridColumn('termino','Fim','left',false,'8:%',true),
        );

        $query = $proades->listReunioes();

		parent::__construct($query,$columns,$hrefGrid,0);

        $this->setTitle("Reuniões Realizadas");

		$this->SetFilter(false);

		$this->SetIndex(1);

		$this->SetLinkType('hyperlink');

        $action = $MIOLO->getActionURL( 'rh', 'main:proades:reuniao', "#0#");
        $this->addActionIcon( 'ID','select.gif',$action );

        $buttons = array(
                new MButton('btnNovo','Cadastrar Nova Reunião',$MIOLO->getActionURL('rh','main:proades:reuniao:new',$proades->idProades))
        );

        $this->setControls($buttons);

        $this->setRowMethod( 'gridProadesReunioes', 'MyRowMethod' );
                
	}

    function generateHeader()
    {
        return null;
    }
	function GenerateFooter()
	{
		if ( ! $this->data )
		$footer[] = $this->GenerateEmptyMsg();
		$footer[] = new MSeparator();
		$footer[] = $this->GenerateControls();
		return $footer;
	}
    public function myRowMethod( $i, $row, $actions, $columns )
    {
        $row[2] = $row[2].":00";
    }
}
