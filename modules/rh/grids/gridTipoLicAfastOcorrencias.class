/**
 * Grid TipoLicAfastOcorrencias
 * Grid de uso geral para selecionar tipos de licafast
 * @package br.org.miolo.ufjf.rh.listing
 */

/**
 * Use Module Control
 */


class gridTipoLicAfastOcorrencias extends ObjectGrid
{
	protected $objTipoLicAfast;
    /**
     * Constructor
     */
    function __construct($objTipoLicAfast)
    {
		global $MIOLO;
		$this->objTipoLicAfast = $objTipoLicAfast;
		
        $columns = array(
            new ObjectGridColumn('idOcorrencia','Id.','left', false,'5%',true),
            new ObjectGridColumn('descricao','Ocorrências','left', false,'85%',true),
            new ObjectGridColumn('prazoMaximo','Prazo','left', false,'10%',true),
        );


        $href_grid = $MIOLO->GetActionURL('rh','main:tipolicafast',$objTipoLicAfast->idTipoLicAfast,array('form'=>'ocorrencias'));
        parent::__construct($objTipoLicAfast->ocorrencias, $columns, $href_grid,25);
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$action = $this->manager->GetActionURL('rh','main:tipolicafast',$objTipoLicAfast->idTipoLicAfast,array('form'=>'ocorrencias','id'=>'#0#'));
		$this->AddActionDelete($action);
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
