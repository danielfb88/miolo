class gridCapacitacoesExternas extends MGrid
{
    var $funcionario;

    function __construct($objFuncionario)
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $this->funcionario = $objFuncionario;

        $columns = array(
            		new MObjectGridColumn('idHistCapacitacao','idHistCapacitacao','left',false,'',false),
			new MObjectGridColumn('nomeCurso','Curso ou Evento Externo','center',false,'30%',true),
			new MObjectGridColumn('instituicao','Instituição','center',false,'30%',true),
			new MObjectGridColumn('cargaHoraria','CH','center',false,'8%',true),
			new MObjectGridColumn('dataCapacitacao','Data Capacitação','center',false,'8%',true),
			new MObjectGridColumn('dataProgressao','Data Progressão','center',false,'8%',true),
			new MObjectGridColumn('compativelcargo','Cargo','center',false,'4%',true),
			new MObjectGridColumn('compativelambiente','Ambiente','center',false,'4%',true),
        );
			
        $ctlArray = array (
            new MButton('btnNew','Incluir Nova Capacitação Externa',$MIOLO->GetActionURL('rh','main:funcionario:',$objFuncionario->idFuncionario,array('form'=>'capacitacoesexternas','id'=>'new')))
        );

	$histCapacitacao = $MIOLO->getBusiness('rh','histcapacitacao');
	$capacitacoes = $histCapacitacao->GetByFuncionario($objFuncionario->idFuncionario);
	$action = $MIOLO->GetActionURL('rh','main:funcionario',$objFuncionario->idFuncionario,array('form'=>'capacitacoesexternas','id'=>'#0#'));
        $href_grid = $MIOLO->GetActionURL('rh','main:funcionario',$objFuncionario->idFuncionario,array('form'=>'capacitacoesexternas'));
        
	parent::__construct($capacitacoes,$columns,$href_grid,35);


        if ( $perms->checkAccess('rh_capacitacao',A_ACCESS) )
        {
            $this->AddActionIcon('ID','select.gif',$action);
        }

		//$vinculoAtivo = $this->funcionario->GetVinculoAtivo();
		//if (isset($vinculoAtivo)) 
		{
			//if ($vinculoAtivo->isAtivo())
			{
		        $this->SetControls($ctlArray);
			}
		}

	$this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Capacitações Externas');
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->EventHandler();
    }


    function GenerateHeader()
    {
        return NULL;
    }


    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new MSeparator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
