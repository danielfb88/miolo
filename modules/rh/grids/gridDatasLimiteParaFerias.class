/**
 * Grid Grupo Cargo
 * Grid de uso geral para selecionar Grupos Cargo
 * @package br.org.miolo.ufjf.rh.grids
 */
MIOLO::Import('modules::rh::controls::linkdataslimiteparaferias');
class gridDatasLimiteParaFerias extends MDataGrid2
{
    public $listURL;


    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
		$hrefAction = $MIOLO->GetActionURL($module,'main:coniguracao:datalimiteferias','#0#');	
        $linkdatalimite = new LinkDatasLimiteParaFerias('linkdataslimiteparaferias','%0%');
        $columns = array(
		      new MDataGridControl($linkdatalimite,'id','Apagar','left',false,'20%'),
		      new MDataGridColumn('mesprevisto','Mês','center',false,'0%',false),
		      new MDataGridColumn('anoprevisto','Ano','center',false,'0%',false),
		      new MDataGridColumn('dtLimite','Data Limite','rigth',true,'80%'),
         );
        $this->SetFilter(false);
        $objCalendarioFerias = $MIOLO->GetBusiness('rh','calendarioferias');
        $query = $objCalendarioFerias->ListAll();
        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($query, $columns, $href_grid,50);
        $this->SetLinkType('hyperlink');
	}


    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        $footer[] = $this->GenerateControls();
        return $footer;
    }


}
