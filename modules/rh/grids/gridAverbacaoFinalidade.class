class gridAverbacaoFinalidade extends MObjectGrid
{
	protected $objAverbacao;
    /**
     * Constructor
     */
    function __construct($objAverbacao)
    {
        global $MIOLO;
		$this->objAverbacao = $objAverbacao;
		
        $vinculo = $MIOLO->getBusiness('rh','vinculo');
        $vinculo->getById($this->objAverbacao->idVinculo);
        
        $columns = array(
            new MObjectGridColumn('idAverbFinalidade','idAverbFinalidade','right',false,'0%',false),
            new MObjectGridColumn('finalidade','Finalidade','left',false,'70%',true),
            new MObjectGridColumn('totalDias','Total Dias','left',false,'30%',true),
        );

// controles no rodape
        $href_grid = $MIOLO->GetActionURL('rh',$self);
        $objAverbacao->getFinalidades();
        parent::__construct($objAverbacao->finalidades, $columns, $href_grid,25);
        $this->SetTitle("Finalidades");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');

        if ( $vinculo->isAtivo() )
        {
    		$action = $MIOLO->GetActionURL('rh','main:vinculo',$objAverbacao->idVinculo,array('form'=>'averbacao','id'=>$objAverbacao->idAverbacao,'subForm'=>'finalidades','idFinalidade'=>'#0#'));
	    	$this->AddActionDelete($action);
        }
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
