/**
 * Grid de Cargos
 * Grid de uso geral para selecionar Cargos de Grupos
 * @package br.org.miolo.ufjf.rh.listing
 */

class gridCargo extends ObjectGrid
{
	protected $objgrupocargo;
    /**
     * Constructor
     */
    function __construct($objgrupocargo)
    {
   	  global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
     	$this->objgrupocargo = $objgrupocargo;
	  
	  $columns = array(
          new ObjectGridColumn('idCargo','ID','left', false,'0%',true),
          new ObjectGridColumn('descricao','Cargos','left', false,'100%',true)
        );
      
	$href_new = $MIOLO->GetActionURL('rh','main:grupocargo',$objgrupocargo->idGrupoCargo, array('form'=>'cargos','id'=>'new'));
	
      //controles do rodape 
	$ctlArray = array (
        	new FormButton('btnNew', 'Incluir Novo Cargo', $href_new)
        );
		
        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($objgrupocargo->cargos, $columns, $href_grid,25);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->SetControls($ctlArray);
	$this->SetTitle(NULL);
	$this->SetFilter(false);
    $this->SetIndex(1);
    

	$action = $MIOLO->GetActionURL($module,$self,$objgrupocargo->idGrupoCargo,array('form'=>'cargos','id'=>'#0#'));
	$this->AddActionIcon('ID','select.gif',$action);
	
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
