/**
 * Grid Ferias
 * Grid de uso geral para selecionar ferias de um periodo aquisitivo
 * @package br.org.miolo.ufjf.rh.grids
 */

class gridFerias extends MObjectGrid
{
	protected $objPeriodoAquisitivo;
    /**
     * Constructor
     */
    function __construct($objPeriodoAquisitivo)
    {
        global $MIOLO, $self;
        $perms = $MIOLO->getPerms();
		$this->objPeriodoAquisitivo = $objPeriodoAquisitivo;
        $columns = array(
            new MObjectGridColumn('idVinculoPerAq','Vínculo','right',false,'0%',false),
            new MObjectGridColumn('dataInicioPerAq','Início Periodo Aquisitivo','center',true,'0%',false),
            new MObjectGridColumn('dataInicio','Início','center',false,'50%',true),
            new MObjectGridColumn('dataFim','Fim','center',false,'50%',true)
        );
        $this->SetFilter(false);
        $this->SetIndex(1);

	// controles no rodape

	$url = $MIOLO->GetActionURL('rh','main:vinculo',$objPeriodoAquisitivo->idVinculo,array('form'=>'ferias','dtInicioPerAq'=>$objPeriodoAquisitivo->dataInicio, "exec"=>"formularioferias",'dtInicioFerias'=>''));
	$ctlArray = array (
 				new FormButton('btnNew', 'Abrir Nova Férias',$url)
        );
		$href_grid = $MIOLO->GetActionURL('rh',$self);
		parent::__construct($objPeriodoAquisitivo->getThisPerAqFerias(), $columns, $href_grid,25);
 		$this->SetTitle('Ferias: '.$objPeriodoAquisitivo->getAnoInicioPerAq());
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $action = $MIOLO->GetActionURL('rh','main:vinculo',$objPeriodoAquisitivo->idVinculo,array('form'=>'ferias','dtInicioPerAq'=>'#1#', "exec"=>"formularioferias",'dtInicioFerias'=>'#2#'));
        
        if ( $perms->checkAccess('rh_ferias',A_ACCESS) )
        {
		    $this->AddActionIcon('ID','select.gif',$action);
        }
	

	//	if (($objPeriodoAquisitivo->permiteFerias()) )
	//	{
	 //		$this->SetControls($ctlArray);	
		//}

    } // fim do construtor

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
 			$footer[] = $this->GenerateEmptyMsg();
           // $footer[] = new Separator();
            $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
