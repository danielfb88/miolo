/**
 * Grid Capacitacoes
 * Grid de uso geral para selecionar capacitações de funcionarios
 * @package br.org.miolo.ufjf.rh.listing
 */

class gridCapacitacoes extends MGrid
{
    /**
     * Base URL
     * @var string 
     */
    var $funcionario;

    /**
     * Constructor
     */
    function gridCapacitacoes($objFuncionario)
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $this->funcionario = $objFuncionario;

        $columns = array(
            new MObjectGridColumn('idHistCapacitacao','idHistCapacitacao','left', false,'',false),
            new MObjectGridColumn('nomeModulo','Módulos','center', false,'30%',true),
			new MObjectGridColumn('nomeCurso','Curso','center', false,'45%',true),
			new MObjectGridColumn('instituicao','Instituição','center', false,'25%',true),
        );
			
// controles no rodape
        $ctlArray = array (
            new FormButton('btnNew', 'Incluir Nova Capacitaçao',$MIOLO->GetActionURL('rh','main:funcionario:',$objFuncionario->idFuncionario, array('form'=>'capacitacoes','id'=>'new')))
        );
       // $capacitacao = $objFuncionario->getCapacitacao();
        $capacitacaoCurso = $MIOLO->getBusiness('rh','capacitacaocurso');
        $capacitacaoModulo = $MIOLO->getBusiness('rh','capacitacaomodulo');
       // $cursoo = $curso->getById($capacitacao->idcurso);

        if(isset($this->funcionario->capacitacao)) {
            foreach($this->funcionario->capacitacao as $capacitacao){
               $curso = $capacitacaoCurso->getById($capacitacao->idcurso);
               $modulo = $capacitacaoModulo->getById($capacitacao->idmodulo);
               $a = array($capacitacao->idHistCapacitacao,$modulo->nome,$curso->nome,$curso->getInstituicao()->nome);
               $arr[] = $a;
             }
        }
        $action = $MIOLO->GetActionURL('rh','main:funcionario',$objFuncionario->idFuncionario, array('form'=>'capacitacoes','id'=>'#0#'));

        $href_grid = $MIOLO->GetActionURL('rh','main:funcionario',$objFuncionario->idFuncionario, array('form'=>'capacitacoes'));
        parent::__construct($arr, $columns, $href_grid,25);
        if ( $perms->checkAccess('rh_capacitacao',A_ACCESS) )
        {
            $this->AddActionIcon('ID','select.gif',$action);
            $this->SetControls($ctlArray);
        }

		$this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Capacitações');
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->EventHandler();
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
?>
