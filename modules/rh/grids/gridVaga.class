/**
 * Grid Vaga
 * Grid de uso geral para selecionar vagas
 * @package br.org.miolo.ufjf.rh.grids
 */

MIOLO::Import('modules::rh::controls::linkvaga');

class gridVaga extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $page, $context, $self, $action, $perms, $state;

        $linkvaga = new LinkVaga('linkvaga','%0%');
        $columns = array(
            new DataGridControl($linkvaga,'numerovaga','Número da Vaga','center', true,'25%'),
            new DataGridColumn('cargo.descricao','Descrição do Cargo','left', true,'50%'),
            new DataGridColumn('situacao','Situação','left', true,'25%'),
            //new DataGridControl($linkvaga,'descricao','Cargo','left', true,'40%'),
        );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('vaga');
        $vaga = empty($filter) ? 'A Definir' : $filter;
        $this->AddFilterText('vaga','Vaga',$vaga);
        $this->SetIndex(0);
        $objVaga = $MIOLO->GetBusiness('rh','vaga');
        $query = $objVaga->ListByNumeroVagaOrDescricaoCargo(strtoupper("'$vaga%'"));

        $href_grid = $MIOLO->GetActionURL('rh',$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
?>
