class gridAdicionais extends MDataGrid2
{
    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
        $mostrar = true;
        $colunaGrau = false;
        $colunaExclusao = false;
        $colunaTipo = false;
        $idAdicional = Form::GetFormValue('idAdicional');
        $idAtivos = Form::GetFormValue('idAtivos');
        $selData = Form::GetFormValue('dataAdicional');
        $idOrdem = Form::GetFormValue('idOrdem');
        if($idAdicional == 1)
            $colunaGrau = true;
        if($idAtivos == 2)
        	$colunaExclusao = true;
        if($idAdicional == 4)
        {
        	$colunaTipo = true;
        	$colunaGrau = true;
        }
        $columns = array(
            new DataGridColumn('matricula','Matrícula','center', true,'5%'),
            new DataGridColumn('nome','Nome','left', true,'50%'),
            new DataGridColumn('cargo','Cargo','left', true,'20%'),
            new DataGridColumn('lotacao','Lotação','left', true, '20%'),
            new DataGridColumn('tipo','Tipo de Adicional','left', true,'10%',$colunaTipo),
            new DataGridColumn('concessao','Concessão','center', true,'10%'),
            new DataGridColumn('exclusao','Exclusão','center', true,'10%',$colunaExclusao),
            new DataGridColumn('grau','Grau','left', true,'5%',$colunaGrau),
        );
        $idAdicional = ( is_null($idAdicional) or ($idAdicional == 0) or ($idAdicional == "") or empty($idAdicional) ) ? '99' : $idAdicional;
        $idAtivos = ( is_null($idAtivos) or ($idAtivos == 0) or ($idAtivos == "") or (empty($idAtivos)) ) ? '99' : $idAtivos;
        $idOrdem = ( is_null($idOrdem) or ($idOrdem == 0) or ($idOrdem == "") or (empty($idOrdem)) ) ? '99' : $idOrdem;
        if (($idAdicional == '99') or  ($idAtivos == '99') or ($idOrdem == '99'))
        {
               $idAdicional = '99';
               $idAtivos = '99';
               $idOrdem = '99';
               $mostrar = false; 
        }
        if ($mostrar)
        {
        
                $objAdicional = $MIOLO->GetBusiness('rh','adicional');
                //$objOrganograma = $MIOLO->GetBusiness('common','organograma');
                $query = $objAdicional->RelatorioAdicional($selData,$idAdicional,$idAtivos,$idOrdem);
                //var_dump($query);
                $href_grid = $MIOLO->GetActionURL($module,$self);
                parent::__construct($query, $columns, $href_grid,15);
                $this->SetTitle('Relatório de Adicionais');
                $this->SetClose(null);
                $this->SetFilter(false);
                $this->SetIndex(0);
                $this->SetLinkType('hyperlink');
        }
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        {
            $footer[] = $this->GenerateEmptyMsg();
        }
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
