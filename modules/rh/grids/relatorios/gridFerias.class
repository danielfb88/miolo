class gridFerias extends MDataGrid2
{
    var $listURL;
    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $selMes = Form::GetFormValue('selMes');
        $selAno = Form::GetFormValue('selAno');
        //var_dump($selMes, $selAno);
        $mostrar = true;
        if( is_null($selMes) or empty($selMes) or is_null($selAno) or empty($selAno) )
        {
            $mostrar = false;
        }
        if($mostrar)
        {
            $columns = array(
                new DataGridColumn('idVinculo','Matrícula','left', true,'8%'),
                new DataGridColumn('nome','Nome','left',true ,'35%',true),
                new DataGridColumn('dataInicioPerAq','Dt Início P.Aquisitivo','left', true,'10%'),
                new DataGridColumn('dataFimPerAq','Dt Fim P.Aquisitivo','left', true,'10%'),
                new DataGridColumn('dataInicio','Dt Início Ferias','left', true,'10%'),
                new DataGridColumn('dataFim','Dt Fim Ferias','left', true,'10%'),
                new DataGridColumn('adiantamento13','Adiant. 13º','center', true,'5%'),
                new DataGridColumn('adiantamentoSalario','Adiant. Sal','center', true,'5%'),
                new DataGridColumn('abono','Abono Pec.','center', true,'5%',false),
                new DataGridColumn('abonoConst','Abono Const.','center', true,'5%'),
                new DataGridColumn('totalDias','N° Dias','center', true,'5%'),
            
            );
    
            $objFerias = $MIOLO->GetBusiness('rh','ferias');
            $query = $objFerias->listFerias($selMes,$selAno);
            $href_grid = $MIOLO->GetActionURL($module,$self);
            parent::__construct($query, $columns, $href_grid,25);
            $this->SetTitle("Relatório de Férias");
            $this->SetClose(null);
            $this->SetFilter(false);
            $this->SetIndex(0);
            $this->SetLinkType('hyperlink');
        }
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        {
            $footer[] = $this->GenerateEmptyMsg();
        }
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
