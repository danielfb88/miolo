class gridRelGeral extends MDataGrid
{
    function __construct()
    {
        global $MIOLO,$action;
        
        $this->SetFilter(false);
        $this->SetIndex(1);
        $funcionario = $MIOLO->GetBusiness('rh','funcionario');
        $query = $funcionario->listGeral();
        $columns = array(
            new DataGridColumn('idfuncionario','Id','left', true, '',false),
            new DataGridColumn('idvinculo','Matrícula','left', false, '8%',true),
            new DataGridColumn('nome','Nome','left', false, '40%',true),
            new DataGridColumn('regimejuridico','Regime','left', false, '6%',true),
            new DataGridColumn('situacao','Situacao','left', false, '20%',true),
            new DataGridColumn('cargo','Cargo','left', false, '15%',true),
            new DataGridColumn('jornada','Jornada','left', false, '15%',true),
         );
        parent::__construct($query, $columns, $MIOLO->getCurrentURL(),20);
        
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Relatório Geral');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
