class gridCedidos extends MDataGrid2
{
    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $selData = Form::GetFormValue('dataCedidos');

        if ( !( (is_null($selData)) or (empty($selData)) ) )
        {
            $columns = array(
                new DataGridColumn('idVinculo','Matrícula','left', true,'8%'),
                new DataGridColumn('nome','Nome','left', true,'35%'),
                new DataGridColumn('dataInicio','Data Início','left', true,'10%'),
                new DataGridColumn('dataFim','Data Fim','left', true,'10%'),
                new DataGridColumn('tipoOnus','Tipo de Ônus','left', true,'5%'),
                new DataGridColumn('tipoCessao','Tipo de Cessão','left', false,'10%'),
                new DataGridColumn('descricao','Descrição','center', false,'5%'),
                new DataGridColumn('instituicao','Instituição','center', true,'8%'),             
            );
            $objCessoes = $MIOLO->GetBusiness('rh','cessao');
            $query = $objCessoes->listCessoes($selData);
            $href_grid = $MIOLO->GetActionURL($module,$self);
            parent::__construct($query, $columns, $href_grid,15);
            $this->SetTitle('Relatório de Servidores Cedidos');
            $this->SetClose(null);
            $this->SetFilter(false);
            $this->SetIndex(0);
            $this->SetLinkType('hyperlink');
        }
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        {
            $footer[] = $this->GenerateEmptyMsg();
        }
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
