MIOLO::Import('modules::rh::controls::linksetor');
/**
 * Grid Setor
 * Grid de uso geral para selecionar Setores
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */

class gridSetor extends DataGrid2
{
    /**
     * Base URL
     * @var string 
     */
    var $listURL;

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $linksetor = new LinkSetor('linksetor','%0%');
        $columns = array(
      new DataGridColumn('idsetor','ID','right', true,'10%'),
      new DataGridControl($linksetor,'nome','Nome','left', true,'90%')
       
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('nome');
        $nome = empty($filter) ? 'A Definir' : $filter;
        $this->AddFilterText('nome','Nome',$nome);
        $this->SetIndex(1);
        $objsetor = $MIOLO->GetBusiness('rh','setor');
        $query = $objsetor->ListByNomeSetor(strtoupper("'$nome%'"));

        $href_grid = $MIOLO->GetActionURL($module,$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
          $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
?>
