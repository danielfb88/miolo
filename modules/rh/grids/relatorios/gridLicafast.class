/**
 * Grid Licafast 
 * Grid de uso geral para selecionar Licenças e Afastamentos
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */

class gridLicafast extends DataGrid2
{
    /**
     * Base URL
     * @var string 
     */
    var $listURL;
    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $columns = array(
             //new DataGridColumn('idvinculo','Matrícula','left', true,'10%'),
	     new DataGridColumn('nome','Nome','left', true,'20%'),
	     new DataGridColumn('datainicio','Data início','left', true,'10%'),
	     new DataGridColumn('datafim','Data fim','left', true,'10%'),
      	     new DataGridColumn('descricao','Ocorrência','left', false,'30%'),
 	    // new DataGridColumn('tipolicenca','TipoLicença','left', true,'20%'),
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('data');
        $data = empty($filter) ? 'A Definir' : $filter;
        $this->AddFilterText('data','Data',$data);
        $this->SetIndex(1);
        $objLicafast = $MIOLO->GetBusiness('rh','licafast');
        $query = $objLicafast->getLicAfasts(925, $data);
        $href_grid = $MIOLO->GetActionURL($module,$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
?>
