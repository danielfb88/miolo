/**
 * Grid Formação
 * Grid de uso geral para selecionar formações
 * @package br.org.miolo.ufjf.rh.grids
 */

MIOLO::Import('modules::rh::controls::linkformacao');

class gridFormacao extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $linkformacao = new LinkFormacao('linkformacao','%0%');
        
        $tabelaGeral = $MIOLO->GetBusiness('common','tabelageral');
        $query = $tabelaGeral->ListByTabela('RH_ESCOLARIDADE');
        
        $columns = array(
            new DataGridColumn('idformacao','Cod.','right', true,'10%'),
            new DataGridControl($linkformacao,'formacao','Formação','left', true,'60%'),
            new DataGridColumn('escolaridade','Escolaridade','left', true,'30%',true,$query->chunkResult()),

        );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('formacao');
        $formacao = empty($filter) ? '%' : $filter;
        $this->AddFilterText('formacao','Formação',$formacao);
        $this->SetIndex(1);
        $objFormacao = $MIOLO->GetBusiness('rh','formacao');
        $query = $objFormacao->ListByFormacao(strtoupper("'%$formacao%'"));

        $href_grid = $MIOLO->GetActionURL($module,$self);


        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
?>
