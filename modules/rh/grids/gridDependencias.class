class gridDependencias extends MObjectGrid
{
    /**
     * Constructor
     */
    function __construct($dependente)
    {
        global $MIOLO;
		
        $perms = $MIOLO->getPerms();
        
        $columns = array(
            new MObjectGridColumn('idTipoDependencia','idTipoDependencia','right',false,'0%',false),
            new MObjectGridColumn('tipoDependencia','Tipo','left',true,'60%',true),
            new MObjectGridColumn('dataInicio','Data Início','left',true,'20%',true),
            new MObjectGridColumn('dataFim','Data Fim','left',true,'20%',true),
        );

        $ctlArray = array (
            new FormButton('btnNew', 'Incluir Dependência',$MIOLO->GetActionURL('rh','main:dependente',$dependente->idDependente, array('form'=>'dependencias','idTipoDependencia'=>'new')))
        );
        $href_grid = $MIOLO->GetActionURL('rh','main:dependente',$dependente->idDependente, array('form'=>'dependencias'));
		$action = $MIOLO->GetActionURL('rh','main:dependente',$dependente->idDependente,array('form'=>'dependencias','idTipoDependencia'=>'#0#'));
		$dependente->getDependencias();
        parent::__construct($dependente->dependencias, $columns, $href_grid,25);
        $this->SetTitle("Dependências");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');

        if ( $perms->checkAccess('rh_cadastro_servidor',A_ACCESS) )
        {
            $this->SetControls($ctlArray);
		    $this->AddActionIcon('ID','select.gif',$action);
        }
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
