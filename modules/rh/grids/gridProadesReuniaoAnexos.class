class gridProadesReuniaoAnexos extends MObjectGrid
{
	function __construct($reuniao)
	{

        $MIOLO = MIOLO::getInstance(); 
        
		$href = $MIOLO->getActionURL('rh','main:proades:main','#0#');
		$hrefAnexo = $MIOLO->getActionURL('rh','main:proades:reuniao:anexo',$reuniao->idReuniao,array('idAnexo'=>'#0#'));

		$columns = array(
				new MObjectGridColumn('idAnexo','Código','center',false,'0%',false),
				new MObjectGridHyperlink('nome','Nome',$hrefAnexo,'100%',true),
        );

        $reuniao->retrieveAssociation('anexos');

		parent::__construct($reuniao->anexos,$columns,$href,0);

        $href_dele = $MIOLO->getActionURL( 'rh', 'main:proades:reuniao:main', $reuniao->idReuniao, array( 'form'=>'anexos','idAnexo'=>'#0#','event' => 'btnExcluir:click' ) );

        $this->addActionDelete( $href_dele );

        $this->setTitle("Anexos");
		$this->SetLinkType('hyperlink');
	}

    function generateHeader()
    {
        return null;
    }


	function GenerateFooter()
	{
		if ( ! $this->data )
		$footer[] = $this->GenerateEmptyMsg();
		$footer[] = new MSeparator();
		$footer[] = $this->GenerateControls();
		return $footer;
	}
}
