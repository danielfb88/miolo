class gridProadesEmAndamento2 extends MDataGrid
{
	function __construct($query)
	{

        $MIOLO = MIOLO::getInstance(); 
        
		$href = $MIOLO->getActionURL('rh','main:proades:campmain','#0#');

		$columns = array(
				new MDataGridColumn('idproades','Código','center',false,'10%',false),
                new MDataGridHyperlink('nome','Setor',$href,'55%',true,NULL,true),
                new MDataGridHyperlink('data','Data Início',$href,'15%',true,NULL,true),
                new MDataGridControl(new MLabel(''),'AT','AT','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'RP','RP','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'FD','FD','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'ED','ED','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'P','P','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'A','A','center',true,'5%'),
        );

		$hrefGrid = $MIOLO->GetActionURL('rh','main:proades:campfind');

		parent::__construct($query,$columns,$hrefGrid,0);

        $this->setRowMethod('gridProadesEmAndamento2','rowMethod');

		$this->SetFilter(false);

		$this->SetIndex(1);

		$this->SetLinkType('hyperlink');
	}

	function GenerateFooter()
	{
		if ( ! $this->data )
		$footer[] = $this->GenerateEmptyMsg();
		$footer[] = new MSeparator();
		$footer[] = $this->GenerateControls();
		return $footer;
	}

    function rowMethod($j,$row, $actions, $columns)
    {
        $MIOLO = MIOLO::getInstance(); 

        $idProades = $row[0];
        $proades = $MIOLO->getBusiness('rh','proades');
        $proades->getById($idProades);

		for ( $i = 1; $i < 4; $i++ )
		{
			$reuniao =  $proades->getReuniaoByNum($i);
			if ( $reuniao )
			{
				$assuntos = $reuniao->listAssuntos();
				if ( ! $assuntos->eof() )
				{
					$lblAssuntos .= "$i ";
				}
				$resultados = $reuniao->listResultados();
				if ( ! $resultados->eof() )
				{
					$lblResultados .= "$i ";
				}
				$fatores = $reuniao->listFatores();
				if ( ! $fatores->eof() )
				{
					$lblFatores .= "$i ";
				}
				$encaminhamentos = $reuniao->listEncaminhamentos();
				if ( ! $encaminhamentos->eof() )
				{
					$lblEncaminhamentos .= "$i ";
				}
				$presentes = $reuniao->listPresentes();
				if ( ! $presentes->eof() )
				{
					$lblPresentes .= "$i ";
				}
				$ausentes = $reuniao->listAusentes();
				if ( ! $ausentes->eof() )
				{
					$lblAusentes .= "$i ";
				}
			}
		}
        $columns['AT']->control[$j]->setValue($lblAssuntos);
        $columns['RP']->control[$j]->setValue($lblResultados);
        $columns['FD']->control[$j]->setValue($lblFatores);
        $columns['ED']->control[$j]->setValue($lblEncaminhamentos);
        $columns['P']->control[$j]->setValue($lblPresentes);
        $columns['A']->control[$j]->setValue($lblAusentes);
    }
}
