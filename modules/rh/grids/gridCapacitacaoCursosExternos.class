class gridCapacitacaoCursosExternos extends MDataGrid
{


	function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $columns = array(
            new MDataGridColumn('idcurso','Num','center', false,'5%',false),
            new MDataGridColumn('nome','Nome do Curso ou Evento (Externo)','left', false,'55%',true),
			new MDataGridColumn('instituicao','Instituição','left', false,'40%',true),
        );

		$action = $MIOLO->getActionURL($module,'main:capacitacao:cursosexternos:main',"#0#",array('form'=>'dados'));

        $href_grid = $MIOLO->getActionURL($module,$self);

        $objCurso = $MIOLO->getBusiness($module,'capacitacaocurso');

        $filter = MForm::getFormValue('curso');

        parent::__construct($objCurso->listAllExternos($filter),$columns,$href_grid,55);

        $this->addActionIcon('ID','select.gif',$action);

        $this->setTitle('Cursos ou Eventos Externos de Capacitação');
        $this->setIndex(0);
        $this->setWidth('100%');
        $this->setLinkType('hyperlink');
    }


    function generateHeader()
    {
        if ($this->data)
        {
            $header[] = $this->generateNavigationHeader();
        }
        return $header;
    }


    function generateFooter()
    {
        if (!$this->data) 
		{
           $footer[] = $this->generateEmptyMsg();
		}
        $footer[] = new MSeparator();
        $footer[] = $this->generateControls();
        return $footer;
    }

}
