class gridCessao extends MObjectGrid
{
	protected $objVinculo;
    /**
     * Constructor
     */
    function __construct($objVinculo)
    {
        global $MIOLO;
        $perms = $MIOLO->getPerms();

		$this->objVinculo = $objVinculo;
		
        $columns = array(
            new MObjectGridColumn('ocorrencia->descricao','Ocorrência','left', false,'40%',true),
            new MObjectGridColumn('instituicao->nome','Orgão','left', false,'40%',true),
			new MObjectGridColumn('idPublicacao','Publicação','left', false,'15%',true),
            new MObjectGridColumn('dataInicio','Início','left', false,'10%',true),
            new MObjectGridColumn('dataFim','Fim','left', false,'10%',true),
            
        );

        $ctlArray = array (
            new FormButton('btnNew', 'Incluir exercício em outro órgão',$MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'cessao','id'=>'new')))
        );

        $href_grid = $MIOLO->GetActionURL('rh','main:vinculo');
        parent::__construct($objVinculo->cessoes, $columns, $href_grid,25);
        $this->SetTitle("Exercício em outros órgãos");
        $this->setClose(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        if ( $objVinculo->isAtivo() && $perms->checkAccess('rh_cessao',A_ACCESS) )
        {
            $action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'cessao','id'=>'#3#'));
            $this->AddActionIcon('ID','select.gif',$action);
            $this->SetControls($ctlArray);
        }
        $this->setRowMethod( 'gridCessao', 'MyRowMethod' );
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

    public function myRowMethod( $i, $row, $actions, $columns )
    {
        if ( strlen($row[1]) > 25 )
        {
            $columns[1]->control[$i]->setValue(substr($row[1],0,25)."...");
        }
    }
}
