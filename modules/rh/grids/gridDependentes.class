/**
 * Grid Dependentes
 * Grid de uso geral para selecionar dependentes de funcionarios
 * @package br.org.miolo.ufjf.rh.listing
 */

//MIOLO::Import('modules::rh::controls::linkdependente');

class gridDependentes extends MObjectGrid
{
    /**
     * Base URL
     * @var string 
     */
    var $listURL;

    /**
     * Constructor
     */
    function __construct($objFuncionario)
    {
        global $MIOLO, $item;
        
        $perms = $MIOLO->getPerms();

	    $tabelaGeral = $MIOLO->GetBusiness('common','tabelageral');
	    $query = $tabelaGeral->ListByTabela('RH_PARENTESCO','item2');
        
        $columns = array(

            new MObjectGridColumn('idDependente','Número','left', false,'10%',false),
			new MObjectGridColumn('pessoa->nome','Dependente','left', true,'70%',true),
			new MObjectGridColumn('pessoa->datanasc','Nascimento','left', true,'10%',true),
			new MObjectGridColumn('parentesco','Parentesco','left', true,'20%',true,$query->chunkResult())
        );
        $objFuncionario->getDependentes();

        $ctlArray = array (
          new FormButton('btnNew', 'Incluir Novo Dependente', $MIOLO->GetActionURL('rh','dependente:new',$objFuncionario->idFuncionario))
        );

        $action = $MIOLO->GetActionURL('rh','main:dependente:main','#0#',array("form"=>"dependencias",'idVinculo'=>$item) );
        $href_grid = $MIOLO->GetActionURL('rh','main:funcionario',$objFuncionario->idFuncionario, array('form'=>'dependentes'));
        parent::__construct($objFuncionario->dependentes, $columns, $href_grid,25);
        $this->AddActionIcon('ID','select.gif',$action);
        $this->SetTitle('Dependentes');
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        if ( $perms->checkAccess('rh_cadastro_servidor',A_ACCESS) )
        {
            $this->SetControls($ctlArray);
        }
    }

    function GenerateHeader()
    {
        return NULL;
    }

