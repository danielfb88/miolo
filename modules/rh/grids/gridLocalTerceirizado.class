/**
 * Grid Local Terceirizado
 * Grid de uso geral para selecionar locais de trabalho
 * @package br.org.miolo.ufjf.rh.grids
 */

MIOLO::Import('modules::rh::controls::linklocalterceirizado');

class gridLocalTerceirizado extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linklocalterceirizado = new LinkLocalTerceirizado('linklocalterceirizado','%0%');
        $columns = array(
        	new DataGridColumn('idlocalterceirizado','Id do local','right', true, '10%',false),
           	new DataGridControl($linklocalterceirizado,'nome','Local de Trabalho','left', true, '50%',true),
           	new DataGridColumn('idsetor','Id do Setor','right', true, '10%',false),
           	new DataGridColumn('nomesetor','Setor','left', true, '50%',true)
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('nome');
        $nome = empty($filter) ? '%' : $filter;
        $this->AddFilterText('nome','Local de Trabalho',$nome);
        $this->SetIndex(1);
        $objLocalTerceirizado = $MIOLO->GetBusiness('rh','localterceirizado');
        $query = $objLocalTerceirizado->ListAllByNomeLocal(strtoupper("'%$nome%'"));

        $href_grid = $MIOLO->GetActionURL('rh',$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
?>
