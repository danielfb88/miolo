/**
 * Grid Referencias
 * Grid de uso geral para selecionar referencias de classe
 * @package br.org.miolo.ufjf.rh.listing
 */
class gridReferencia extends MObjectGrid
{
	protected $objClasse;
    /**
     * Constructor
     */
    function __construct($objClasse)
    {
        global $MIOLO, $module,$self ;
		$this->objClasse = $objClasse;
		
        $columns = array(
            new MObjectGridColumn('idReferencia','Número','right', false,'0%',false),
            new MObjectGridColumn('nivelPadrao','Nível Padrão','left', false,'100%',true),
        );

// controles no rodape
        $ctlArray = array (
            new MButton('btnNew', 'Incluir Novo Nível Padrão',$MIOLO->GetActionURL('rh','main:classe',$objClasse->idClasse, array('form'=>'referencias','id'=>'new')))
        );

        /*foreach ( $objClasse->referencias as $ref )
        {
            $aux[] = $ref;
        }
        $objClasse->referencias = $aux;*/
        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($objClasse->referencias, $columns, $href_grid,25);
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->SetControls($ctlArray);
		$action = $MIOLO->GetActionURL($module,$self,$objClasse->idClasse,array('form'=>'referencias','id'=>'#0#'));
		$this->AddActionIcon('ID','select.gif',$action);
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
