/**
 * Grid Grupo Ocorrência 
 * Grid de uso geral para selecionar Grupos Ocorrência
 * @package br.org.miolo.ufjf.rh.grids
 */

MIOLO::Import('modules::rh::controls::linkgrupoocorrencia');

class gridGrupoOcorrencia extends DataGrid2
{
    /**
     * Base URL
     * @var string 
     */
    var $listURL;

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $linkgrupoocorrencia = new Linkgrupoocorrencia('linkgrupoocorrencia','%0%');
        $columns = array(
             new DataGridColumn('idgrupoocorrencia','Código','center', true,'10%'),
	     new DataGridControl($linkgrupoocorrencia,'grupoocorrencia','Descricao','left', true,'90%')
       
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('descricao');
        $descricao = empty($filter) ? '%' : $filter;
        $this->AddFilterText('descricao','Descricao',$descricao);
        $this->SetIndex(1);
        $objGrupoOcorrencia = $MIOLO->GetBusiness('rh','grupoocorrencia');
        $query = $objGrupoOcorrencia->ListByGrupoOcorrencia(strtoupper("'%$descricao%'"));

        $href_grid = $MIOLO->GetActionURL($module,$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
?>
