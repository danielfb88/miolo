/**
 * Grid Períodos Aquisitivos
 * Grid de uso geral para selecionar períodos aquisitivos de vínculo
 * @package br.org.miolo.ufjf.rh.grids
 */

class gridPeriodoAquisitivo extends MDataGrid
{
	protected $objVinculo;
    /**
     * Constructor
     */
    function __construct($objVinculo)
    {
        global $MIOLO, $self;

        $perms = $MIOLO->getPerms();
        $login = $MIOLO->getLogin();
        
		$this->objVinculo = $objVinculo;
        
        $columns = array(
            new MDataGridColumn('idvinculo','Vínculo','right',false,'0%',false),
            new MDataGridColumn('datainicio','Início','center',false,'14%',true),
            new MDataGridColumn('datafim','Fim','center',false,'14%',true),
            new MDataGridColumn('totaldias','Dias','center',false,'5%',true),
            new MDataGridColumn('usufruidos','Dias Usufruídos','center',false,'13%',true),
            new MDataGridColumn('faltas','Faltas','center',false,'5%',true),
            new MDataGridColumn('prescricao','Prescrição','center',false,'14%',true),
            new MDataGridColumn('inicioferias','Início Férias','center',false,'14%',true),
            new MDataGridColumn('fimferias','Fim Férias','center',false,'14%',true),
            new MDataGridColumn('totalferias','Total','center',false,'5%',true),
        );
        
        $this->SetFilter(false);
        $this->SetIndex(1);

// controles no rodape
        $ctlArray = array (
            new FormButton('btnNew', 'Abrir Período Aquisitivo',$MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'periodoaquisitivo','id'=>'new')))
        );

        $href_grid = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array("form"=>"periodoaquisitivo"));
        parent::__construct($objVinculo->listPeriodosAquisitivosFerias(), $columns, $href_grid,25);
        $this->SetTitle("Períodos Aquisitivos");
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        
		$action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'periodoaquisitivo','id'=>'#1#',"exec"=>"editarperiodo"));
		$this->AddActionIcon('ID','select.gif',$action);
        
        if ( $objVinculo->isAtivo() && $perms->checkAccess('rh_periodo_aquisitivo',A_ACCESS) )
        {
            $this->SetControls($ctlArray);
        }
    }

    function GenerateHeader()
    {
        return NULL;
    }

    
}
?>
