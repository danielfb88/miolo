/**
 * Grid Ocorrências
 * Grid de uso geral para selecionar ocorrências de um grupo ocorrência
 * @package br.org.miolo.ufjf.rh.listing
 */

class gridOcorrencia extends ObjectGrid
{
    /**
     * Base URL
     * @var string 
     */
    var $listURL;

    /**
     * Constructor
     */
    function gridOcorrencia($objGrupoOcorrencia)
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $columns = array(
            new ObjectGridColumn('idOcorrencia','Id','left', false,'5%',true),
            new ObjectGridColumn('descricao','Ocorrência','left', false,'95%',true),
        );
		$this->AddFilterText(0,'Id Ocorrência:','');		
		$this->AddFilterText(1,'Descrição:','');		
        $this->SetFilter(true);
        //$this->SetIndex(1);

// controles no rodape
        $ctlArray = array (
          new FormButton('btnNew', 'Incluir Nova Ocorrência', $MIOLO->GetActionURL('rh','main:grupoocorrencia',$objGrupoOcorrencia->idGrupoOcorrencia,array('form'=>'ocorrencia','id'=>'new')))
        );

        $action = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$objGrupoOcorrencia->idGrupoOcorrencia,array('form'=>'ocorrencia','id'=>'%0%'));
        $this->AddActionIcon('ID','select.gif',$action);

        $href_grid = $MIOLO->GetActionURL($module,$self,$objGrupoOcorrencia->idGrupoOcorrencia,array("form"=>"ocorrencia"));
        parent::__construct($objGrupoOcorrencia->ocorrencias, $columns, $href_grid,25);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->SetControls($ctlArray);
    }

	/*
    function GenerateHeader()
    {
        return NULL;
    }
	*/

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
