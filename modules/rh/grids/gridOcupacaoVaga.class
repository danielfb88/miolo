/**
 * Grid Ocupação de Vagas
 * Grid de uso geral para selecionar ocupação de vagas do vínculo
 * @package br.org.miolo.ufjf.rh.grids
 */

class gridOcupacaoVaga extends ObjectGrid
{
	protected $objVinculo;
    /**
     * Constructor
     */
    function __construct($objVinculo)
    {
        global $MIOLO, $self;
		$this->objVinculo = $objVinculo;
		
        $columns = array(
            new ObjectGridColumn('idVinculo','Vínculo','right',false,'0%',false),
            new ObjectGridColumn('numeroVaga','No. da Vaga','center',false,'20%',true),
            new ObjectGridColumn('dataInicio','Início','center',false,'40%',true),
            new ObjectGridColumn('dataFim','Fim','center',false,'40%',true),
        );

// controles no rodape
        $ctlArray = array (
            new FormButton('btnNew', 'Nova Ocupação de Vaga',$MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'ocupacaovaga','id'=>'new')))
        );

        $href_grid = $MIOLO->GetActionURL('rh',$self);
        parent::__construct($objVinculo->ocupacaoVagas, $columns, $href_grid,25);
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->SetControls($ctlArray);
		$action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'ocupacaovaga','id'=>'#1#'));
		$this->AddActionIcon('ID','select.gif',$action);
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
