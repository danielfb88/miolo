class gridMudancasAmbiente extends MObjectGrid
{
   

    function gridMudancasAmbiente($objVinculo)
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
        
        $columns = array(
            new MObjectGridColumn('dataInicio','Data Início','center', false,'10%',true),
            new MObjectGridColumn('dataFim','Data Fim','center', false,'10%',true),
            new MObjectGridColumn('ambiente->descricao','Ambiente','center', false,'30%',true),
            new MObjectGridColumn('ocorrencia->descricao','Ocorrência','center', false,'45%',true)
        );
        
        $action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'historico','data'=>'#0#'));
        $href_grid = $MIOLO->GetActionURL($module,$self);
        
        $objVinculo->getProvimentos();
        $first = true;
        
        $provimentos = array_reverse($objVinculo->provimentos);
		foreach($provimentos as $prov){
			if ($first){
				$prov->getAmbiente();
				$prov->retrieveAssociation('ocorrencia');
				$list[] = $prov;
				$first= false;
			}
			if (($prov->idGrupoOcorrencia == '6') && (($prov->idOcorrencia=='18') || ($prov->idOcorrencia=='998'))){
				$prov->getAmbiente();
				$prov->retrieveAssociation('ocorrencia');
				$list[] = $prov;
			}
		
		}
        
		$provimentoAtual = $objVinculo->getProvimentoAtual();
        if (!($provimentoAtual->idGrupoOcorrencia == '6') || (!($provimentoAtual->idOcorrencia=='18') && !($provimentoAtual->idOcorrencia=='998'))){
        	
        	$provimentoAtual->getAmbiente();
			$provimentoAtual->retrieveAssociation('ocorrencia');
        	$list[] = $provimentoAtual;
        }
        
        parent::__construct(array_reverse($list),$columns,$href_grid);
        $this->AddActionIcon('ID','select.gif',$action);
        $this->SetTitle('Remoções e Mudanças de Ambiente');
        //$this->SetFilter(false);
        $this->SetIndex(0);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        
        
    }

