class gridGestorCapacitacao extends MObjectGrid
{
	protected $objGestor;
    /**
     * Constructor
     */
    function __construct($objGestor)
    {
        global $MIOLO;
        $perms = $MIOLO->getPerms();

		$this->objGestor = $objGestor;
		$result = $this->objGestor->listAll();
		$x = 0;
		$resultado = $result->result;
		while($resultado[$x])
		{
			$obj = $MIOLO->GetBusiness('rh','gestorcapacitacao');		
			$gestores[$x] = $obj->getById($resultado[$x][0]);
			$x ++;
		}
	
		
        $columns = array(
		new MObjectGridColumn('idUsuario','idUsuario','left', false,'25%',true),
            	new MObjectGridColumn('login','Login','left', false,'25%',true),
		new MObjectGridColumn('dataInicio','Inicio','left', false,'25%',true),
           	new MObjectGridColumn('dataFim','Fim','left', false,'25%',true),
        );


        $href_grid = $MIOLO->GetActionURL('rh','main:vinculo');
        parent::__construct($gestores, $columns, $href_grid,25);
        $this->SetTitle("Gestores");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
	$href_update = $MIOLO->GetActionURL('rh','main:capacitacao:acessocapacitacao','',array('form'=>'gestorEdit','idUsuario'=>'%0%'));
	$this->AddActionUpdate($href_update);
	//$href_update = $MIOLO->GetActionURL('rh','main:capacitacao',$this->objRequisicao->idRequisicao,array('form'=>'gestorDelete','idUsuario'=>'%0%'));
	//$this->AddActionDelete($action);
	$href_dele = $MIOLO->getActionURL( $module, "main:capacitacao:acessocapacitacao", '',array('form'=>'gestorDel','idUsuario'=>'%0%'));
        $this->addActionDelete( $href_dele );

    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
