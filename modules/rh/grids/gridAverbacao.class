class gridAverbacao extends MObjectGrid
{
    protected $objVinculo;

    
    function __construct($objVinculo)
    {
        global $MIOLO, $self;

        $perms = $MIOLO->getPerms();

        $this->objVinculo = $objVinculo;
                      
        $this->objVinculo->calcularTotalDiasDesaverbados();

        $columns = array(
            new MObjectGridColumn('idAverbacao'          ,'idAverbacao'               ,'center',false,'00%',false),
            new MObjectGridColumn('totalDias'            ,'Total de Dias Averbados'   ,'center',false,'20%',true ),
            new MObjectGridColumn('totalDiasDesaverbados','Total de Dias Desaverbados','center',false,'20%',true ),
            new MObjectGridColumn('dataInicio'           ,'Início'                    ,'center',false,'10%',true ),
            new MObjectGridColumn('dataFim'              ,'Fim'                       ,'center',false,'10%',true ),
            new MObjectGridColumn('processo'             ,'Processo'                  ,'center',false,'20%',true ),
            new MObjectGridColumn('tipoTempo'            ,'Tipo'                      ,'center',false,'20%',true )
        );

        $ctlArray = array (
            new FormButton('btnNew', 'Nova Averbação',$MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'averbacao','id'=>'new')))
        );

        $href_grid = $MIOLO->GetActionURL('rh',$self);

        parent::__construct($objVinculo->averbacoes, $columns, $href_grid, 25);

        $this->SetTitle("Averbação Tempo de Serviço");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');

        //$this->setRowMethod( 'averbacao', 'getDiasDesaverbados' );

        // caso ele esteja ativo e o operador tenha acesso, permite a inclusão de uma nova averbação
        //if ( $objVinculo->isAtivo() && $perms->checkAccess('rh_averbacao',A_ACCESS) )
        if ( $perms->checkAccess('rh_averbacao',A_ACCESS) )
        {
            $this->SetControls($ctlArray);
        }

        $action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'averbacao','id'=>'#0#'));

        $this->AddActionIcon('ID','select.gif',$action);
    }


    function GenerateHeader()
    {
        return NULL;
    }


    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }


}
