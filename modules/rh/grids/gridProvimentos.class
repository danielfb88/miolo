class gridProvimentos extends MDataGrid
{
    /**
     * Base URL
     * @var string 
     */
    var $listURL;

    /**
     * Constructor
     */
    function gridProvimentos($objVinculo)
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $columns = array(
            new MDataGridColumn('datainicio','Data Início','right', false,'15%',true),
            new MDataGridColumn('datafim','Data Fim','right', false,'15%',true),
            new MDataGridColumn('sigla','Setor','center', false,'15%',true),
            new MDataGridColumn('descricao','Ocorrência','left', false,'70%',true)
        );
        
        
        $action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'provimentos','data'=>'#0#'));

        $href_grid = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'provimentos'));
        parent::__construct($objVinculo->listProvimentos(), $columns, $href_grid,25);
        $this->AddActionIcon('ID','select.gif',$action);
        $this->SetTitle('Provimentos');
        $this->SetFilter(false);
        $this->SetIndex(0);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
    }

