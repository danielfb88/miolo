class gridProadesEmAndamento extends MDataGrid
{
	function __construct($query)
	{

        $MIOLO = MIOLO::getInstance(); 
        
		$href = $MIOLO->getActionURL('rh','main:proades:campmain','#0#');

		$columns = array(
				new MDataGridColumn('idproades','Código','center',false,'10%',false),
                new MDataGridHyperlink('nome','Setor',$href,'65%',true,NULL,true),
                new MDataGridHyperlink('data','Data Início',$href,'15%',true,NULL,true),
                new MDataGridControl(new MLabel(''),'CS','CS','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'OB','OB','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'MT','MT','center',true,'5%'),
                new MDataGridControl(new MLabel(''),'ET','ET','center',true,'5%'),
        );

		$hrefGrid = $MIOLO->GetActionURL('rh','main:proades:campfind');

		parent::__construct($query,$columns,$hrefGrid,0);

        $this->setRowMethod('gridProadesEmAndamento','rowMethod');

		$this->SetFilter(false);

		$this->SetIndex(1);

		$this->SetLinkType('hyperlink');
	}

	function GenerateFooter()
	{
		if ( ! $this->data )
		$footer[] = $this->GenerateEmptyMsg();
		$footer[] = new MSeparator();
		$footer[] = $this->GenerateControls();
		return $footer;
	}

    function rowMethod($i,$row, $actions, $columns)
    {
        $MIOLO = MIOLO::getInstance(); 

        $idProades = $row[0];
        $proades = $MIOLO->getBusiness('rh','proades');
        $proades->getById($idProades);
        $query = $proades->listMembrosEquipeCoordenacao();

        $membros = count($query->result);

        if ( $membros > 1 )
        {
            $columns['CS']->control[$i]->setValue('*');
        }

        if ( $proades->objetivos )
        {
            $columns['OB']->control[$i]->setValue('*');
        }

        $proades->retrieveAssociation('metas');
        if ( count($proades->metas) > 0  )
        {
            $columns['MT']->control[$i]->setValue('*');
        }

        $query = $proades->listEquipesDeTrabalho();
        if ( ! $query->eof() )
        {
            $columns['ET']->control[$i]->setValue('*');
        }


    }
}
