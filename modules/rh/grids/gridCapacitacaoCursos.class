class gridCapacitacaoCursos extends MDataGrid
{
    var $listURL;

    function __construct()
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $columns = array(
            new MDataGridColumn('idcurso','Num','left', false,'5%',true),
            new MDataGridColumn('nome','Nome','left', false,'95%',true),
        );
        
        $action = $MIOLO->getActionURL('rh','main:capacitacao:cursos:main',"#0#",array('form'=>'dados'));

        $href_grid = $MIOLO->getActionURL($module,$self);
        $objCurso = $MIOLO->getBusiness('rh','capacitacaocurso');
        $filter = MForm::getFormValue('curso');
        parent::__construct($objCurso->listAll($filter), $columns, $href_grid,20);
        $this->addActionIcon('ID','select.gif',$action);
        $this->setTitle('Cursos/Eventos de Capacitação');
        $this->setFilter('D');
        $this->setIndex(0);
        $this->setWidth('100%');
        $this->setLinkType('hyperlink');
    }

    function generateHeader()
    {
        if ($this->data)
        {
            $header[] = $this->generateNavigationHeader();
        }

        return $header;

    }

    function generateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->generateEmptyMsg();
        $footer[] = new MSeparator();
        $footer[] = $this->generateControls();
        return $footer;
    }

}
