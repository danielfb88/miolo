class gridCargoConfianca extends MDataGrid2
{


    function __construct()
	{
        global $module;
        $MIOLO = MIOLO::getInstance();

        $obj = $MIOLO->GetBusiness($module,'cargoconfianca');
        $qy = $obj->ListAll();
        if ($qy->eof())
        {
    		parent::__construct($qy,null,null);
        }
        else
        {
            $hrefindex = $MIOLO->getActionURL($module,'main:cargoconfianca','#0#');
            $hrefgrid  = $MIOLO->GetActionURL($module,'cargoconfianca:find','%0%');
            $columns = array(
                             //new MDataGridColumn('idcargoconfianca'          ,''            ,NULL    ,false,' 0%',false),
                             new MDataGridColumn('descricao','Descrição','left',false,'100%')
                       );
    		parent::__construct($qy,$columns,$hrefgrid,35,0);

            $this->addActionUpdate($hrefindex);
    		$this->SetFilter(false);
    		$this->SetLinkType('hyperlink');
        }
    } // __construct


}
