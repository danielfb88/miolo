class gridHistorico extends MObjectGrid
{
	protected $objVinculo;

	
	function __construct($objVinculo)
    {
        global $MIOLO;
        $perms = $MIOLO->getPerms();

		$this->objVinculo = $objVinculo;
		
        $columns = array(
			new MObjectGridColumn('idHistorico','Id','left', false,'20%',false),
            new MObjectGridColumn('dataInicio','Início','center', false,'15%',true),
            new MObjectGridColumn('dataFim','Fim','center', false,'15%',true),
            new MObjectGridColumn('obs','Observação','left', false,'70%',true),
        );

        $ctlArray = array (
            new FormButton('btnNew','Incluir Observação',$MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'historicos','id'=>'new')))
        );

        $href_grid = $MIOLO->GetActionURL('rh','main:vinculo');
        parent::__construct($objVinculo->historicos, $columns, $href_grid,55);
        $this->SetTitle("Histórico");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        //$this->setRowMethod('gridHistorico','LittleTaste');
        $this->SetLinkType('hyperlink');
        if ( $perms->checkAccess('rh_historicos',A_ACCESS) )
        {
            $this->SetControls($ctlArray);
		    $action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo,array('form'=>'historicos','id'=>'#0#'));
		    $this->AddActionIcon('ID','select.gif',$action);
        }
    }


    public function LittleTaste($i,$row,$actions,$columns)
    {
		//$temp = number_format(str_replace(',','.',$row[8]),2,',','.');//formatação monetária
		$temp = substr($row[3],0,70)." ... ";
		$columns[3]->control[$i]->setValue($temp);
	}


    function GenerateHeader()
    {
        return NULL;
    }


    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
