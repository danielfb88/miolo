class gridProrrogacoes extends MObjectGrid
{
    function gridProrrogacoes($objVinculo)
    {
        global $MIOLO;

        $perms = $MIOLO->getPerms();
        
        $columns = array(
            new MObjectGridColumn('dataFim','Data Fim','left', false,'100%',true),
            
        );

// controles no rodape
        $ctlArray = array (
            new FormButton('btnNew', 'Incluir Nova Prorrogação',$MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'contrato','id'=>'new')))
        );

        $action = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'contrato','id'=>'#0#'));

        $href_grid = $MIOLO->GetActionURL('rh','main:vinculo',$objVinculo->idVinculo, array('form'=>'contrato'));
        parent::__construct($objVinculo->prorrogacoesContrato, $columns, $href_grid,25);
        if ( $perms->checkAccess('rh_prorrogacao',A_ACCESS) )
        {
            $this->AddActionIcon('ID','select.gif',$action);
            $this->SetControls($ctlArray);
        }
		$this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Prorrogações de contrato temporário');
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->EventHandler();
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
