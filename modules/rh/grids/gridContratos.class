/**
 * Grid Contratos
 * Grid de uso geral para selecionar Contratos
 * @package br.org.miolo.ufjf.rh.grids
 */
MIOLO::Import('modules::rh::controls::linkcontrato');
class gridContratos extends MDataGrid
{

	function gridContratos()
    {   
        global $MIOLO,$self,$action;
	
        $linkcontrato = new LinkContrato('linkcontrato','%0%');
        $this->SetFilter(false);
        $filterNumero = Form::GetFormValue('numero');
        $filterInstituicao = Form::GetFormValue('instituicao');
        $instituicao = Util::NVL($filterInstituicao, '%');
        $this->AddFilterText('instituicao','Instituicao',$instituicao);
        $this->AddFilterText('numero','Numero',$filterNumero);
        $this->SetIndex(1);         
        $objContrato = $MIOLO->GetBusiness('rh','contrato');
        $query = $objContrato->ListByNumeroOrInstituicao(strtoupper("'%$instituicao%'"), $filterNumero);
        $hrefAction = $MIOLO->GetActionURL('rh','main:contrato','#0#');	
        $columns = array(
            new DataGridControl($linkcontrato,'numcontrato','Número','left', true, '15%',true),
            //new MDataGridColumn('numcontrato','Número do Contrato','left',false,'15%',true),
            new MDataGridColumn('datainicio','Data Início','center', false,'10%',true),
            new MDataGridColumn('datafim','Data Fim','center', false,'10%',true),
            new MDataGridColumn('nomeinst','Instituição','left', false, '45%',true),
        	new MDataGridColumn('nomesetor','Setor','left', false, '20%',true),
         );
        
        $href_grid = $MIOLO->GetActionURL('rh',$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function generateFooter()
    {
        if (!$this->data) 
		{
           $footer[] = $this->GenerateEmptyMsg();
		}
        return $footer;
    }

}
?>
