MIOLO::Import('modules::rh::controls::linkobject');

class LinkContrato extends LinkObject
{
    public function __construct($name='', $classe)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('rh','contrato');
        parent::__construct($name,$classe,'contrato_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('rh','contrato');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('rh','main:contrato',$this->object->idContrato);
        $this->imagelink->SetAction('rh','main:contrato',$this->object->idContrato);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->numContrato);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('rh','main:contrato:new');
        $this->hyperlink->SetText('Inserir Novo Contrato');
        $this->imagelink->SetAction('rh','main:contrato:new');
    }
}
