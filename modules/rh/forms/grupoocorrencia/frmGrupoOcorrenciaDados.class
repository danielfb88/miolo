/**
 * Formulário de edição de dados grupo ocorrência
 */
class frmGrupoOcorrenciaDados extends Form
{
	/**
	 * Objeto grupoocorrencia
	 * @access protected
	 * @var BusinessRhGrupoOcorrencia
	 */
	protected $objGrupoOcorrencia;

    function __construct($objGrupoOcorrencia)
    {
        global $MIOLO, $module, $item;
        $this->objGrupoOcorrencia = $objGrupoOcorrencia;
        parent::__construct('Dados Grupo Ocorrência');
        $this->SetClose($MIOLO->GetActionURL($module, 'main:grupoocorrencia', $item));
    
        $this->EventHandler();
    }

    function CreateFields()
    {
       global $MIOLO;
	   
       	$fields = array(
		       //new TextLabel('txtCodigo',$this->objGrupoOcorrencia->idGrupoOcorrencia,'Código'),
                       new TextField('descricao','','Nome','30')
	        );		
        $this->SetFields($fields);
		
		$buttons = array(
			new FormButton('btnSalvar','Enviar')
            );
            
        $this->descricao->AddAttribute('maxlength','30');
        
	$validators = array(
           new RequiredValidator('descricao'),
		);
        $this->SetValidators($validators);
		$this->SetButtons($buttons);
		$this->SetData();
    }

	function SetData()
	{
		$data = $this->objGrupoOcorrencia;
		$this->SetFieldValue('descricao',$data->descricao);
	}

	public function btnSalvar_click()
	{
           global $MIOLO;

		$data = $this->GetData();
		
		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
		$data->descricao = str_replace($caracteres,"",$data->descricao);
		
		if(strlen(trim($data->descricao)) < '5')
		{
			$this->addError('Informe a Descrição');
		}
		else
		{

			$this->objGrupoOcorrencia->SetData($data);
			$this->objGrupoOcorrencia->save();
            		$go = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$this->objGrupoOcorrencia->idGrupoOcorrencia);
	    		$MIOLO->Information('Dados Grupo Ocorrência atualizados com sucesso.', $go );
		}
		

	}

 }
?>
