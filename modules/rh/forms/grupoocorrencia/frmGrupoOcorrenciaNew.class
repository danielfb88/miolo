class frmGrupoOcorrenciaNew extends Form
{

    function __construct()
    {
        $this->Form('Incluir Novo Grupo Ocorrência');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;
       
        $grupoocorrencia = $MIOLO->GetBusiness('rh','grupoocorrencia');
        $fields = array(
            new TextField('idGrupoOcorrencia','','Código','4'),
            new TextField('descricao','','Descrição','30'),
	);
		
        $this->SetFields($fields);
	$buttons = array(
        	new FormButton('btnNew', 'Incluir Grupo Ocorrência')
            );
	$this->SetButtons($buttons);
	
		  $this->idGrupoOcorrencia->AddAttribute('maxlength','4');
        $this->descricao->AddAttribute('maxlength','30');
        
	$validators = array(
           new RequiredValidator('idGrupoOcorrencia'),
           new RequiredValidator('descricao'),
           
           new IntegerValidator('idGrupoOcorrencia'),
		);
        $this->SetValidators($validators);

    }

    	function btnNew_click()
    	{
		global $MIOLO, $page, $module;

		$data = $this->GetData();
		$id = $data->idGrupoOcorrencia;
		
		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
		$data->descricao = str_replace($caracteres,"",$data->descricao);
		
		if(is_numeric($id))
		{
	        	$grupoOcorrencia = $MIOLO->GetBusiness($module,'grupoocorrencia',$id);
			if (strlen(trim($id)) < '1')
			{
				$this->addError('Informe o id do Grupo Ocorrência.');
			}
			elseif($grupoOcorrencia->isPersistent())
			{
				$this->addError('Já existe um registro de Grupo Ocorrência com esse ID. Favor digite outro ID.');
			}
			elseif(strlen(trim($data->descricao)) < '5')
			{
				$this->addError('Informe a Descrição.');
			}
			else
			{
				$grupoOcorrencia->SetData($data);
		        	$grupoOcorrencia->save();
				$go = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$grupoOcorrencia->idGrupoOcorrencia);
	   			$MIOLO->Information('Dados do Grupo Ocorrência inseridos com sucesso.', $go );
			}
		}
		else
		{
			$this->addError('Informe o id Grupo Ocorrência no padrão numérico');
		}
	}


 }
?>
