/**
 * Formulário de edição da Ocorrência do Grupo Ocorrência
 */
class frmGrupoOcorrenciaOcorrencia extends Form
{
	/**
	 * Objeto ocorrencia
	 * @access protected
	 * @var BusinessRhOcorrencia
	 */
	protected $ocorrencia;

    function __construct($objocorrencia)
    {
		global $MIOLO;
		$this->SetClose($MIOLO->GetActionURL('rh','main:grupoocorrencia',$objocorrencia->idGrupoOcorrencia,array('form'=>'ocorrencia')));
		$this->ocorrencia = $objocorrencia;
        parent::__construct('Dados da Ocorrência');
        $this->EventHandler();
    }

    function CreateFields()
    {
       global $MIOLO;

        $situacao = $MIOLO->GetBusiness('rh','situacaofuncional');
		
   	   $fields = array(
	   	   new TextField('idOcorrencia','','Código',3),	
           new TextField('descricao','','Descrição','60'),
           new Selection('idSituacao','','Situação'),
	   	   new TextField('mnemonico','','Mnemônico',3),	
		   new TextField('prazoMaximo','','Prazo máximo',4,'Em dias')
        );
		
        $this->SetFields($fields);

		$query = $situacao->ListAll();
        $this->SetFieldAttr('idSituacao','options',$query->chunkResult());
		
		$buttons = array(
			new FormButton('btnSalvar','Enviar'),
			new FormButton('btnExcluir','Excluir')
            );
	$this->SetButtons($buttons);
	
	$this->idOcorrencia->AddAttribute('maxlength','4');
	$this->idSituacao->AddAttribute('maxlength','4');
	$this->mnemonico->AddAttribute('maxlength','3');
	$this->prazoMaximo->AddAttribute('maxlength','5');
	$this->descricao->AddAttribute('maxlength','60');
	
	$validators = array(
           new RequiredValidator('mnemonico'),
           new RequiredValidator('descricao'),
           
           new IntegerValidator('idOcorrencia'),
		     new IntegerValidator('prazoMaximo')
		);
       $this->SetValidators($validators);

		$this->SetButtonAttr('btnExcluir','visible',$this->ocorrencia->isPersistent());
		$this->SetFieldAttr('idOcorrencia','readonly',$this->ocorrencia->isPersistent());
		$this->SetData();
    }

	function SetData()
	{
		$data = $this->ocorrencia;
		$this->SetFieldValue('idOcorrencia',$data->idOcorrencia);
		$this->SetFieldValue('descricao',$data->descricao);
		$this->SetFieldValue('idSituacao',$data->idSituacao);
		$this->SetFieldValue('mnemonico',$data->mnemonico);
		$this->SetFieldValue('prazoMaximo',$data->prazoMaximo);
	}

	public function btnSalvar_click()
	{
		global $MIOLO;

		$update = $this->ocorrencia->isPersistent();
		$data = new FormData();
		$data->idOcorrencia = $this->GetFormValue('idOcorrencia');
		$data->descricao = $this->GetFormValue('descricao');
		$data->idSituacao = $this->GetFormValue('idSituacao');
		$data->prazoMaximo = $this->GetFormValue('prazoMaximo');
		$data->mnemonico = $this->GetFormValue('mnemonico');
		
		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
		$data->descricao = str_replace($caracteres,"",$data->descricao);
		$data->mnemonico = str_replace($caracteres,"",$data->mnemonico);
		
		if(trim($data->idOcorrencia) == '')
		{
			$this->addError('Informe o Código');
		}
		elseif(!is_numeric($data->idOcorrencia))
		{
			$this->addError('Informe valores numéricos para o campo Código');
		}
		elseif(trim($data->descricao) == '')
		{
			$this->addError('Informe a Descrição');
		}
		elseif(trim($data->mnemonico) == '')
		{
			$this->addError('Informe o Mnemônico');			
		}
		elseif(!is_numeric($data->prazoMaximo))
		{	
			$this->addError('Informe o Prazo Corretamente');
		}
		elseif($data->prazoMaximo < '0')	
		{
			$this->addError('Informe o Prazo Corretamente');
		}
		else
		{
			try 
        		{
        		$this->ocorrencia->SetData($data);
				$this->ocorrencia->save();
            			$go = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$this->ocorrencia->idGrupoOcorrencia, array('form'=>'ocorrencia'));
				if ($update)
				{
	            			$MIOLO->Information('Ocorrência atualizada com sucesso.', $go );
				}
				else
				{
	            			$MIOLO->Information('Ocorrência inserida com sucesso.', $go );
				}
		
		        }
        		catch (Exception $e)
        		{
            			$this->AddError($this->ocorrencia->GetErrors());
        		}
		}
	}
	
	function btnExcluir_click()
	{
        global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$this->ocorrencia->idGrupoOcorrencia,array('form'=>'ocorrencia','id'=>$this->ocorrencia->idOcorrencia,'conf'=>'sim','event'=>'btnExcluir:click'));
		$action_nao = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$this->ocorrencia->idGrupoOcorrencia,array('form'=>'ocorrencia','id'=>$this->ocorrencia->idOcorrencia));

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			$this->ocorrencia->Delete();
			if (!$this->ocorrencia->CheckError())
			{
				$MIOLO->Information('Ocorrência excluída com sucesso',$MIOLO->GetActionURL('rh','main:grupoocorrencia',$this->ocorrencia->idGrupoOcorrencia,array('form'=>'ocorrencia')));
			}
			else
			{
				$MIOLO->Error("Informe o seguinte erro à equipe do CGCO: ".$this->ocorrencia->GetErrors());
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir a ocorrência ".$this->ocorrencia->descricao."?",$action_sim,$action_nao);
		}
	}

 }
?>
