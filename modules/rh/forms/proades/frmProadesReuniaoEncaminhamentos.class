class frmProadesReuniaoEncaminhamentos extends MForm
{
    private $reuniao;
    
	function __construct($reuniao)
	{
        $this->reuniao = $reuniao; 
        
		parent::__construct('Encaminhamentos Dados na Reuni&atilde;o');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $fields = array(
				new MLabel('Provid&ecirc;ncias adotadas para viabilizar o desenvolvimento do Plano de Metas'), 
                new MMultilineField( 'encaminhamento', '', 'Encaminhamento', 25, 5, 50 ),
                new MHiddenField('idEncaminhamento')
        );
        
        $this->SetFields($fields);		

        $buttons = array(
            new MButton('btnSalvar','Enviar')
        );

        $this->setButtons($buttons);
        $this->setButtonAccess();

	}

    function btnEditar_click()
    {
        $idEncaminhamento = $this->getFormValue('idEncaminhamento');
        $encaminhamento = $this->manager->getBusiness('rh','encaminhamento');
        $encaminhamento->getById($idEncaminhamento);

        $this->setFieldValue('encaminhamento',$encaminhamento->encaminhamento);
        $this->setFieldValue('idEncaminhamento',$encaminhamento->idEncaminhamento);
    }

    function btnExcluir_click()
    {
        $idEncaminhamento = $this->getFormValue('idEncaminhamento');
        $encaminhamento = $this->manager->getBusiness('rh','encaminhamento');
        $encaminhamento->getById($idEncaminhamento);

        try
        {
            $encaminhamento->delete();            
            $go = $this->manager->getActionUrl('rh','main:proades:reuniao',$this->reuniao->idReuniao,array('form'=>'encaminhamentos'));
            $this->page->redirect($go);
        }
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
    }

	function btnSalvar_click()
	{
		$data = $this->GetData();
		try
		{
            $encaminhamento = $this->manager->getBusiness('rh','encaminhamento');
            if ( $data->idEncaminhamento )
            {
                $encaminhamento->getById($data->idEncaminhamento);
            }
            $encaminhamento->setData($data);
            $encaminhamento->idReuniao = $this->reuniao->idReuniao;
			$encaminhamento->save();
            $go = $this->manager->getActionUrl('rh','main:proades:reuniao',$this->reuniao->idReuniao,array('form'=>'encaminhamentos'));
            $this->page->redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}

    function setButtonAccess()
    {
        $perms = $this->manager->getPerms();
        foreach ( $this->buttons as $button )
        {
            $this->setButtonAttr($button->name,'visible',$perms->checkAccess('rh_proadesexecutefase2',A_ACCESS));
        }
    }
}
?>
