class frmProadesCoordenacao extends MForm
{
    private $proades;
    
	function __construct($proades)
	{
        $this->proades = $proades; 
        
		parent::__construct('Coordena&ccedil;&atilde;o Setorial de Avalia&ccedil;&atilde;o');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $setor = $this->manager->getBusiness('common','setor');
        $session = $this->manager->session;
        $idSetor = $setor->getSetoresFilhos($session->getValue('idSetor'));

        if ( $session->getValue('idSetor') == 1337 )
        {
            //se for a chefia de gabinete entao tem que juntar com a secretaria geral
            $idSetor[] = 1346;
            $idSetor[] = 1306;
        }

        $funcionario = $this->manager->getBusiness('rh','funcionario');
        $qryServidores = $funcionario->listBySetor($idSetor);

        while ( ! $qryServidores->eof() )
        {
            $vinculo = $qryServidores->fields("idVinculo");

            $objVinculo = $this->manager->getBusiness('rh','vinculo');
            $objVinculo->getById($vinculo);
            if ( $objVinculo->isAtivo() )
            {
                $membros[] = array($vinculo,$qryServidores->fields('nome'));
            }
            $qryServidores->moveNext();
        }


        if ( count($membros) > 0 )
        {
            $fields = array(
                    new MSelection('idVinculo','','TAE',$membros),
                    new MHiddenField('idEquipe',$this->proades->getIdEquipeCoordenacao())
            ); 
            $buttons = array(
                new MButton('btnSalvar','Enviar')
            );
            $this->setButtons($buttons);
        }
        else
        {
            $fields = array(
                    new MLabel("<b>Todos os TAE's j&aacute; est&atilde;o vinculados a uma equipe de trabalho.</b>")
            );
            $this->setShowPostButton(FALSE);
        }
        
        $this->SetFields($fields);		
        $this->setButtonAccess();
	}

	function btnSalvar_click()
	{
		$data = $this->GetData();
		try
		{
            $membroCoord = $this->manager->getBusiness('rh','membro');
            $membroCoord->setData($data);
            $membroCoord->beginTransaction();
			$membroCoord->save();
            //permitir o acesso ao proades
            $usuario = $this->manager->getBusiness('common','usuario');
            $usuario->getByLogin(trim($membroCoord->idVinculo));
            $acesso = $this->manager->getBusiness('rh','acessoproades');
            $acesso->idProades = $this->proades->idProades;
            $acesso->idUsuario = $usuario->idUsuario;
            $acesso->setTransaction($membroCoord->getTransaction());
            $acesso->save();

            $grupo = $this->manager->getBusiness('common','grupo');
            $grupo->getByGroup('RH_PROADESSEGUNDAFASE');

            $usuario->addGroup($grupo);
            $usuario->setTransaction($membroCoord->getTransaction());
            $usuario->save();

            $membroCoord->endTransaction();

            $go = $this->manager->getActionUrl('rh','proades:main',$this->proades->idProades,array('form'=>'fase1','subform'=>'coord','cs'=>'cadastro'));
            $this->page->redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}

	function btnExcluir_click()
	{
        $idMembro = $this->getFormValue('idMembro');
        $membro = $this->manager->getBusiness('rh','membro');
        $membro->getById($idMembro);

		try
		{
            $this->proades->removeAcessoUsuario($membro,'RH_PROADESSEGUNDAFASE');
			$membro->delete();
            $go = $this->manager->getActionUrl('rh','main:proades:main',$this->proades->idProades,array('form'=>'fase1','subform'=>'coord','cs'=>'cadastro'));
            $this->page->redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}

    function btnFinalizar_click()
    {
        try
        {
            //$this->proades->habilitaPrimeiraFase();
            $go = $this->manager->getActionUrl('rh','main:proades:portaria',$this->proades->idProades,array('form'=>'fase1'));
            $this->manager->information("Clique em OK para fornecer as informa&ccedil;&otilde;es da portaria de cria&ccedil;&atilde;o da coorden&ccedil;&atilde;o setorial.",$go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
    }

    function setButtonAccess()
    {
        $perms = $this->manager->getPerms();
        foreach ( $this->buttons as $button )
        {
            $this->setButtonAttr($button->name,'visible',$perms->checkAccess('rh_proadesexecute',A_ACCESS));
        }
    }
}
?>
