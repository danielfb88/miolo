class frmProadesDados extends MCompoundForm
{
	protected $proades;

	function __construct()
	{
        $MIOLO = Miolo::getInstance();
		$this->proades = $MIOLO->getBusiness('rh','proades');
		parent::__construct("Dados PROADES");
		//$this->SetTitle($this->grupo->grupo);
	}

	function createFields()
	{
		$ui = $this->manager->getUI();
		$form = MForm::getFormValue('form');
        
        $login = $this->manager->getLogin();

        
		if ($this->_form[0])
		{
			$this->_form[0]->SetClose($this->manager->GetActionURL('rh','main:proades',$this->proades->idProades));
		}
        
		$action = $this->manager->getContext()->action;
		$this->_panel[0] = $panel = new MActionPanel('pn1Compound','Opções','',false);
        $panel->SetIconType('small');

		
            $panel->AddAction('Fatores Dificultadores',$ui->GetImage('common','groups.png'),'rh',$action,$this->proades->idProades,array("form"=>"fd"));
            $panel->AddAction('Metas Pactuadas',$ui->GetImage('common','groups.png'),'rh',$action,$this->proades->idProades,array("form"=>"mp"));
            $panel->AddAction('Fatores por Unidade',$ui->GetImage('common','groups.png'),'rh',$action,$this->proades->idProades,array("form"=>"fu"));
            $panel->AddAction('Metas n&atilde;o Atingidas',$ui->GetImage('common','groups.png'),'rh',$action,$this->proades->idProades,array("form"=>"na"));
            $panel->AddAction('Metas Atingidas',$ui->GetImage('common','groups.png'),'rh',$action,$this->proades->idProades,array("form"=>"ma"));
            $panel->AddAction('Taes n&atilde;o habilitados',$ui->GetImage('common','groups.png'),'rh',$action,$this->proades->idProades,array("form"=>"nh"));

        
        //forms
		switch ($form)
		{
            case 'fd':
                $this->_form[0] = $ui->GetForm('rh','frmProadesDadosFatores',$this->proades,'proades');
            break;
            case 'mp':
                $this->_form[0] = $ui->GetForm('rh','frmProadesDadosMetas',$this->proades,'proades');
            break;
            case 'fu':
                $this->_form[0] = $ui->GetForm('rh','frmProadesDadosFatoresUnidades',$this->proades,'proades');
            break;
            case 'na':
                $this->_form[0] = $ui->GetForm('rh','frmProadesDadosNaoAtingidas',$this->proades,'proades');
            break;
            case 'ma':
                $this->_form[0] = $ui->GetForm('rh','frmProadesDadosAtingidas',$this->proades,'proades');
            break;
            case 'nh':
                $this->_form[0] = $ui->GetForm('rh','frmProadesDadosNaoHabilitados',$this->proades,'proades');
            break;
		}

		// info

	}
}
?>
