class frmProadesReuniaoDecisoes extends MForm
{
    private $reuniao;
    
	function __construct($reuniao)
	{
        $this->reuniao = $reuniao; 
        
		parent::__construct('Decis&otilde;es/Informa&ccedil;&otilde;es da Reuni&atilde;o');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $fields = array(
                new MMultilineField( 'decisao', '', 'Decis&atilde;o / Informa&ccedil;&atilde;o', 25, 5, 50 ),
                new MHiddenField('idDecisao')
        );
        
        $this->SetFields($fields);		

        $buttons = array(
            new MButton('btnSalvar','Enviar')
        );

        $this->setButtons($buttons);
        $this->setButtonAccess();
	}

    function btnEditar_click()
    {
        $idDecisao = $this->getFormValue('idDecisao');
        $decisao = $this->manager->getBusiness('rh','decisao');
        $decisao->getById($idDecisao);

        $this->setFieldValue('decisao',$decisao->decisao);
        $this->setFieldValue('idDecisao',$decisao->idDecisao);
    }

    function btnExcluir_click()
    {
        $idDecisao = $this->getFormValue('idDecisao');
        $decisao = $this->manager->getBusiness('rh','decisao');
        $decisao->getById($idDecisao);

        try
        {
            $decisao->delete();            
            $go = $this->manager->getActionUrl('rh','main:proades:reuniao',$this->reuniao->idReuniao,array('form'=>'decisoes'));
            $this->page->redirect($go);
        }
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
    }

	function btnSalvar_click()
	{
		$data = $this->GetData();
		try
		{
            $decisao = $this->manager->getBusiness('rh','decisao');
            if ( $data->idDecisao )
            {
                $decisao->getById($data->idDecisao);
            }
            $decisao->setData($data);
            $decisao->idReuniao = $this->reuniao->idReuniao;
			$decisao->save();
            $go = $this->manager->getActionUrl('rh','main:proades:reuniao',$this->reuniao->idReuniao,array('form'=>'decisoes'));
            $this->page->redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}

    function setButtonAccess()
    {
        $perms = $this->manager->getPerms();
        foreach ( $this->buttons as $button )
        {
            $this->setButtonAttr($button->name,'visible',$perms->checkAccess('rh_proadesexecutefase2',A_ACCESS));
        }
    }

}
?>
