class frmProadesCampFind2 extends MForm
{
    function __construct()
    {
        parent::__construct("PROADES");
        $this->eventHandler();
    }

    function createFields()
    {
        $ui = $this->manager->getUi();
        $proades = $this->manager->getBusiness('rh','proades');
        $query = $proades->listEmAndamento();

        $grid = $ui->getGrid('rh','gridProadesEmAndamento2',$query);

        $legenda = "
            1: Dados lan&ccedil;ados para a primeira reuni&atilde;o <br>
            2: Dados lan&ccedil;ados para a segunda reuni&atilde;o <br>
            3: Dados lan&ccedil;ados para a terceira reuni&atilde;o <br>
            AT: Assuntos Tratados <br>
            RP: Resultados Parciais<br>
            FD: Fatores Dificultadores<br>
            ED: Encaminhamentos Dados<br>
            P:  Presentes<br>
            A:  Ausentes<br>
        ";

        $fields = array(
                new MLabel('Escolha um setor abaixo para acompanhar o andamento do PROADES.'),
                new ThemeBox('Legenda',$legenda),
                new MSeparator(),
                $grid
            );

        $this->setFields($fields);
    }
}
