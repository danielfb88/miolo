class frmProadesMissaoObjetivos extends MForm
{
    private $proades;
    
	function __construct($proades)
	{
        $this->proades = $proades; 
        
		parent::__construct('A UFJF');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
		$ui = $this->manager->getUi();
        $fields = array(
			new MImageFormLabel('foto', '',$ui->getImage('rh','fundo1.jpg')),

        ); 
        
        $this->SetFields($fields);		
		$this->SetShowPostButton(FALSE);

	}

	function btnSalvar_click()
	{
		$data = $this->GetData();
		try
		{
            $this->proades->missao = $data->missao;
            $this->proades->objetivos = $data->objetivos;
            $this->proades->save();
            $this->addInfo("Miss&atilde;o e Objetivos salvos com sucesso!");
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}
}
