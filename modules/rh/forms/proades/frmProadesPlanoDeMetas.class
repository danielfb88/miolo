class frmProadesPlanoDeMetas extends MForm
{
    private $proades;
    
	function __construct($proades)
	{
        $this->proades = $proades; 
        
		parent::__construct('Plano de Metas da Unidade');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $tabelaGeral = $this->manager->getBusiness('common','tabelageral');
        
        $query = $tabelaGeral->listByTabela('RH_RESULTPROADES');

        $fields = array(
		new MLabel('S&iacute;ntese dos Resultados das Metas'),
                new MLabel('Atingiu: Mais de 70% das Metas'),
                new MLabel('N&atilde;o Atingiu: Menos de 70% das Metas'),
                new MSelection('resultado',$this->proades->resultado,'Resultado',$query->result)
        ); 
        
        $this->SetFields($fields);		

        $buttons = array(
            new MButton('btnSalvar','Enviar')
        );

        $this->setButtons($buttons);
	}

	function btnSalvar_click()
	{
		$data = $this->GetData();
		try
		{
            $this->proades->resultado = $data->resultado;
            $this->proades->save();
            $this->addInfo("Resultado das metas salvo com sucesso!");
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}
}
