/**
 * Form Publicacao
 */
class frmPublicacao extends CompoundForm
{
	public $oid;
    protected $publicacao;
    /**
     * Construtor
     */
    function __construct($objPublicacao)
    {
        global $MIOLO;
        $this->publicacao = $objPublicacao;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('rh','main:publicacao:find'));
        $this->SetTitle($this->publicacao->numero);
        $this->SetIcon($MIOLO->GetUi()->GetImage('rh','publicacao_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $publicacao = $this->publicacao;
        if ($this->oid == NULL) $this->oid = $publicacao->idPublicacao;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
                 $f = $ui->GetForm($module,'frmPublicacaoDados', $publicacao, 'publicacao'); 
                 break;
            case 'excluir'     : 
                 $f = $ui->GetForm($module,'frmPublicacaoDel', $publicacao, 'publicacao'); 
                 break;
        }
        if ($f)
        {
            $f->SetClose($MIOLO->GetActionURL('rh','main:publicacao',$publicacao->idPublicacao));
            $this->_form[0] = $f;
            $page->SetAction($history->Top('action'));
        }

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('rh_publicacao_dados',A_EXECUTE,'Editar',
            $ui->GetImage('rh','edit.png'),'rh',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('rh_publicacao_excluir',A_EXECUTE,'Excluir',
					$ui->GetImage('rh','excluir.png'),'rh',$action, $this->oid, array("form"=>"excluir"));

// info
		$this->_info[0]	= new TextLabel('txtData',$this->publicacao->data,'Data da Publicação');
		$this->_info[1]	= new TextLabel('txtDiplomaLegal',$this->publicacao->diplomaLegal->descricao,'Diploma Legal');
       
	}
}
