/**
 * Formulário de edição de dados da tipoLicAfast
 */
class frmTipoLicAfastDados extends Form
{
	/**
	 * Objeto tipoLicAfast
	 * @access protected
	 * @var BusinessRhTipoLicAfast
	 */
	protected $objTipoLicAfast;

    function __construct($objTipoLicAfast)
    {
		$this->objTipoLicAfast = $objTipoLicAfast;
        parent::__construct('Dados do Tipo LicAfast');
        $this->EventHandler();
    }

    function CreateFields()
    {
	   
		$fields = array(
            new TextField('tipoLicAfast','','TipoLicAfast','25','Máx. 25 caracteres'),
            new TextField('descricao','','Descricao','50','Máx. 50 caracteres'),
        );
		
        $this->SetFields($fields);
		
		$buttons = array(
			new FormButton('btnSalvar','Enviar'),
            );
		$this->SetButtons($buttons);
		
		$validators = array(
			new RequiredValidator('tipoLicAfast'),
			new RequiredValidator('descricao')
		);

		$this->SetValidators($validators);
		$this->SetData();
		$this->tipoLicAfast->AddAttribute('maxlength',25);
      $this->descricao->AddAttribute('maxlength',50);
    }

	function SetData()
	{
		$data = $this->objTipoLicAfast;
		$this->SetFieldValue('tipoLicAfast',trim($data->tipoLicAfast));
		$this->SetFieldValue('descricao',trim($data->descricao));
	}

	public function btnSalvar_click()
	{
       global $MIOLO;
           
		$data = $this->GetData();
		
		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
		$data->tipoLicAfast = str_replace($caracteres,"",$data->tipoLicAfast);
		$data->descricao = str_replace($caracteres,"",$data->descricao);
		
		if(strlen(trim($data->tipoLicAfast)) < '5')
		{
			$this->addError('Informe o Tipo Licafast');
		}
		elseif(strlen(trim($data->descricao)) < '5')
		{
			$this->addError('Informe a Descrição');
		}
		else
		{
			$this->objTipoLicAfast->SetData($data);
			$this->objTipoLicAfast->save();

            		$go = $MIOLO->GetActionURL('rh','main:tipolicafast',$this->objTipoLicAfast->idTipoLicAfast);
	    		$MIOLO->Information('Dados Tipo Licafast atualizados com sucesso.', $go );
		}
	}
 }
?>
