class frmTipoLicAfastNew extends Form
{

    function __construct()
    {
        $this->Form('Incluir Novo TipoLicAfast');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$fields = array(
            new TextField('tipoLicAfast','','Tipo','25','Máx. 25 caracteres'),
            new TextField('descricao','','Descrição','50','Máx. 50 caracteres'),
        );
		
        $this->SetFields($fields);
        
        $this->tipoLicAfast->AddAttribute('maxlength',25);
         $this->descricao->AddAttribute('maxlength',50);
		
		$buttons = array(
        	new FormButton('btnNew', 'Incluir Tipo LicAfast')
            );
		$this->SetButtons($buttons);

		$validators = array(
			new RequiredValidator('tipoLicAfast'),
			new RequiredValidator('descricao')
		);
		$this->SetValidators($validators);

    }

    function btnNew_click()
    {
       
	global $MIOLO,$module;

		$data = $this->GetData();
		$tipolicAfast = $MIOLO->GetBusiness($module,'tipolicafast');

		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
		$data->tipoLicAfast = str_replace($caracteres,"",$data->tipoLicAfast);
		$data->descricao = str_replace($caracteres,"",$data->descricao);
		
		if(strlen(trim($data->tipoLicAfast)) < '5')
		{
			$this->addError('Informe o Tipo Licafast');
		}
		else if(strlen(trim($data->descricao)) < '5')
		{
			$this->addError('Informe a Descrição');
		}
		else
		{
			$tipolicAfast->SetData($data);
		       	$tipolicAfast->save();
			$go = $MIOLO->GetActionURL('rh','main:tipolicafast',$tipolicAfast->idTipoLicAfast);
	   		$MIOLO->Information('Dados do Tipo LicAfast inseridos com sucesso.', $go );
		}		
    }

 }
?>
