class frmTipoLicAfastOcorrencia extends Form
{

	protected $objTipoLicAfast;
	protected $grupoOcorrencia;
	
    function __construct($objTipoLicAfast)
    {
		global $MIOLO;
		
		$this->objTipoLicAfast = $objTipoLicAfast;
		$this->grupoOcorrencia = $MIOLO->getBusiness('rh','grupoocorrencia');
		$this->grupoOcorrencia->getById('03');
        $this->Form('Incluir');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$query = $this->grupoOcorrencia->ListOcorrencias('id');
		$fields = array(
			new Selection('idOcorrencia','','Ocorrência',$query->chunkResult(0,1,true)),

        );
		
        $this->SetFields($fields);
		
		$buttons = array(
        	new FormButton('btnSalvar', 'Incluir')
            );
		$this->SetButtons($buttons);

    }
	
	public function btnSalvar_click()
	{
		$idOcorrencia = $this->getFormValue('idOcorrencia');
		$this->grupoOcorrencia->getOcorrencias();
		if($idOcorrencia == '')
		{
			$this->addError('Informe a Ocorrência');
		}
		else
		{
			$ocorrencia = $this->grupoOcorrencia->getOcorrencia($idOcorrencia);
			$this->objTipoLicAfast->addOcorrencia($ocorrencia);

			try
			{
				$this->objTipoLicAfast->save();
			}
			catch (Exception $e)
			{
				$this->AddError("Informe o seguinte erro a equipe do CGCO: ".$e->getMessage());
			}
		}

		$this->SetFieldValue('idOcorrencia','');
	}
 }
?>
