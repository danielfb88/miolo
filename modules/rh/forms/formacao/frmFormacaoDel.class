/**
 * Formulário de exclusão Formação
 */
class frmFormacaoDel extends Form
{
	/**
	 * Objeto Formacao
	 * @access protected
	 * @var BusinessRhFormacao
	 */
	protected $objFormacao;

    function __construct($objFormacao)
    {
		$this->objFormacao = $objFormacao;
        parent::__construct('Excluir Formação');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $module, $self;

		$action_sim = $MIOLO->GetActionURL($module,$self,$this->objFormacao->idFormacao, array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL($module,$self,$this->objFormacao->idFormacao);
		$conf = Form::GetFormValue('conf');
		if ($conf == 'sim')
		{
			$this->objFormacao->Delete();
			if (!$this->objFormacao->CheckError())
			{
				$MIOLO->Information('Formação excluída com sucesso', $MIOLO->GetActionURL($module,'main:formacao:find'));
			}
			else
			{
				$MIOLO->Error($this->objFormacao->GetErrors());
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir essa Formação?",$action_sim,$action_nao);
       }
	   
    }
 }
?>
