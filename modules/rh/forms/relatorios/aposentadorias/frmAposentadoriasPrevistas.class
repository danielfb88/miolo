$MIOLO->Uses('classes/aposentadoria.class','rh');


class frmAposentadoriasPrevistas extends MForm
{
    protected $k;


    function __construct()
    {
        parent::__construct('Aposentadorias previstas no mês ou ano');
        $this->SetClose($this->manager->GetActionURL('rh','main:relatorios'));
        $this->EventHandler();
    }


    function CreateFields()
    {
        $mkrono = new MKrono();

        foreach ($mkrono->months as $key => $value)
        {
            if ($key < date('m')) 
            {
                $this->k[$key] = $value . '/' . (date('Y') + 1);
            }
            else
            {
                $this->k[$key] = $value . '/' . date('Y');
            }
        }
        $this->k[date('Y')    ] = 'no ano todo';
        $this->k[date('Y') + 1] = 'no ano todo';
        $this->k[date('Y') + 2] = 'no ano todo';

        $fields[] = new MLabel('Selecione um Mês ou um Ano','blue',TRUE);
        $fields[] = new MSelection('selMes','','',$this->k,TRUE);
        $this->SetFields($fields);
        $buttons = array(
            new MButton('btnReport','Gerar Relatório', 'PDF')
            //new MButton('btnGerarCSV','Gerar Planilha'),
        );
        $this->SetButtons($buttons);
    }


    function btnReport_click()
    {
        $selMes = $this->GetFormValue('selMes');
        IF (empty($selMes))
        {
            $this->addError('Erro: faltou escolher o Mês ou o Ano');
            return false;
        }

        if ($selMes > 12)
        {
            $array = array( 'ano de ' . $selMes ,                 $selMes      , NULL    );
        }
        else
        {
            $array = array(    $this->k[$selMes], substr($this->k[$selMes],-4 ), $selMes );
        }


        $ui = $this->manager->getUi();

        $report = $ui->getReport('rh','repAposentadoriasPrevistas',$array);
        $report->generate();
    }


