	function __construct()
    	{
        	parent::__construct('Relatório de Freqüência do Servidor por ano');
        	$this->SetClose($this->manager->GetActionURL('rh','main:relatorio:frequencia'));
        	$this->EventHandler();
    	}

    	function CreateFields()
    	{
        	$fields = array(
            		new MTextField('ano','','Ano','6','use 4 dígitos'),
           		//new MTextField('idVinculo','','Matrícula'),
            		new MHiddenField('idVinculo','','Matrícula'),
	    		new MLookupFieldValue('lkpVinculo','','Servidor',50),  	
        			);
        		$this->setFields($fields);
        		$this->SetFieldAttr('ano','maxLength',4);

        		$this->SetFieldAttr('lkpVinculo','module','rh');
			$this->SetFieldAttr('lkpVinculo','item','siapepessoa2');
 			$this->SetFieldAttr('lkpVinculo','event','filler');
    			$this->SetFieldAttr('lkpVinculo','related','idVinculo,lkpVinculo');
        		//$this->idVinculo->addAttribute('maxLength','4');
        		$buttons = array(
            			new MButton('btnReport','Gerar Relatório','PDF'),
	    			new MButton('btnEnviar','Enviar'),
       				//new MButton('btnGerarCSV','Gerar Planilha(falta acabar)')
        				);
        		$this->setButtons($buttons);       
			$this->setButtonAttr('btnReport','visible',false);                        
    	}
	function btnEnviar_click()
	{
		$ano = date('Y');
		$txtAno = $this->getFormValue('ano');
		$idVinculo = $this->getFormValue('idVinculo');
		if(strlen(trim($txtAno)) != '4')
		{
			$this->addError('Informe o ano no padrão numérico de 4 dígitos');
		}
		elseif(is_numeric($txtAno))
		{
			if($txtAno > $ano)
			{
				$this->addError("O ano deve ser ANTERIOR ou IGUAL ao ano corrente ($ano)");
			}
			elseif($idVinculo == '')
			{
				$this->addError('Informe o servidor');
			}
			else
			{
				$this->setButtonAttr('btnReport','visible',true);
				$this->setButtonAttr('btnEnviar','visible',false);
				//$this->addField(new Label('Para gerar o relatório clique em "Gerar relatório"','red'));
			}
		}
		else
		{
			$this->addError('Informe o ano no padrão numérico de 4 dígitos');
		}
	}
