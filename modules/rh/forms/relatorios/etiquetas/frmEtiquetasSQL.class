class frmEtiquetasSQL extends MForm
{


	function __construct()
    {
		parent::__construct('Etiquetas SQL');
		$this->SetClose($this->manager->GetActionURL('rh','main:etiquetas'));
		$this->EventHandler();
    }


    function CreateFields()
    {
		$fields = array(
			new MText('t1','ATENCAO: Use obrigatoriamente: as nome, as endereco, as bairro, as municipio e as cep'),
			new MMultiLineField('sql','SELECT p.nome, p.endereco, p.bairro, m.municipio, u.uf, p.cep FROM cm_pessoa p, cm_municipio m, cm_uf u WHERE rownum <= 100','Query','50','50','135',false),
		);
        $this->SetFields($fields);

		$buttons = Array
		(
			new FormButton('btnPost','Gerar Etiquetas','PDF'),
			new FormButton('btnBack','Voltar'),
		);
		$this->SetButtons($buttons);
    } 


    function btnBack_click()
    {
		global $page;
		$go = $this->manager->GetActionURL('rh','main:etiquetas');
		$page->Redirect($go);
	}


    function btnPost_click()
    {
		$sql = $this->GetFormValue('sql');
		$report = new MJasperReport('ufjf');
		$parameters['str_SQL'] = $sql;
		$report->Execute('rh','etiquetasprontas/RH_EtiquetaTXT35_Modelo',$parameters,null,'TXT');
	}

}
