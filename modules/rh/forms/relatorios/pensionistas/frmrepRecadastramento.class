/*
Objetivo: relatório de todos os pensionistas com seus instituidores

Algoritmo:
    - oferece escolha de qual pensionista a imprimir
    - recupera dados do pensionista
    - chama classe para montagem do relatório
*/


class frmrepRecadastramento extends MForm
{


    function __construct()
    {
        parent::__construct('Formulários de Recadastramento');
        $this->EventHandler();
    } // __construct


    function CreateFields()
    {
        global $module;

        $fields[] = new MHiddenField('idpessoa');
        $fields[] = array(new MLookupTextField('idPensionista' , '', 'Pensionista' , 12), // CYCLIDA
                          new MLabel('clique na lupa para PESQUISAR nomes ou para CONFERIR nome','blue'));
        $fields[] = new MTextField('nome','','Nome','55','',NULL,TRUE);
        $fields[] = new MSpacer(1);

        $this->SetFields($fields);
        $this->SetFieldAttr('nome','readonly',TRUE);

        $this->SetFieldAttr  ('idPensionista','module'      ,$module);
          $this->SetFieldAttr('idPensionista','item'        ,'Pensionista'); //aponta LookupPensionista() em BusinessRHLookup
          $this->SetFieldAttr('idPensionista','event'       ,'filler');      //'btnid_click'); //event: lookup
          $this->SetFieldAttr('idPensionista','related'     ,'Pensionista'); //aponta LookupPensionista() em BusinessRHLookup
          $this->SetFieldAttr('idPensionista','autocomplete',false);
        $this->SetFieldAttr('idPensionista','related','idpessoa,idPensionista,nome_ro');

        $buttons = new MButton('btnPDF', 'Gerar Relatório', 'PDF');
        $this->SetButtons($buttons);
        $this->defaultButton = false;
    } // CreateFields


    function btnPDF_click()
    {
        global $module;

        $ui = $this->manager->GetUI();
        $report = $ui->GetReport($module,'repRecadastramento',$this->getFieldValue('idPensionista'),'pensionistas'); //quarto parâmetro sub-diretório
        $report->Generate();
    } // btnPDF_click


}
?>
