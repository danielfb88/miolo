class frmContagemTempo extends MForm
{

    function __construct()
    {
        global $MIOLO, $module;
        parent::__construct('Contagem de Tempo');
        $this->SetClose($this->manager->GetActionURL('rh','main:relatorio'));
        $this->EventHandler();
    }


    function CreateFields()
    {
        $fields = array(new MHiddenField('idVinculo'),
                        new MLookupFieldValue('lkpVinculo','','Servidor',55));
        $this->SetFields($fields);
        $this->SetFieldAttr('nome','readonly',TRUE);

        //lookup vinculo
		$this->SetFieldAttr('lkpVinculo','module','rh');
        $this->SetFieldAttr('lkpVinculo','item','VinculoTA');
        $this->SetFieldAttr('lkpVinculo','event','filler');
        $this->SetFieldAttr('lkpVinculo','related','idVinculo,lkpVinculo,null,null'); 

        $buttons = array( new MButton('btnReport'  ,'Gerar Relatório', 'PDF'));
        $this->SetButtons($buttons);
    }

    function btnReport_click()
    {
		$data = $this->getData();

        if ( is_null($data->idVinculo) or empty($data->idVinculo) )
        {
            $erro[] = "Faltou informar o vínculo";
        }
        if ( count($erro) > 0 )
        {
            foreach ( $erro as $e )
            {
                $this->addError($e);
            }
        } 
        else
        {   
            $ui = $this->manager->getUi();
            $vinculo = $this->manager->GetBusiness('rh','vinculo');
            $vinculo->GetById($data->idVinculo);
            $report = $ui->getReport('rh','repContagemTempo',$vinculo);
            $report->generate();
        }
    }
}
?>
