class frmLicencaAfastamentoGeralSetor extends MForm
{
	function __construct()
    	{
        	parent::__construct('Pesquisar Licenciados/Afastados por Setor');
        	$this->SetClose($this->manager->GetActionURL('rh','main:relatorio'));
        	$this->EventHandler();
    	}

    	function CreateFields()
    	{
        	$ui = $this->manager->getUI();
        	$provimento = $this->manager->getBusiness('rh','provimento');
        	$query = $provimento->listSetoresLotacao();
        	//$setores['all'] = "TODOS OS SETORES";
        	foreach ( $query->result as $result )
                	$setores[$result[0]] = $result[1];
        	//$grid = $ui->getGrid('rh','gridLicAfast2', NULL,'relatorios');
       		$fields = array(
            		new Selection('idSetor','','Setor de Lotação',$setores),
            	//$grid,
        			);
        	$this->SetFields($fields);
        	$buttons = array(
            		//new MButton('btnExibe','Exibir'),
            		new MButton('btnReport','Gerar Relatório','PDF'),
            		new MButton('btnGerarCSV','Gerar Planilha'),
            		new MButton('btnPasso1','Enviar'),
        			);
        	$this->SetButtons($buttons);
		$this->SetButtonAttr('btnGerarCSV','visible',false);
		$this->SetButtonAttr('btnReport','visible',false);
        	$this->defaultButton = false;
    	}
    
	function btnPasso1_click()
	{
		$op = $this->getFormValue('idSetor');
		if($op == '')
		{
			$this->addError('Selecione um setor');
		}
		else
		{
			$this->addInfo('Escolha a opção para a geração de relatório clicando no botão abaixo');
			$this->SetButtonAttr('btnGerarCSV','visible',true);
			$this->SetButtonAttr('btnReport','visible',true);
			$this->SetButtonAttr('btnPasso1','visible',false);
		}
	}
    	function btnGerarCSV_click()
	{
		 
       		$licAfast = $this->manager->GetBusiness('rh','licafast');
        		
        	$idSetor = $this->GetFormValue('idSetor'); 
            
        	$consulta = $licAfast->listLicAfasts($idSetor);  
         
		$resultAux[] = array('iD','NOME','DATA DE INÍCIO','DATA FIM','OCORRÊNCIA');
		foreach ($consulta->result as $result)		  
    		{
    			$resultAux[] = array($result[0],$result[1],$result[3],$result[4],$result[7]);		
    		}
    				    
	    	$consulta->result = $resultAux;
		$consulta->getCSV("afastadosPorSetor");      
	}
