        	$ui = $this->manager->getUi();
        	$report = $ui->getReport('rh','repLicencaAfastamentoGeralSetor',$data);
       		$report->generate();
    	}*/
	function btnReport_click()
	{ 
	        global $MIOLO; 
	        $report = new MJasperReport('sigaept'); 
		$idSetor = $this->getFormValue('idSetor'); 
		$objSetor = $MIOLO->GetBusiness('common','setor');
		$objSetor->getById($idSetor);
		$stringSetor = $objSetor->nome;
		
		$parameters['int_id'] = $idSetor;
		$parameters['str_setor'] = $stringSetor;
		$parameters['SUBREPORT_DIR'] = $MIOLO->GetConf('home.modules');
		$parameters['int_pIdUsuario']= $MIOLO->login->idkey;
		$parameters['pURL']=$MIOLO->GetConf('home.url');
	        $report->Execute('rh', 'RelLicencaAfastamentoGeralSetor',$parameters); 
	}
 }
