	function btnReport_click()
	{ 
	        global $MIOLO; 
	        $report = new MJasperReport('sigaept'); 
		$dataRef = $this->getFormValue('dataRef');
		$ano = $this->getFormValue('txtAno');
		$mes = $this->getFormValue('selMes');
	        $k = new MKrono();
	        $stringMes = $k->getMonthByNumber($mes);
	
		$ultimoDiaDoMes = $k->getLastDayOfMonth($mes);  
		$dataInicio = "01"."/".$mes."/".$ano;
		$dataFim = $ultimoDiaDoMes."/".$mes."/".$ano;

		$parameters['str_dataInicio'] = $dataInicio;
		$parameters['str_dataFim'] = $dataFim;
		$parameters['str_mes'] = $stringMes;
		$parameters['str_ano'] = $ano;
		$parameters['SUBREPORT_DIR'] = $MIOLO->GetConf('home.modules');
		$parameters['int_pIdUsuario']= $MIOLO->login->idkey;
		$parameters['pURL']=$MIOLO->GetConf('home.url');

	        $report->Execute('rh', 'RelLicencaAfastamentoGeralMesAno',$parameters); 
	}
 }
