class frmLicencaAfastamentoMesAno extends MForm
{
	function __construct()
    	{
        	global $MIOLO, $module;
        	parent::__construct('Relatório Geral de Licenças/Afastamentos por Mês/Ano');
        	$this->SetClose($this->manager->GetActionURL('rh','main:relatorio'));
        	$this->EventHandler();
    	}

    	function CreateFields()
    	{
        	$k = new MKrono();
        	$fields = array(
               		new MSelection('selMes','','Mês',$k->months,true),
                	new MTextField('txtAno','','Ano',5,'use 4 dígitos'),
        			);
        	$this->SetFields($fields);
        	$buttons = array(
            		new MButton('btnReport','Gerar Relatório','PDF'),
            		new MButton('btnGerarCSV','Gerar Planilha'),
            		new MButton('btnPasso1','Enviar')
        			);
        	$this->SetButtons($buttons);
		$this->SetButtonAttr('btnGerarCSV','visible',false);
		$this->SetButtonAttr('btnReport','visible',false);
        	$validators = array(
            		new MRangeValidator('txtAno','Ano','1970',date(Y)+10,'i','required'),
        			);
        	$this->SetValidators($validators);
        	$this->defaultButton = false;
    	}
    
	function btnPasso1_click()
	{
		$ano = strlen(trim($this->getFormValue('txtAno')));
		$mes = $this->getFormValue('selMes');
		if(($ano < '4') || ($mes == ''))
		{
			$this->addError('Informe Mês e Ano Corretamente');
		}
		elseif(!is_numeric($this->getFormValue('txtAno')))
		{
			$this->addError('Informe o Ano no padrão correto de 4 dígitos numéricos');
		}
		else
		{
			$this->addInfo('Escolha a opção para a geração de relatório clicando no botão abaixo');
			$this->SetButtonAttr('btnGerarCSV','visible',true);
			$this->SetButtonAttr('btnReport','visible',true);
			$this->SetButtonAttr('btnPasso1','visible',false);
		}
	}
    	function btnGerarCSV_click()
	{
        	$licAfast = $this->manager->GetBusiness('rh','licafast');
        
        	$selMes = $this->GetFormValue('selMes'); 
        	$txtAno = $this->GetFormValue('txtAno'); 
        
        	$k = new MKrono();
        	$ultimoDiaDoMes = $k->getLastDayOfMonth($selMes); 
        
        	$consulta = $licAfast->getLicencasPorMesAno($selMes,$txtAno,$ultimoDiaDoMes);

      
	    	$resultAux[] = array('Matrícula','Nome','Data de Início','Data de Fim','Descricão','Tipo');
	    
	    	if ( is_array($consulta->result) )
	    	{
			foreach ($consulta->result as $result)		  
	    		{
	    			$resultAux[] = array($result[0],$result[1],$result[2],$result[3],$result[4],$result[5]);		
	    		}
	    	}
	    	else 
	    	{
	    		$consulta->result[] = ""; 
	    	}
			     
	    	$consulta->result = $resultAux;
		$consulta->getCSV("LICENCA_AFASTAMENTO_MES_ANO");
    
	}
    
