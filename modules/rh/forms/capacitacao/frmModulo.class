class frmModulo extends MCompoundForm
{
    protected $oid;
    protected $modulo;

    function __construct($objModulo)
    {
        $this->modulo = $objModulo;
        parent::__construct();
        $this->SetTitle($this->modulo->nome);
        $this->SetIcon($this->manager->GetUi()->GetImage('rh','tools1.png'));
        $this->SetClose($this->manager->GetActionURL('rh','main:capacitacao:modulos:find'));
    }

    function CreateFields()
    {
		 global $MIOLO, $page, $module, $context, $action, $history;

        $modulo = $this->modulo;
        MUtil::SetIfNull($this->oid, $modulo->idmodulo);

//form
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->GetForm($module,'frmModuloDados', $modulo, 'capacitacao'); 
                break;
            case 'excluir'     : 
                $this->_form[0] = $ui->GetForm($module,'frmModuloDel', $modulo, 'capacitacao'); 
                break;
            case 'inscritos'     : 
                $this->_form[0] = $ui->GetGrid($module,'gridCapacitacaoInscModulo', $modulo); 
                break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($this->manager->GetActionURL('rh','main:capacitacao:modulos', $modulo->idmodulo));
        }

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new MActionPanel('pnlCompound','Opções','',false);
        $panel->AddAction('Editar',
            $ui->GetImage('rh','edit.png'),'rh',$action, $this->oid, array("form"=>"dados"));
        $panel->AddAction('Excluir',
			$ui->GetImage('rh','del.png'),'rh',$action, $this->oid, array("form"=>"excluir"));
        $panel->AddAction('Inscritos',
            $ui->GetImage('rh','user.png'),'rh',$action, $this->oid, array("form"=>"inscritos"));

// info
		$this->_info[0]	= new MTextLabel('txtNumero',$modulo->idmodulo,'ID');
		$this->_info[1]	= new MTextLabel('txtNome',$modulo->curso->nome,'Curso');
		$this->_info[2]	= new MTextLabel('txtModulo',$modulo->modulo . ' - ' . $modulo->nome,'Módulo');
    }

}
?>
