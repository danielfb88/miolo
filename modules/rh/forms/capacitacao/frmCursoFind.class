class frmCursoFind extends MForm
{
    function __construct()
    {
		global $MIOLO, $module;
		
        parent::__construct('Pesquisar Cursos/Eventos de Capacitação');
		$this->setClose($MIOLO->GetActionURL($module,'main'));
        $this->eventHandler();
    }

    function createFields()
    {
        global $MIOLO, $action;

        $ui = $MIOLO->getUI();
        $grid = $ui->getGrid('rh','gridCapacitacaoCursos');
        $grid->setTitle(NULL);

        $lnkNew = new MLink('lnkNew','&nbsp;','','Cadastrar Novo Curso');
        $lnkNew->SetAction('rh','capacitacao:cursos:new');
        
        $findButton = new MButtonFind('');
        $findButton->setName('btnFind');
        
        $fields = array(
            array(
                new MTextField('curso','','Curso',30),
                $findButton,
                $lnkNew
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
