class frmModuloDel extends MForm
{
	protected $objModulo;

    function __construct($objModulo)
    {
		$this->objModulo = $objModulo;
        parent::__construct('Excluir Módulo');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('rh','main:capacitacao:modulos:main',$this->objModulo->idmodulo, array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL('rh','main:capacitacao:modulos:main',$this->objModulo->idmodulo);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
            try
            {
    			$this->objModulo->Delete();
				$MIOLO->Information('Módulo excluído com sucesso', $MIOLO->GetActionURL('rh','main:capacitacao:modulos:find'));
            }
            catch (Exception $e)
            {
                $MIOLO->Error("Não foi possível excluir este Curso/Módulo!",$MIOLO->GetActionURL('rh','main:capacitacao:modulos:main', $this->objModulo->idmodulo));
            } 
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir o módulo [{$this->objModulo->nome}] ?",$action_sim,$action_nao);
		}
    }
 }
