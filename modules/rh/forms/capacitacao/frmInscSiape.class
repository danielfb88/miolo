class frmInscSiape extends MForm
{
	function __construct()
    	{   	
		global $MIOLO, $action, $curso;

       		parent::__construct('Formulário de Inscrição em Eventos de Capacitação');
		//       $this->box->AddStyle('width',"75%");
       		$this->box->AddStyle('padding',"10px");
	   	$this->eventHandler();
	}

    	function CreateFields()
	{ 
		global $MIOLO, $action, $page, $curso;

      		$fields = array(
           		new MLabel('Este formulário permite que você faça a inscrição para você ou para outros servidores nos Cursos/Eventos de Capacitação.','blue',true),
           		new MSpacer('15px'),
           		//new MTextField('siape','','Siape do Servidor a ser inscrito', 15)
	   		new MHiddenField('siape'),
	   		new MSeparator('SERVIDOR A SER INSCRITO'),
	   		new LookUpTextField('lkpNome','','NOME',30),
       			);
	   	$this->SetFields($fields);

       		$validators = array(
           		new MRequiredValidator('siape','','','Selecione o servidor e seu SIAPE através do botão de pesquisa'),
       				);

       		$this->SetValidators($validators);
		$this->SetFieldAttr('lkpNome','module','rh');
	   	$this->SetFieldAttr('lkpNome','item','siapepessoa2');
	   	$this->SetFieldAttr('lkpNome','event','filler');
	   	$this->SetFieldAttr('lkpNome','related','siape,lkpNome');
	

       		$buttons = Array(
           		new MButton('btnSiape', 'Continuar'),
       				);
	   	$this->SetButtons($buttons);
       		$this->setLabelWidth('25'); 
 	}
}
?>
