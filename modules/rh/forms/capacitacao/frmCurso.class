class frmCurso extends MCompoundForm
{
    protected $oid;
    protected $curso;

    function __construct($objCurso)
    {
        $this->curso = $objCurso;
        parent::__construct();
        $this->SetTitle($this->curso->nome);
        $this->SetIcon($this->manager->GetUi()->GetImage('rh','tools1.png'));
        $this->SetClose($this->manager->GetActionURL('rh','main:capacitacao:cursos:find'));
    }

    function CreateFields()
    {
		 global $MIOLO, $page, $module, $context, $action, $history;

        $curso = $this->curso;
        MUtil::SetIfNull($this->oid, $curso->idcurso);

//form
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->GetForm($module,'frmCursoDados', $curso, 'capacitacao'); 
                break;
            case 'excluir'     : 
                $this->_form[0] = $ui->GetForm($module,'frmCursoDel', $curso, 'capacitacao'); 
                break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($this->manager->GetActionURL('rh','main:capacitacao:cursos', $curso->idcurso));
        }

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new MActionPanel('pnlCompound','Opções','',false);
        $panel->AddAction('Editar',
            $ui->GetImage('rh','edit.png'),'rh',$action, $this->oid, array("form"=>"dados"));
        $panel->AddAction('Excluir',
			$ui->GetImage('rh','del.png'),'rh',$action, $this->oid, array("form"=>"excluir"));

// info
		$this->_info[0]	= new MTextLabel('txtNumero',$curso->idcurso,'Número');
		$this->_info[1]	= new MTextLabel('txtNome',$curso->nome,'Nome');
    }
}
