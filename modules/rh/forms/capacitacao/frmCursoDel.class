class frmCursoDel extends MForm
{
	protected $objCurso;

    function __construct($objCurso)
    {
		$this->objCurso = $objCurso;
        parent::__construct('Excluir Curso');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('rh','main:capacitacao:cursos:main',$this->objCurso->idcurso, array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL('rh','main:capacitacao:cursos:main',$this->objCurso->idcurso);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
            try
            {
    			$this->objCurso->Delete();
				$MIOLO->Information('Curso excluído com sucesso', $MIOLO->GetActionURL('rh','main:capacitacao:cursos:find'));
            }
            catch (Exception $e)
            {
                $MIOLO->Error("Não foi possível excluir este Curso!",$MIOLO->GetActionURL('rh','main:capacitacao:cursos:main', $this->objCurso->idcurso));
            } 
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir o curso [{$this->objCurso->nome}] ?",$action_sim,$action_nao);
		}
    }
 }
