class frmEstatisticas extends MForm
{
    private $anosem;

    function __construct($siape)
    {
        global $MIOLO;
 
        parent::__construct('Estatísticas de Inscrições em Cursos/Eventos de Capacitação');
	    $this->eventHandler();
    }

    function CreateFields()
	{  
        $this->anosem = $this->getFormValue('anosemestre');
        if ($this->anosem == '')
        {
            $this->createFieldsFase0();
        }
        else
        {
            $this->createFieldsFase1();
        }
    }

    function CreateFieldsFase0()
    {
        global $MIOLO, $action;

        $modulo = $MIOLO->GetBusiness('rh','capacitacaomodulo');
        $anosemestre = $modulo->getListOfAnoSemestre();
        $anosemestre[' '] = 'TODOS';

        $fields = array(
            new MSelection('anosemestre','','Ano.Semestre',$anosemestre),
        );
        $this->SetFields($fields);

        $buttons = Array(
            new MButton('btnAnoSemestre', 'Continuar'),
        );
	    $this->SetButtons($buttons);
    }

    function CreateFieldsFase1()
    {
        global $MIOLO, $action;

        $ui = $MIOLO->GetUI();

        $modulo = $MIOLO->GetBusiness('rh','capacitacaomodulo');
        $anosemestre = $modulo->getListOfAnoSemestre();
        $anosemestre[' '] = 'TODOS';

// grid com os cursos

        $aTurno = array("M"=>"Manhã","T"=>"Tarde","N"=>"Noite");	
        $columns = array(
            new MGridColumn('Num','left', false,'0%',false),
            new MGridColumn('Num','left', false,'2%',true),
            new MGridColumn('Nome','left', false,'20%',true),
            new MGridColumn('Num','left', false,'3%',true),
            new MGridColumn('Módulo','left', false,'25%',true),
            new MGridColumn('Data Início','right', false,'10%',true),
            new MGridColumn('Turno','left', false,'5%',true,$aTurno),
            new MGridColumn('Vagas','left', false,'5%',true),
            new MGridColumn('Pend','left', false,'5%',true),
            new MGridColumn('Exc','left', false,'5%',true),
            new MGridColumn('Aut','left', false,'5%',true),
            new MGridColumn('Aut-Exc','left', false,'5%',true),
            new MGridColumn('Conf','left', false,'5%',true),
            new MGridColumn('Conc','left', false,'5%',true),
        );
        
        $href_grid = $MIOLO->GetActionURL($module,$self);
        $modulo = $MIOLO->getBusiness('rh','capacitacaomodulo');
        $result = $modulo->listEstatistica(trim($this->anosem));
        $grid = new MGrid($result, $columns, $href_grid,25);
        $grid->SetTitle(NULL);

        $fields = array(
            array(
                new MSelection('anosemestre','','Ano.Semestre',$anosemestre),
                new MButton('btnShow','Mostrar'),
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }

 }
?>
