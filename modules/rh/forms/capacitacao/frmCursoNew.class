class frmCursoNew extends MForm
{

    function __construct()
    {
        parent::__construct('Cadastrar Novo Curso');
        $this->eventHandler();
    }

    function createFields()
    {
        global $MIOLO;
		
		//$linkInst = new MLink('novaInst','&nbsp;&nbsp;','','Incluir Nova Instituição');
	    //$linkInst->setAction('common','instituicao');

        //$inst = $MIOLO->getBusiness('common','instituicao');
        //$lista = $inst->listAll();
        $fields = array(
            new MTextField('idcurso','','Número',6),
            new MTextField('nome','','Nome do Curso',70),
			new MLookupFieldValue('lkpInstituicao','','Instituição', 75),
			new MHiddenField('idinstituicao','','Instituição'),
			//$linkInst
            //new MSelection('idinstituicao','','Instituição',$lista->chunkResult(),'','',1)
        );
		
        $this->SetFields($fields);
		
		$buttons = array(
			new MButton('btnNew','Enviar'),
        );
		$this->SetButtons($buttons);

		$this->idcurso->addAttribute('maxlength',6);
		$this->SetFieldAttr('lkpInstituicao','module','common');
        $this->SetFieldAttr('lkpInstituicao','item','instituicao');
        $this->SetFieldAttr('lkpInstituicao','event','filler');
        $this->SetFieldAttr('lkpInstituicao','related','idinstituicao,,lkpInstituicao');
        $this->SetFieldAttr('lkpInstituicao','filter','lkpInstituicao');

		
		$validators = array(
			new MRequiredValidator('idcurso'),
			new MRequiredValidator('nome'),
			new MRequiredValidator('idinstituicao'),
		);

		$this->SetValidators($validators);
    }

    function btnNew_click()
    {
    	
    	
	global $MIOLO, $page, $module;

        $data = $this->getData();
	$data->nome = strToUpper($data->nome);
	$idCurso = trim($data->idcurso);
	$nomeCurso = strlen(trim($data->nome));
	if(!$idCurso)
	{
		$this->addError("Informe o número do Curso");
	}
	elseif($nomeCurso < '4')
	{
		$this->addError('Informe corretamente o nome do curso ');
	}
	else
	{
        	$curso = $MIOLO->GetBusiness($module,'capacitacaocurso');
        	$curso->idcurso = substr('00000' . trim($data->idcurso),-5);		
		$curso->SetData($data);
        	try
        	{
            		$curso->save();
            		$go = $MIOLO->GetActionURL('rh','main:capacitacao:cursos:main',$curso->idcurso);
            		$page->Redirect($go);
        	}
        	catch (Exception $e)
        	{
            		$this->AddError($e->GetMessage());
       		} 
        }
     }
     
   	
     function getData(){
     	 $data = new FormData();
     	 $data->idcurso       =	$this->GetFormValue('idcurso');
     	 $data->nome          =	$this->GetFormValue('nome');
     	 $data->idinstituicao = $this->GetFormValue('idinstituicao');
     	 return $data;
     }
 }
?>
