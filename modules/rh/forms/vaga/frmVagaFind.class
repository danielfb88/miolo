MIOLO::Import('modules::rh::controls::linkvaga');

class frmVagaFind extends Form
{
    function __construct()
    {
        global $MIOLO, $module;

        $this->Form('Pesquisar Vagas');
        $this->SetClose($MIOLO->GetActionURL($module,'main'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action, $module;

        $ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid($module,'gridVaga');
        $grid->SetTitle(NULL);

        $btnFind = new ButtonFind('');
        $btnFind->SetName('btnFind');
        
        $newLink = new LinkVaga('lnkNew',FALSE);
        $newLink->setNew();

        $fields = array(
            new Spacer('5px'),
            new Separator('Procure pelo <B>Número da vaga</B> <U>ou</U> pelo <B>Cargo</B>'),
            new Spacer('5px'),
            array(
                new Text('','Procurar Vaga:'),
                new TextField('vaga','','',30),
                $btnFind,                
            ),
            $newLink,
            new Spacer('5px'),
            $grid
        );
        $this->SetFields($fields);

        $this->defaultButton = false;
    }

 }
?>
