/**
 * Form Vaga
 */
class frmVaga extends CompoundForm
{
	public $oid;
    protected $vaga;
    /**
     * Construtor
     */
    function __construct($objVaga)
    {
        global $MIOLO, $module;
        $this->vaga = $objVaga;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL($module,'main:vaga:find'));
        $this->SetTitle($this->vaga->numeroVaga);
        $this->SetIcon($MIOLO->GetUi()->GetImage($module,'vaga_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $vaga = $this->vaga;
        if ($this->oid == NULL) $this->oid = $vaga->numeroVaga;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados'       : 
                 $f = $ui->GetForm($module,'frmVagaDados', $vaga,'vaga'); 
                 break;
            case 'excluir'     : 
                 $f = $ui->GetForm($module,'frmVagaDel', $vaga,'vaga'); 
                 break;
            case 'finalizar'     : 
                 $f = $ui->GetForm($module,'frmVagaFin', $vaga,'vaga'); 
                 break;
        }
        if ($f)
        {
            $f->SetClose($MIOLO->GetActionURL($module,'vaga',$vaga->numeroVaga));
            $this->_form[0] = $f;
            $page->SetAction($history->Top('action'));
        }

// panel        
        $action = $context->action;
        if($this->vaga->dataFim == NULL)
        {
        	$this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        
        	$panel->AddUserAction('rh_vaga_dados',A_EXECUTE,'Editar',
	            $ui->GetImage($module,'edit.png'),$module,$action, $this->oid, array("form"=>"dados"));
	        $panel->AddUserAction('rh_vaga_finalizar',A_EXECUTE,'Finalizar',
	            $ui->GetImage($module,'finalizar.png'),$module,$action, $this->oid, array("form"=>"finalizar"));
	        $panel->AddUserAction('rh_vaga_excluir',A_EXECUTE,'Excluir',
	            $ui->GetImage($module,'excluir.png'),$module,$action, $this->oid, array("form"=>"excluir"));

        }
        
// info
        $this->_info[0] = new TextLabel('numeroVaga',$this->vaga->numeroVaga,'No. da Vaga');

        $grupoC = $MIOLO->GetBusiness($module,'grupocargo');    
	   	$grupoC = $grupoC->GetById($this->vaga->idGrupoCargo);
		$grupoInfo = new TextField('infoGrupoCargo',$grupoC->descricao,'Grupo',50);

        $grupoInfo->readonly = true;
        $this->_info[1]	= $grupoInfo;

        $cargoC = $grupoC->getCargo($this->vaga->idCargo);
		$cargoInfo = new TextField('infoCargo',$cargoC->descricao,'Cargo',50);

    	$cargoInfo->readonly = true;
        $this->_info[2]	= $cargoInfo;

		$cont = 3;

		//Verifica se é docente para exibição de Departamento e Unidade
		if( (($this->vaga->idGrupoCargo == 60) && ($this->vaga->idCargo == 1)) ||  //Docente 3º Grau
			(($this->vaga->idGrupoCargo == 60) && ($this->vaga->idCargo == 11)) || //Docente 1º e 2º Grau
			(($this->vaga->idGrupoCargo == 702) && ($this->vaga->idCargo == 1)) )  //Docente do Ensino Básico/Técnico/Tecnológico
		{
			if($this->vaga->idSetor)
			{
				$cont = 5;

				$departamento = $MIOLO->GetBusiness('common','setor');
				$departamento = $departamento->GetById($this->vaga->idSetor);

				$unidade = $MIOLO->GetBusiness('common','setor');
				$unidade = $unidade->GetById($departamento->idPaiSetor);

				$deptoInfo = new TextField('infoDepto',$departamento->nome,'Departamento',50);
				$unidInfo = new TextField('infoUnid',$unidade->nome,'Unidade',50);

				$deptoInfo->readonly = true;
				$unidInfo->readonly = true;

				$this->_info[3]	= $deptoInfo;
				$this->_info[4]	= $unidInfo;
			}
		}
		else
		{
			if($this->vaga->idSetor)
			{
				$cont = 4;

				$setor = $MIOLO->GetBusiness('common','setor');
				$setor = $setor->GetById($this->vaga->idSetor);

				$setorInfo = new TextField('infoSetor',$setor->nome,'Setor',50);

				$setorInfo->readonly = true;
				$this->_info[3]	= $setorInfo;
			}
		}

        if ($this->vaga->dataFim == NULL)
        {
        	$sit = new TextField('sit','ATIVA','Situação',20);

	    	$sit->readonly = true;
	        $this->_info[$cont]	= $sit;

			$cont++;
        	
        	$espacamento = new Spacer('10px');
        	$this->_info[$cont] = $espacamento;
        }
        else 
        {
        	$sit = new TextField('sit','FINALIZADA','Situação',20);

	    	$sit->readonly = true;
	        $this->_info[$cont]	= $sit;
        	
			$cont++;

        	$espacamento = new Spacer('10px');
        	$this->_info[$cont] = $espacamento;
        	
        	$cancel = $MIOLO->GetActionURL($module,'main:vaga:find');
	
			$buttons = array(
	            new FormButton('btnCancelar','Voltar', $cancel)
	        );
			$this->SetButtons($buttons);
        }
        
     
	}

}
?>
