/**
 * Formulário de edição de dados do Diploma Legal
 */
class frmDiplomaLegalDados extends Form
{
	/**
	 * Objeto diplomaLegal
	 * @access protected
	 * @var BusinessRhClasse
	 */
	protected $objDiplomaLegal;

    function __construct($objDiplomaLegal)
    {
        global $MIOLO, $module, $item;
		$this->objDiplomaLegal = $objDiplomaLegal;
        $this->SetClose($MIOLO->GetActionURL($module,'main:diplomalegal',$item));
        parent::__construct('Dados do Diploma Legal');
        $this->EventHandler();
    }

    function CreateFields()
    {
       global $MIOLO;
	   
		$fields = array(
            new TextField('idDiplomaLegal','','Código','4'),
            new TextField('descricao','','Descrição','20','Máximo 20 caracteres'),
        );
		
        $this->SetFields($fields);
        
       $this->idDiplomaLegal->AddAttribute('maxlength','2');
       $this->descricao->AddAttribute('maxlength','20');

		$this->SetFieldAttr('idDiplomaLegal','readonly',true);
		
		$buttons = array(
			new FormButton('btnSalvar','Enviar')
            );
		$this->SetButtons($buttons);
		$validators = array(
           new RequiredValidator('descricao'),
		);
	    $this->SetValidators($validators);
		 $this->SetData();
    }
	
	function SetData()
	{
		$data = $this->objDiplomaLegal;
        $this->SetFieldValue('idDiplomaLegal',$data->idDiplomaLegal);
        $this->SetFieldValue('descricao',strtoupper($data->descricao));
	}

	public function btnSalvar_click()
	{
      global $MIOLO;

		$data = $this->GetData();
		
		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
		$data->descricao = str_replace($caracteres,"",$data->descricao);
		
		if(strlen(trim($data->descricao)) < '5')
		{
			$this->addError('Informe a Descrição do Diploma Legal');
		}
		else
		{
			$this->objDiplomaLegal->SetData($data);
			$this->objDiplomaLegal->save();
		   $go = $MIOLO->GetActionURL('rh','main:diplomalegal',$this->objDiplomaLegal->idDiplomaLegal);
	      $MIOLO->Information('Dados do Diploma Legal atualizados com sucesso.', $go );
		}
	}

 }
?>
