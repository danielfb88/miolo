/**
 * Formulário de edição de dados do Vinculo
 */
class frmVinculoDados extends Form
{
	/**
	 * Objeto Vinculo
	 * @access protected
	 * @var BusinessRhVinculo
	 */
	protected $objVinculo;

    function __construct($objVinculo)
    {
		$this->objVinculo = $objVinculo;
        parent::__construct('Dados do Vínculo');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;
	   
        $tabelaGeral = $MIOLO->GetBusiness('common','tabelageral');
        $query = $tabelaGeral->ListByTabela('RH_REGIMEJUR');
		$fields = array(
            //new Selection('regimeJuridico','','Regime Jurídico',$query->chunkResult(0,0)),
            //new CalendarField('dataPosse','','Data da Posse',15),
            //new CalendarField('dataExercicio','','Data do Exercício',15),
            //new CalendarField('dataConcurso','','Data do Concurso',15),
            //new CalendarField('dataFimContrato','','Fim do Contrato',15)
	    array(
 	    	new TextField('idVinculo','','Matrícula','7'),
            	new TextField('dvIdVinculo','','DV','1'),
    	    	new CalendarField('dataPosse','','Data posse','15'),
    	    	new CalendarField('dataExercicio','','Data exercício','15'),),
      	    array(
   	    	new CalendarField('dataConcurso','','Data concurso','15'),
   	    	new CalendarField('dataFimContrato','','Data fim contrato','15'),
		new TextField('classificacaoConcurso','','Classificação concurso','3'),
		)
	   

	    
        );
        $this->SetFields($fields);
        $this->setFieldAttr('idVinculo','readonly',TRUE);
        $this->setFieldAttr('dvIdVinculo','readonly',TRUE);

		$buttons = array(
			new FormButton('btnPost','Enviar')
        );
		$this->SetButtons($buttons);
		$this->SetData();
    }

	function SetData()
	{
		$data = $this->objVinculo;
        $this->SetFieldValue('idVinculo',$data->idVinculo);
        $this->SetFieldValue('dvIdVinculo',$data->dvIdVinculo);
        $this->SetFieldValue('dataPosse',$data->dataPosse);
        $this->SetFieldValue('dataExercicio',$data->dataExercicio);
    	$this->SetFieldValue('dataConcurso', $data->dataConcurso);
        $this->SetFieldValue('dataFimContrato',$data->dataFimContrato);
	    $this->SetFieldValue('classificacaoConcurso', $data->classificacaoConcurso);
	}

	public function btnPost_click()
	{
		$this->objVinculo->SetData($this->GetData());
		$this->objVinculo->save();
	}

 }
