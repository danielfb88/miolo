class frmVinculoEditDadosVinculo extends Form
{
	protected $objVinculo;
    protected $provimento;
    protected $grupoOcorrencia;
    protected $ocorrencia;
    protected $today;

    function __construct($objVinculo)
    {
        global $MIOLO;
        
        $this->today = date('d/m/Y');
	$this->objVinculo = $objVinculo;
        parent::__construct('Edição dos dados do vínculo');
        $this->eventHandler();
    }

    function CreateFields()
    {

	$fields = array(
		new MCalendarField('dataConcurso',$this->objVinculo->dataConcurso,'Data Concurso','10'),
		new MCalendarField('dataPosse',$this->objVinculo->dataPosse,'Data Posse','10'),
		new MTextField('classificacaoConcurso',$this->objVinculo->classificacaoConcurso,'Classificação no Concurso','4'),
			);	
	$this->setFields($fields);
	$buttons = array(
		new MButton('btnEdit','Editar')
			);
	$this->setButtons($buttons);
	
    }
    function btnEdit_click()
    {
	global $MIOLO, $page, $action, $item;
	
	$data = $this->GetData();
	$this->objVinculo->setData($data);
	try
	{
       		$this->objVinculo->save();
		$msg = "Dados editados com sucesso.";
		$go = $MIOLO->getActionUrl('rh','main:vinculo',$this->objVinculo->idVinculo,array('form'=>'dadosFuncionais'));
		$MIOLO->information($msg,$go);
	}
        catch ( Exception $e )
	{
		$this->AddError("Informe o seguinte erro a equipe de Suporte: ".$e);
	}
    }

 }
?>
