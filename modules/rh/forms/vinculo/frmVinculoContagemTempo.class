/**
 * Formulário de exibição dos dados de Contagem de Tempo
 */
class frmVinculoContagemTempo extends MCSSForm
{
    /**
     * Objeto Vinculo
     * @access protected
     * @var BusinessRhVinculo
     */
    protected $objContagem;

    function __construct($objContagem)
    {
        $this->objContagem = $objContagem;
        parent::__construct('Dados');
        $this->SetAlternate(true);
        $this->setClose($this->manager->getActionUrl('rh','main:vinculo',$objContagem->idVinculo,array('form'=>'contagem')));
        $this->EventHandler();
    }
    function CreateFields()
    {
        global $MIOLO, $context;
        
        $this->SetField(0,0,18,new MLabel('Vínculo:'));
        $this->SetField(0,1,15,new MTextLabel('idVinculo','','Vínculo'));
        $this->SetField(0,2,10,new MLabel('Nome:'));
        $this->SetField(0,3,15,new TextLabel('nome','','Nome'));
        
        $this->SetField(1,0,18,new MLabel('Sexo'));
        $this->SetField(1,1,10,new TextLabel('sexo','','Sexo'));
        
        $action = $context->action;
        $close = $MIOLO->GetActionURL('rh',$action, $this->objContagem->idVinculo, array("form"=>"contagem") );
        $buttons = array(
            new FormButton('btnClose','Fechar', $close)
        );
        $this->SetButtons($buttons);
        $this->SetData();
        $this->setFieldAttr('idVinculo','showLabel',true);
    }

    function SetData()
    {   
        global $MIOLO;
        $contagem = $this->objContagem;
        $this->SetFieldValue('idVinculo',$contagem->idVinculo);
        $this->SetFieldValue('nome',$contagem->nome);
		$this->SetFieldValue('sexo',$contagem->sexo);
    }

    public function btnClose_click()
    {
    }

 }
?>
