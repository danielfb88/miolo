MIOLO::Import('modules::rh::controls::linkcontrato');

class frmContratoTerceirizadoFind extends Form
{
    function __construct()
    {
        $this->Form('Pesquisar Contratos');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

        $ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('rh','gridContratos');
        $grid->SetTitle(NULL);

        $btnFind = new ButtonFind('');
        
        $newLink = new LinkContrato('lnkNew',FALSE);
        $newLink->setNew();
        $fields = array(
            array(
                $numero = new MTextField('numero','','Número',8),
                new MTextLabel('ou','-OU-','&nbsp;'),
                new MTextField('instituicao','','Instituição',55),
                $btnFind,
            ),
            $newLink,
            $grid
        );
       
        $validators = array(
           new MMaskValidator('numero','','999999999999','required'),
		);
		$numero->AddAttribute('maxlength',8);
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
