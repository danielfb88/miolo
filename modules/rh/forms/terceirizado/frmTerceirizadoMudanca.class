class frmTerceirizadoMudanca extends MForm
{
	protected $terceirizado;
	function frmTerceirizadoMudanca($terceirizado)
	{
		global $MIOLO, $module, $self;
		$this->terceirizado = $terceirizado;
		parent::__construct("Mudança Múltipla");
		$this->EventHandler();
	}

	function CreateFields()
	{
		global $MIOLO, $module, $self, $action;
		
		$terceirizado = $this->terceirizado;
		$terceirizado->GetProvimentos();
		$provimento = $terceirizado->GetProvimentoAtual();
		
		//contrato
        $provimento->retrieveassociation('contrato');
        
		//jornada
		$objJornada = $this->manager->GetBusiness('rh','jornada');
		$query = $objJornada->listAll();
		$jornadas = $query->chunkResult();
		asort($jornadas);
		$objEscala = $this->manager->GetBusiness('rh','escala');
		$query = $objEscala->listAll();
		$escalas = $query->chunkResult();
		asort($escalas);
		$arrJE = ($jornadas + $escalas);

		//função
		$objFuncao = $this->manager->GetBusiness('rh','funcaoterceirizado');
		$query = $objFuncao->listAll();
		$funcoes = $query->chunkResult();
		
	   //verifica escala
		if ($provimento->isEscala())
		{
		    $idJE = $provimento->escala->idEscala;
		}
		else 
		{
		    $idJE = $provimento->jornada->idJornada;
		}	

		//local de trabalho
		$localTrab = $this->manager->getBusiness('rh','localterceirizado',$provimento->idLocalTerceirizado);		

		//criação de campos
			$fields = Array(     
		        new MHiddenField('idLocalTerceirizado',$provimento->idLocalTerceirizado),
				new MSelection('idJornada',$idJE,'Jornada',$arrJE),
				new MSelection('idFuncao',$provimento->funcao->idFuncaoTerceirizado,'Função',$funcoes),
				new MLookupFieldValue('lkpLocal',$localTrab->nome,'Local de Trabalho',70),
				new MHiddenField('idinstituicao',$terceirizado->provimentos[0]->instituicao->idinstituicao), 
				new MLookupFieldValue('instituicao',strtoupper($terceirizado->provimentos[0]->instituicao->nome),'Instituição',70),
                new MHiddenField('idContrato',$provimento->contrato->idContrato), 
    			new MLookupFieldValue('lkpContrato',strtoupper($provimento->contrato->numContrato),'Contrato',12),
	            new MCalendarField('dataInformada','','Data')          
			);
		
		$this->SetFields($fields);
        
		//lookup local de trabalho
		$this->SetFieldAttr('lkpLocal','module','rh');
   	 	$this->SetFieldAttr('lkpLocal','item','local');
  	 	$this->SetFieldAttr('lkpLocal','event','filler');
    	$this->SetFieldAttr('lkpLocal','related','idLocalTerceirizado,lkpLocal,null,null');
		
		//lookup instituição
		$this->SetFieldAttr('instituicao','module','common');
        $this->SetFieldAttr('instituicao','item','instituicao');
        $this->SetFieldAttr('instituicao','event','filler');
        $this->SetFieldAttr('instituicao','related','idinstituicao,null,instituicao');
        
        //lookup contrato
		$this->SetFieldAttr('lkpContrato','module','rh');
        $this->SetFieldAttr('lkpContrato','item','contrato');
        $this->SetFieldAttr('lkpContrato','event','filler');
        $this->SetFieldAttr('lkpContrato','related','idContrato,lkpContrato,null,null'); 
		
		//botões	
		$buttons = Array
		(
			new FormButton('btnPost','Enviar')
		);
		$this->SetButtons($buttons);
		
		$this->SetClose($MIOLO->GetActionURL($module,$self));
	}
	
	function btnPost_click()
	{
		global $MIOLO, $module, $self, $action;
		
		$terceirizado = $this->terceirizado;
		$dataInformada = $this->GetFieldValue('dataInformada');		
		$idLocal = $this->GetFieldValue('idLocalTerceirizado');
		$idFuncao = $this->GetFieldValue('idFuncao');
		$idInstituicao = $this->GetFieldValue('idinstituicao');
	    $idJornada = $this->GetFieldValue('idJornada');
	    $idContrato = $this->GetFieldValue('idContrato');
		
		$go = $MIOLO->GetActionURL('rh','main:terceirizado',$terceirizado->idTerceirizado,array('form'=>'mudanca'));

		//MUDANÇAS
	    if ( $terceirizado )
		{
			if($dataInformada != '')
			{
				if ( !$terceirizado->existeOcorrencia($dataInformada) )
				{
				
					try 
					{
						$terceirizado->BeginTransaction();
						$terceirizado->save();
						$provimento = $this->manager->getBusiness('rh','provterceirizado');	
						$provimento->SetTransaction($terceirizado->GetTransaction());
						//$provimento->finalizaUltimoProvimento($terceirizado->idTerceirizado,'4',$dataInformada,$idJornada);
						$srtjornada = strlen($this->GetFieldValue('idJornada'));
						switch ($srtjornada) {
						    case 1:
								$idJornada = '0';
						        break;
						    case 2:
						        $idJornada = $this->GetFieldValue('idJornada');
								$provimento->finalizaUltimoProvimento($terceirizado->idTerceirizado,'7',$dataInformada,$idJornada, $idFuncao, $idLocal, $idInstituicao, $idContrato);
						        break;
						    case 4:
								$idJornada = '0';
								$idEscala = $this->GetFieldValue('idJornada');
								$provimento->finalizaUltimoProvimento($terceirizado->idTerceirizado,'7',$dataInformada, $idJornada, $idFuncao, $idLocal, $idInstituicao, $idContrato, $idEscala);
						        break;
						}
						$terceirizado->EndTransaction();
						$MIOLO->Information("Registro atualizado com sucesso!",$go);
					}
					catch ( Exception $e )
					{
						$MIOLO->Error("Erro ao gravar!",$go);
					}
				}
				else 
				{
					$MIOLO->Error("Já existe uma ocorrênica nesta data!",$go);	
				}				
			}
			else
			{
				$MIOLO->Error("Campo 'Data' não foi informado!",$go);
			}
			
		$this->AddError($terceirizado->GetErrors());	
		}		
	}
}
?>
