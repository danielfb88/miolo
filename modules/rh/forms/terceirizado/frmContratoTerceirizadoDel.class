/**
 * Formulário de exclusão de Contrato
 */
class frmContratoTerceirizadoDel extends Form
{
	/**
	 * Objeto contrato
	 * @access protected
	 * @var BusinessRhContrato
	 */
	protected $objContrato;

    function __construct($objContrato)
    {
		$this->objContrato = $objContrato;
        parent::__construct('Excluir Contrato');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $self;

		$action_sim = $MIOLO->GetActionURL('rh',$self,$this->objContrato->idContrato,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL('rh',$self,$this->objContrato->idContrato);


		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
		    $this->objContrato->beginTransaction();
		    $this->objContrato->DelContrato();
			$this->objContrato->Delete();
			$this->objContrato->endTransaction();
			if (!$this->objContrato->CheckError())
			{
				$MIOLO->Information('Contrato excluído com sucesso',$MIOLO->GetActionURL('rh','main:contrato:find'));
			}
			else
			{
				$MIOLO->Error("Informe o seguinte erro à equipe do CGCO: ".$this->objContrato->GetErrors());
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir esse contrato?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
