/**
 * Formulário de exclusão Terceirizado
 */
class frmTerceirizadoDel extends Form
{
	/**
	 * Objeto Terceirizado
	 * @access protected
	 * @var BusinessRhTerceirizado
	 */
	protected $objTerceirizado;

    function __construct($objTerceirizado)
    {
        global $MIOLO, $module, $item;

		$this->objTerceirizado = $objTerceirizado;
        parent::__construct('Excluir Terceirizado');
        $this->SetClose($MIOLO->GetActionURL($module,'main:terceirizado:find', $item));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $module, $self;

		$action_sim = $MIOLO->GetActionURL($module,$self,$this->objTerceirizado->idTerceirizado,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL($module,'main:terceirizado:find');

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
		    $this->objTerceirizado->BeginTransaction();
		    $this->objTerceirizado->DeletaProvimentos();
			$this->objTerceirizado->Delete();
			$this->objTerceirizado->EndTransaction();
			if (!$this->objTerceirizado->CheckError())
			{
				$MIOLO->Information('Terceirizado deletado com sucesso',$MIOLO->GetActionURL($module,'main:terceirizado:find'));
			}
			else
			{
				$MIOLO->Error($this->objTerceirizado->GetErrors());
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja deletar esse Terceirizado?",$action_sim,$action_nao);
		}
	   
    }

 }
?>
