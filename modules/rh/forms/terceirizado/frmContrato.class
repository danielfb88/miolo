/**
 * Form Contrato
 */
class frmContrato extends CompoundForm
{
	public $oid;
    protected $contrato;
    /**
     * Construtor
     */
    function __construct($objContrato)
    {
        global $MIOLO;
        $this->contrato = $objContrato;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('rh','main:contrato:find'));
        $this->SetTitle($this->contrato->instituicao->nome);
        $this->SetIcon($MIOLO->GetUi()->GetImage('rh','contrato_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $contrato = $this->contrato;
        if ($this->oid == NULL) $this->oid = $contrato->idContrato;

        // form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
                 $f = $ui->GetForm($module,'frmContratoTerceirizadoDados', $contrato, 'terceirizado'); 
                 break;
            case 'excluir'     : 
                 $f = $ui->GetForm($module,'frmContratoTerceirizadoDel', $contrato, 'terceirizado'); 
                 break;
        }
        if ($f)
        {
            $f->SetClose($MIOLO->GetActionURL('rh','main:contrato',$contrato->idContrato));
            $this->_form[0] = $f;
            $page->SetAction($history->Top('action'));
        }

        // panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('terceirizados',A_EXECUTE,'Editar',
            $ui->GetImage('rh','edit.png'),'rh',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('terceirizados',A_EXECUTE,'Excluir',
			$ui->GetImage('rh','excluir.png'),'rh',$action, $this->oid, array("form"=>"excluir"));

       
		$this->contrato->retrieveassociation('setor');			
		$this->_info[0] = new TextLabel('nome',$this->contrato->numContrato,'Número do Contrato');
		$this->_info[1] = new TextLabel('nome',$this->contrato->setor->nome,'Setor');
		$this->_info[2] = new TextLabel('nome',$this->contrato->dataInicio,'Data Início');
/*		$this->_info[3] = new TextLabel('nome',$this->contrato->dataFim,'Data Fim');
		$this->_info[4] = new TextLabel('nome',$this->contrato->dataProrrogacao,'Data de Prorrogação');  */
	}
}
