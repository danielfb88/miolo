/**
 * Formulário de edição de referências da classe
 */
class frmClasseReferencia extends Form
{
	/**
	 * Objeto referencia
	 * @access protected
	 * @var BusinessRhClasse
	 */
	protected $referencia;

    function __construct($objReferencia)
    {
		$this->referencia = $objReferencia;
        parent::__construct('Dados da Referência');
        $this->EventHandler();
    }

    function CreateFields()
    {
       global $MIOLO;
	   
		$fields = array(
            new MTextField('idReferencia','','Código','4'),
            new MTextField('nivelPadrao','','Nível Padrão','3')
        );
		
        $this->SetFields($fields);
        $this->idReferencia->AddAttribute('maxlength','4');
        $this->nivelPadrao->AddAttribute('maxlength','3');
		$this->SetData();	
		$buttons = array(
			new MButton('btnSalvar','Enviar'),
			new MButton('btnExcluir','Excluir')
            );
		$this->SetButtons($buttons);
		$this->SetButtonAttr('btnExcluir','visible',$this->referencia->isPersistent());

		$validators = array(
			new RequiredValidator('nivelPadrao'),
			new RequiredValidator('idReferencia'),
			
			new IntegerValidator('idReferencia')
			);

		$this->SetValidators($validators);
    }

	function SetData()
	{
		$this->SetFieldValue('idReferencia',$this->referencia->idReferencia);
		$this->SetFieldValue('nivelPadrao',$this->referencia->nivelPadrao);
	}
	public function btnSalvar_click()
	{
		global $MIOLO;

		$update = $this->referencia->isPersistent();
		$data = $this->getData();
		
		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
	   $data->nivelPadrao = str_replace($caracteres,"",$data->nivelPadrao);
	   
	   if (strlen(trim($data->nivelPadrao)) < '1')
		{
			$this->addError('Especifique Melhor o Campo Nivel Padrao.');
		}
		else {
			try {
		     		$this->referencia->SetData($data);
					$this->referencia->save();
		         $go = $MIOLO->GetActionURL('rh','main:classe',$this->referencia->idClasse, array('form'=>'referencias'));
					if ($update)
					{
			           $MIOLO->Information('Nível Padrão atualizado com sucesso.', $go );
					}
					else {
			         $MIOLO->Information('Nível Padrão inserido com sucesso.', $go );
					}
		     }catch (Exception $e)
		     {
		         $this->AddError($this->referencia->GetErrors());
		     }
		  }
	}

	function btnExcluir_click()
	{
        global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('rh','main:classe',$this->referencia->idClasse,array('form'=>'referencias','id'=>$this->referencia->idReferencia,'conf'=>'sim','event'=>'btnExcluir:click'));
		$action_nao = $MIOLO->GetActionURL('rh','main:classe',$this->referencia->idClasse,array('form'=>'referencias','id'=>$this->referencia->idReferencia));

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			$this->referencia->Delete();
			if (!$this->referencia->CheckError())
			{
				$MIOLO->Information('Nível Padrão excluído com sucesso',$MIOLO->GetActionURL('rh','main:classe',$this->referencia->idClasse,array('form'=>'referencias')));
			}
			else
			{
				$MIOLO->Error("Informe o seguinte erro à equipe do CGCO: ".$this->referencia->GetErrors());
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir o nível padrão ".$this->referencia->nivelPadrao."?",$action_sim,$action_nao);
		}
	}

}
?>
