class frmDependenteDel extends Form
{
  protected $dependente;

  function __construct($objDependente)
  {
    $this->dependente = $objDependente;
    parent::__construct('Excluir Dependente');
    $this->EventHandler();
  }

  function CreateFields()
  {
    $action_sim = $this->manager->GetActionURL('rh', 'main:dependente', $this->
      dependente->idDependente, array('form' => 'excluir', 'conf' => 'sim'));
    $action_nao = $this->manager->GetActionURL('rh', 'main:dependente', $this->
      dependente->idDependente);

    $conf = $this->GetFormValue('conf');

    if ($conf == 'sim')
    {
      try
      {
        $operacao = OP_DEL;
        $descricao = 'Dependente excluído com sucesso - ' . 'Funcionario: ' . $this->
          dependente->idFuncionario . 'Dependente: ' . $this->dependente->idDependente;

        $this->dependente->beginTransaction();
        $this->dependente->Delete();
        $this->dependente->log($operacao, $descricao);
        $this->manager->Information('Dependente excluído com sucesso', $this->manager->
          GetActionURL('rh', 'main:funcionario', $this->dependente->idFuncionario, array("form" =>
          "dependentes")));
        $this->dependente->endTransaction();
      }
      catch (exception $e)
      {
        $this->manager->Error("Informe o seguinte erro à equipe do CGCO: " . $e->
          getMessage(), $this->manager->GetActionURL('rh', 'main:dependente', $this->
          dependente->idDependente));
      }

    } else
    {
      $this->manager->Question("Tem certeza que deseja excluir o dependente " . $this->
        dependente->pessoa->nome . "?", $action_sim, $action_nao);
    }

  }

}

?>
