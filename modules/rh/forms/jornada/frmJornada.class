/**
 * Form Jornada
 */
class frmJornada extends CompoundForm
{
	public $oid;
    protected $jornada;
    /**
     * Construtor
     */
    function __construct($objJornada)
    {
        global $MIOLO, $module;
        $this->jornada = $objJornada;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL($module,'main:jornada:find'));
        $this->SetTitle($this->jornada->descricao);
        $this->SetIcon($MIOLO->GetUi()->GetImage($module,'jornada_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $jornada = $this->jornada;
        if ($this->oid == NULL) $this->oid = $jornada->idJornada;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
                 $f = $ui->GetForm($module,'frmJornadaDados', $jornada,'jornada'); 
                 break;
            case 'excluir'     : 
                 $f = $ui->GetForm($module,'frmJornadaDel', $jornada,'jornada'); 
                 break;
            default            :
                $f = NULL;
                break;
        }

        if ($f)
        {
            $f->SetClose($MIOLO->GetActionURL($module,'main:jornada',$jornada->idJornada));
            $this->_form[0] = $f;
            $page->SetAction($history->Top('action'));
        }

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('rh_jornada_dados',A_EXECUTE,'Editar',
            $ui->GetImage($module,'edit.png'),$module,$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('rh_jornada_excluir',A_EXECUTE,'Excluir',
					$ui->GetImage($module,'excluir.png'),$module,$action, $this->oid, array("form"=>"excluir"));

// info

        $this->_info[0] = new TextLabel('idJornada',$this->jornada->idJornada,'Código');
        $this->_info[1] = new TextLabel('descricao',$this->jornada->descricao,'Descricao');
	}

}
?>
