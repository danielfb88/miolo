	/*
	funcao que coloca ponto e o traço no cpf 
	*/
	function convertCPF($cpf)
	{
		if ($cpf!=null)
		{			
			for ($a=0;$a<=strlen($cpf)-1;$a++)
			{
				if (($a==3) || ($a==6) || ($a==9)) 
				{
					if($a!=9)
					{
					  $nCPF.='.'.$cpf[$a];
					}
					 else 
					 {
					  $nCPF.='-'.$cpf[$a];
					 }
				}
				else
				{
					$nCPF.=$cpf[$a];
				}
				
			}			
		 return $nCPF;	
		}
