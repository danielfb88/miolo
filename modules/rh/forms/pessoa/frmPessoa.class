MIOLO::Import('modules::rh::controls::linkpessoa');

class frmPessoa extends MCompoundForm
{
    var $oid;
    var $pessoa;

    function __construct($objPessoa)
    {
        $this->pessoa = $objPessoa;
        parent::__construct();
        $this->SetClose($this->manager->GetActionURL('rh','main'));
        $this->SetTitle($this->pessoa->nome);
        $this->SetIcon($this->manager->GetUI()->GetImage('rh','pessoa_mini.png'));
    }

    function CreateFields()
    {
        $pessoa = $this->pessoa;
        Util::SetIfNull($this->oid, $pessoa->idpessoa);
        $ui = $this->manager->GetUI();

// form
        $form = Form::GetFormValue('form');
        $formClass['dadospessoais']  = 'frmPessoaDadosPessoais';
        $formClass['documentos']     = 'frmPessoaDocumentos';
        $formClass['contato']        = 'frmPessoaContato';
        $formClass['dadosbancarios'] = 'frmPessoaDadosBancarios';
        $formClass['outros']         = 'frmPessoaOutros';
        $formClass['relacaocomufjf'] = 'frmPessoaRelacaoComUfjf';
        if (isset($formClass[$form]))
        {
            $this->_form[0] = $f = $ui->GetForm('rh',$formClass[$form], $pessoa, 'pessoa');
            $f->SetClose($this->manager->GetActionURL('rh','main:pessoa',$this->oid));
            $this->page->SetAction($this->manager->history->Top('action'));
        }

        $actionFind = $this->manager->GetActionURL('rh','main');

        if(!$pessoa->isPersistent())
        {
            $this->manager->Assert(false,'A pessoa não existe nos registros de pessoal. Entre em contato com a equipe de desenvolvimento',$actionFind);
        }

// panel
        $action = $this->manager->context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->SetIconType('small');
        
        $panel->InsertUserAction(0,'rh_info',A_EXECUTE,'Dados Bancários',
            $ui->GetImage('rh','dadosbancarios_mini.png'),'rh',$action, $this->oid, array("form"=>"dadosbancarios"));

        $panel->InsertUserAction(0,'rh_info',A_EXECUTE,'Contato',
            $ui->GetImage('rh','telefone_mini.png'),'rh',$action, $this->oid, array("form"=>"contato"));

        $panel->InsertUserAction(0,'rh_info',A_EXECUTE,'Documentos',
            $ui->GetImage('rh','documento_mini.png'),'rh',$action, $this->oid, array("form"=>"documentos"));
            
        $panel->InsertUserAction(0,'rh_info',A_EXECUTE,'Dados Pessoais',
            $ui->GetImage('rh','servidor_mini.png'),'rh',$action, $this->oid, array("form"=>"dadospessoais"));
       // $panel->InsertUserAction(0,'rh_info',A_EXECUTE,'Dados de Pesquisa',
       //     $ui->GetImage('','default.png'),'rh',$action, $this->oid, array("form"=>"outros"));
//        $panel->InsertUserAction(0,'rh_info',A_EXECUTE,'Relação com UFJF',
//            $ui->GetImage('rh','relacao.png'),'rh',$action, $this->oid, array("form"=>"relacaocomufjf"));
        
// info
    }
}
?>
