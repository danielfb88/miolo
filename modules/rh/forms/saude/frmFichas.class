class frmFichas extends MForm
{
    function __construct()
    {
        parent::__construct('Fichas Clínicas Ocupacionais');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;

        $grid = $this->manager->GetUI()->GetGrid('rh','gridSaudeFicha');
        $grid->SetTitle(NULL);
        $grid->setRowMethod('frmFichas','rowMethod');
        $grid->addActionUpdate($this->manager->getActionURL('rh','main:saude:ficha_clinica_ocupacional_update',MForm::getFormValue('item'),array("ficha"=>'%0%')));
        $actionlink = new MActionHyperLink("novo","Nova Ficha Clínica Ocupacional","rh","main:saude:ficha_clinica_ocupacional",MForm::getFormValue('item'));
        $fields = array($actionlink,$grid);
        $this->SetFields($fields);
        $this->defaultButton = false;
    }

    function rowMethod($i,$row,$actions,$columns)
    {
        switch ($row[1]) {
            case 1: $columns['tipoexame']->control[$i]->setValue("Adminissional"); break;
            case 2: $columns['tipoexame']->control[$i]->setValue("Periódico"); break;
            case 3: $columns['tipoexame']->control[$i]->setValue("Demissional"); break;
            case 4: $columns['tipoexame']->control[$i]->setValue("Mudança de Função"); break;
            case 5: $columns['tipoexame']->control[$i]->setValue("Retorno ao Trabalho"); break;
        }
    }
}
