class frmOcorrenciaNew extends Form
{
	protected $objgrupoocorrencia;

    function __construct($objgrupoocorrencia)
    {
		
		$this->objgrupoocorrencia = $objgrupoocorrencia;
		$this->Form('Incluir Nova Ocorrência');
        $this->EventHandler();
        $this->SetTitle('Nova Ocorrência'.$this->objgrupoocorrencia->descricao);
    }

    function CreateFields()
    {
       global $MIOLO;
       
	   $situacao = $MIOLO->GetBusiness('rh','situacaofuncional');
       $fields = array(
  		 new TextField('idgrupoocorrencia',$this->objgrupoocorrencia->idgrupoocorrencia,'ID'),
	         new TextField('idocorrencia','','Id nova ocorrência','3'),
                 new TextField('descricao','','Descricao','40'),
		new Selection('idsituacao','','Situação')

        );
		
        $this->SetFields($fields);

	    $query = $jornadas->ListAll();
	    $this->SetFieldAttr('idsituacao','options',$query->chunkResult());
	    $this->SetFieldAttr('idgrupoocorrencia','readonly',true);
           

		$buttons = array(
        	new FormButton('btnNew', 'Incluir Ocorrência')
            );
		$this->SetButtons($buttons);

    }

    function btnNew_click()
    {
	global $MIOLO, $module, $page;

        $data = new FormData();
    	$data->idgrupoocorrencia = $this->GetFormValue('idgrupoocorrencia');
	$data->idocorrencia = $this->GetFormValue('idocorrencia');
        $data->idSituacao = $this->GetFormValue('idsituacao');
        $data->descricao = $this->GetFormValue('descricao');

	$ocorrencia = $MIOLO->GetBusiness($module,'ocorrencia');
	$ocorrencia->SetData($data);
	$ocorrencia->save();
        $go = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$this->objgrupoocorrencia->idgrupoocorrencia);
        $page->Redirect($go);

    }

 }
