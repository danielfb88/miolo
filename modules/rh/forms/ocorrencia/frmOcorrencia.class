global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkocorrencia.class','rh');

/**
 * Form Classe
 */
class frmOcorrencia extends CompoundForm
{
   public $oid;
    protected $ocorrencia;
    /**
     * Construtor
     */
    function __construct($objocorrencia)
    {
        global $MIOLO;
        
        $this->ocorrencia = $objocorrencia;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('rh','main:grupoocorrencia',$this->ocorrencia->idGrupoOcorrencia));
        $this->SetTitle($this->ocorrencia->descricao);
        $this->SetIcon($MIOLO->GetUi()->GetImage('rh','documentos_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

       $ocorrencia = $this->ocorrencia;
        if ($this->oid == NULL) $this->oid = $ocorrencia->idOcorrencia;


        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados': 
                 $f = $ui->GetForm($module,'frmOcorrenciaDados', $ocorrencia, 'ocorrencia'); 
                 break;
            case 'excluir': 
                 $f = $ui->GetForm($module,'frmOcorrenciaDel', $ocorrencia, 'ocorrencia'); 
                 break;
        }
        if ($f)
        {
            $f->SetClose($MIOLO->GetActionURL('rh','ocorrencia',$ocorrencia->idOcorrencia));
            $this->_form[0] = $f;
            $page->SetAction($history->Top('action'));
        }

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('rh_ocorrencia_dados',A_EXECUTE,'Dados da Ocorrência',
        $ui->GetImage('','default.png'),'rh',$action, $this->oid, array("form"=>"ocorrencia"));
        $panel->AddUserAction('rh_ocorrencia_excluir',A_EXECUTE,'Excluir',
	$ui->GetImage('rh','lixeira.png'),'rh',$action, $this->oid, array("form"=>"excluir"));

// info
               $this->_info[0] = new TextLabel('idOcorrencia',$this->ocorrencia->idOcorrencia,'ID Ocorrência');
               $this->_info[1] = new TextLabel('txtNome',$this->ocorrencia->descricao,'Nome');
       
	   
	}
}
?>
