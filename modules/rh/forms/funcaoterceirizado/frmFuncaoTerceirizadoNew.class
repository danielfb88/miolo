class frmFuncaoTerceirizadoNew extends MForm
{

    function __construct()
    {
        global $MIOLO;
        parent::__construct('Incluir Nova Função (Terceirizados)');
        $this->SetClose($MIOLO->GetActionURL('rh','main:funcaoterceirizado:find'));
        $this->EventHandler();
    }

    
    function CreateFields()
    {
       global $MIOLO;
	   
		$fields = array(
            new MTextField('idFuncaoTerceirizado','','Código','4'),
            new MTextField('descricao','','Descrição','40'),
        );
		
        $this->SetFields($fields);
		
		$buttons = array(
        	new MButton('btnNew', 'Incluir Função Terceirizado')
            );
		$this->SetButtons($buttons);
		
		$this->idFuncaoTerceirizado->AddAttribute('maxlength','4');
      $this->descricao->AddAttribute('maxlength','40');

		$validators = array(
           new MRequiredValidator('idFuncaoTerceirizado'),
           new MRequiredValidator('descricao'),
           
           new IntegerValidator('idFuncaoTerceirizado'),
		);
       $this->SetValidators($validators);

    }

    
    function btnNew_click()
    {
		global $MIOLO, $module;

	        $data = $this->GetData();
		$data->descricao = strtoupper($data->descricao);
		$id = $data->idFuncaoTerceirizado;
		
		// Retirando os caracteres especiais. :-)
		$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
		$data->descricao = str_replace($caracteres,"",$data->descricao);
		
		if(is_numeric($id))
		{
	      $funcaoTerceirizado = $MIOLO->GetBusiness($module,'funcaoterceirizado',$id);
			if (strlen(trim($id)) < '1' || $id == 0 )
			{
				$this->addError('Informe o id da Função Terceirizados');
			}
			elseif($funcaoTerceirizado->isPersistent())
			{
				$this->addError('Já existe um registro de Função Terceirizados com esse ID. Favor digite outro ID');
			}
			elseif(strlen(trim($data->descricao)) < '5')
			{
				$this->addError('Informe a Descrição');
			}
			else
			{
				$funcaoTerceirizado->SetData($data);
		        	$funcaoTerceirizado->save();
				$go = $MIOLO->GetActionURL('rh','main:funcaoterceirizado',$funcaoTerceirizado->idFuncaoTerceirizado);
	   			$MIOLO->Information('Dados da Função Terceirizados inseridos com sucesso.', $go );
			}
		}
		else
		{
			$this->addError('Informe o id da Função Terceirizados no padrão numérico');
		}

	}
 }
?>
