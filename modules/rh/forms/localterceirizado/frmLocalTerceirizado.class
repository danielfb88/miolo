/**
 * Form Local Terceirizado
 */
class frmLocalTerceirizado extends CompoundForm
{
	public $oid;
    protected $localTerceirizado;
    /**
     * Construtor
     */
    function __construct($objLocalTerceirizado)
    {
        global $MIOLO;
        $this->localTerceirizado = $objLocalTerceirizado;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('rh','main:localterceirizado:find'));
        $this->SetTitle($this->localTerceirizado->nome);
        $this->SetIcon($MIOLO->GetUi()->GetImage('rh','local_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $localTerceirizado = $this->localTerceirizado;
        if ($this->oid == NULL) $this->oid = $localTerceirizado->idLocalTerceirizado;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
                 $f = $ui->GetForm($module,'frmLocalTerceirizadoDados', $localTerceirizado, 'localterceirizado'); 
                 break;
            case 'excluir'     : 
                 $f = $ui->GetForm($module,'frmLocalTerceirizadoDel', $localTerceirizado, 'localterceirizado'); 
                 break;
        }
        if ($f)
        {
            $f->SetClose($MIOLO->GetActionURL('rh','main:localterceirizado',$localTerceirizado->idLocalTerceirizado));
            $this->_form[0] = $f;
            $page->SetAction($history->Top('action'));
        }

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('rh_localterceirizado_dados',A_EXECUTE,'Editar',
            $ui->GetImage('rh','edit.png'),'rh',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('rh_localterceirizado_excluir',A_EXECUTE,'Excluir',
					$ui->GetImage('rh','excluir.png'),'rh',$action, $this->oid, array("form"=>"excluir"));

       
	}
}
?>
