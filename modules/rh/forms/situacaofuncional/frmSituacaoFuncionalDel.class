/**
 * Formulário de exclusão Situção Funcional
 */
class frmSituacaoFuncionalDel extends Form
{
	/**
	 * Objeto Situção Funcional
	 * @access protected
	 * @var BusinessRhSituacaoFuncional
	 */
	protected $objSituacaoFuncional;

    function __construct($objSituacaoFuncional)
    {
        global $MIOLO, $module;

		$this->objSituacaoFuncional = $objSituacaoFuncional;
        parent::__construct('Excluir Situção Funcional');
        $this->SetClose($MIOLO->GetActionURL($module,'main:situacaofuncional'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $module, $self;

		$action_sim = $MIOLO->GetActionURL($module,$self,$this->objSituacaoFuncional->idSituacao,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL($module,$self,$this->objSituacaoFuncional->idSituacao);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			$this->objSituacaoFuncional->Delete();
			if (!$this->objSituacaoFuncional->CheckError())
			{
				$MIOLO->Information('Situação excluída com sucesso',$MIOLO->GetActionURL($module,'main:situacaofuncional:find'));
			}
			else
			{
				$MIOLO->Error($this->objSituacaoFuncional->GetErrors());
			}
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir essa situação?",$action_sim,$action_nao);
		}
    }

 }
?>
