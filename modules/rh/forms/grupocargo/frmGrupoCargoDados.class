/**
 * Formulário de edição do Grupo Cargo
 */
class frmGrupoCargoDados extends Form
{
	/**
	 * Objeto GrupoCargo
	 * @access protected
	 * @var BusinessRhGrupoCargo
	 */
	protected $objgrupocargo;

    function __construct($objgrupocargo)
    {
	$this->objgrupocargo = $objgrupocargo;
    parent::__construct('Editar Dados do Grupo Cargo');
    $this->EventHandler();
    }

    function CreateFields()
    {
       global $MIOLO;
	   
   		$fields = array(
			new TextField('idGrupoCargo','','ID','3'),
            new TextField('descricao','','Nome','40')
		
        );
		
      $this->SetFields($fields);
	        
       	  $this->descricao->AddAttribute('maxlength','40');
	        
	        $validators = array(
            //new RequiredValidator('idgrupocargo'),
            new RequiredValidator('descricao'),
            
            new IntegerValidator('idgrupocargo'),
        );
        
        $this->SetValidators($validators);
		  $this->SetFieldAttr('idGrupoCargo','readonly',true);
	
		$buttons = array(
		new FormButton('btnSalvar','Enviar')
        );
		
		$this->SetButtons($buttons);
		$this->SetData();
    }
	
	function SetData()
	{
	  $data = $this->objgrupocargo;
	  $this->SetFieldValue('idGrupoCargo',$data->idGrupoCargo);
	  $this->SetFieldValue('descricao',$data->descricao);
	}

	public function btnSalvar_click()
	{
		global $MIOLO;
		$data = $this->GetData();
		
		 // Retirando os caracteres especiais. :-)
			$caracteres = array("#","*", "&", "%", "(", ")", "$", "@", "!", "'", "\"", "+", "=", "-", "/", ".", ",", "^", "?", ":", "}", "]", "[", "º","{","|",">","<",";");
			$data->descricao = str_replace($caracteres,"",$data->descricao);
		
		if(strlen(trim($data->descricao)) < '5')
		{
			$this->addError('Informe o Nome do Grupo Cargo');
		}
		else
		{
			$this->objgrupocargo->SetData($data);
			$this->objgrupocargo->save();
			$go = $MIOLO->GetActionURL('rh','main:grupocargo','&item='.$this->objgrupocargo->idGrupoCargo);
   			$MIOLO->Information('Dados do Grupo Cargo alterados com sucesso.', $go );
		}
	}
 }
?>
