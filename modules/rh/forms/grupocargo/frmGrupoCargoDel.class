/**
 * Formulário de exclusão de Grupo Cargo
 */
class frmGrupoCargoDel extends Form
{
	/**
	 * Objeto grupocargo
	 * @access protected
	 * @var BusinessRhGrupoCargo
	 */
	protected $objgrupocargo;

    function __construct($objgrupocargo)
    {
		$this->objgrupocargo = $objgrupocargo;
        parent::__construct('Excluir Grupo Cargo');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $module, $self;

		$action_sim = $MIOLO->GetActionURL($module,$self,$this->objgrupocargo->idGrupoCargo,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL($module,$self,$this->objgrupocargo->idGrupoCargo);


		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			$this->objgrupocargo->Delete();
			if (!$this->objgrupocargo->CheckError())
			{
				$MIOLO->Information('Grupo Cargo excluído com sucesso',$MIOLO->GetActionURL($module,'main:grupocargo:find'));
			}
			else
			{
				$MIOLO->Error($this->objgrupocargo->GetErrors());
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir esse Grupo Cargo ?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
