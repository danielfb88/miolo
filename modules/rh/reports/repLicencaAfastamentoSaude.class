class repLicencaAfastamentoSaude extends MPDFReport
{
    var $img;
    var $timestamp;
    var $tipoLicAfast;
    var $dataRef;
    var $query;

    function __construct($data)
    {
        global $MIOLO, $module, $page, $context, $self, $action, $perms;
        parent::__construct(NULL,NULL,55,NULL,'landscape','a4');
        $ui = $MIOLO->GetUI();
        $this->img = $ui->GetImageSrc('logo_siga.png',$module);
        $this->timestamp = date('d/m/Y G:i');
        $this->pdf->ezStartPageNumbers(800,540,10,'rigth','Página: {PAGENUM}/{TOTALPAGENUM}');
        $this->pdf->ezSetMargins(100,30,20,20);
        
        // recuperação dos dados do form
        $this->tipoLicAfast = $data->tipoLicAfast;
        $this->dataRef = $data->dataRef;

        // greação das informações de cabeçalho e rodapé é 
        // necessário obter os dados do form antes (caso use no rodapé ou cabeçalho)
        $this->GeneratePageHeader();
        $this->GeneratePageFooter();

        // formação dos dados que aparecerão no report
        $licAfast = $MIOLO->GetBusiness('rh','licafast');
        $this->query = $licAfast->listLicAfastsByTipo($this->tipoLicAfast,$this->dataRef);
        if ( count($this->query->result) > 0 )
            if ( is_array ($this->query->result) )
                foreach ($this->query->result as $row)
                {
                    $dadosParaRelatorio[] = $row;
                }

        // CASO HAJA DADOS
        if ( is_array($dadosParaRelatorio) )
        {
            $columns = array (
                new PDFReportColumn('idVinculo', 'Id Única', 'left', true, 10, true, null, true),
                new PDFReportColumn('nome', 'Nome', 'left', true, 40, true, null, true),
                new PDFReportColumn('sigla', 'Sigla Setor', 'left', true, 20, true, null, true),
                new PDFReportColumn('dataInicio', 'Início', 'left', true, 13, true, null, true),
                new PDFReportColumn('dataFim', 'Fim', 'left', true, 13, true, null, true),
            );
            $this->SetWidth(100);
            $this->SetColumns($columns);
            $colDetail = $this->columns;
            $this->GenerateData($dadosParaRelatorio);
            $this->SetOption('showHeadings', 0);
            $this->SetOption('showLines', 1);
        }
        else 
        {
            $this->SetWidth(100);
            $this->SetOption('showHeadings', 0);
            $this->SetOption('showLines', 1);
            $x0 = $this->pdf->left;          
            $this->pdf->ezSetDy(-32, 'makeSpace');
            $y = $this->pdf->y;
            $this->pdf->addText($x0 +50, $y - 50, 12, 'Não foram encontrados registros');
        }
    }

    function GeneratePageHeader()
    {
        $x0 = $this->pdf->left;
        $x1 = $this->pdf->right;
        $h = $this->pdf->getFontHeight(10);
        $header = $this->pdf->openObject();
        $this->pdf->saveState();
        $this->pdf->addPngFromFile($this->img, 40, 520 + $x0, 54, 27);
        $this->pdf->addText($x0+85, 560, 12, 'IF - Instituto Federal');
        $this->pdf->addText($x0+85, 560 -$h -$h , 10, 'SIGA - Sistema Integrado de Gestão Acadêmica - Módulo Recursos Humanos');
        $y = 550 - $h - $h - 5;
        $this->pdf->SetColor(0.4,0.4,0.4);
        $this->pdf->filledRectangle($x0, $y-20, $x1-30, 16 );
        $this->pdf->SetColor(1,1,1);
        $this->pdf->addText($x0 + 5, $y - 16, 10, "Licenças de Saúde. Data de referência: " . $this->dataRef);
        $this->pdf->restoreState();
        $this->pdf->closeObject();
        $this->pdf->addObject($header, 'all');
    }

    function GeneratePageFooter()
    {
        $x0 = $this->pdf->left;
        $x1 = $this->pdf->right;
        $footer = $this->pdf->openObject();
        $this->pdf->saveState();
        $this->pdf->SetStrokeColor(0, 0, 0);
        $this->pdf->line($x0, 28, $x1, 28);
        $this->pdf->addText($x0, 19, 9, $this->timestamp);
        $this->pdf->restoreState();
        $this->pdf->closeObject();
        $this->pdf->addObject($footer, 'all');
    }
    
    function GenerateData($data)
    {
        $this->pdf->ezSetDy(-5);
        $this->SetData($data);
        $this->rawdata = $this->GenerateTableData();
        $this->GenerateBody($this->rawdata);
    }

    function Generate()
    {
        $this->SetOutput();
        $this->Execute();
    }
}
?>
