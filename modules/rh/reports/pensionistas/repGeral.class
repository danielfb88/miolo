$MIOLO->Uses('reports/repMPDFReport.class','ensino');//common');

class repGeral extends repMPDFReport
{


    function __construct($array)
    {
        //global $module;

        $MIOLO = MIOLO::getInstance();
        //$this->imgufjf   = $MIOLO->GetUI()->GetImageSrc('siga_adm.png',$module);

        parent::__construct( $array['title'],  //sub-títulos: nome do relatório, descrição de filtro, descrição de ordem, etc
                             'landscape'    );

        $this->SetOption('shaded'      ,1);
        $this->SetOption('showHeadings',1);
        $this->SetOption('showLines'   ,2); //0: sem borda, sem horizontais, sem verticais; NÃO separa títulos
                                            //1: COM borda, sem horizontais, COM verticais;     separa títulos
                                            //2: COM borda, COM horizontais, COM verticais;     separa títulos

        $this->Grade('',                //título da grade
                     $array['result' ],   //matriz a imprimir
                     $array['labels' ],   //títulos das colunas
                     $array['lengths'],   //tamanhos das colunas
                     NULL             ,   //$array['aligns' ]    //alinhamentos das colunas
                     8);
    } // __construct


}
