/**
 * Classe BusinessRhFormacao
 * @package br.org.miolo.ufjf.rh
 */
class BusinessRhFormacao extends MBusiness
{
   /**
    * Formacao oid
    * @access public
    * @var integer
    */
   public $idFormacao; // Number(4)
   
   /**
    * Nome da Formação
    * @access public
    * @var string
    */
   public $formacao;   // Varchar(40)
   
   /**
    * Escolaridade - tabela geral
    * @access public
    * @var string
    */
   public $escolaridade;

   /**
    * Habilitação SIAPE - compatibilidade
    * @access public
    * @var string
    */
   public $habSiape;
   
   /**
    * Array de funcionarios
    * @access public
    * @var array of BusinessRhFuncionario
    */  
   public $funcionarios;
 
 	function __construct($data=null)
	{
		parent::__construct('common',$data);
	}

    function OnCreate($data)
    {
        if (!empty($data))
        {
            $this->GetById($data);
        }
    }

	function SetData($data)
	{
		$this->idFormacao = $data->idFormacao;
		$this->formacao = strtoupper($data->formacao);
	}

	function GetById($id)
	{
		$this->idFormacao = $id;
		$this->retrieve();
		return $this;
	}

	function ListByFormacao($formacao)
	{
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('formacao','LIKE', "$formacao");
        $criteria->addOrderAttribute('formacao');
        return $criteria->retrieveAsQuery();
	}

}
?>
