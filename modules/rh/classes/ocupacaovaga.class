class BusinessRhOcupacaoVaga extends MBusiness
{
    public $idVinculo;         // NUMBER(7)
    public $numeroVaga;     // NUMBER(7)
    public $dataInicio;     // DATE
    public $dataFim;        // DATE

    public $vinculo;
    public $vaga;

	function __construct($data = null)
	{
		parent::__construct('sigaept', $data);
	}

    function finaliza($dataFim)
    {
        $this->dataFim = $dataFim;
        $this->save();
    }
    
    function ListByNumeroVagaOrDescricaoCargo($cond)
	{
        $criteria =  $this->getCriteria();

        $cc = new CriteriaCondition();
        $cc->addCriteria($criteria->getCriteria('vaga.numeroVaga','LIKE',"$cond"));
        $cc->addOrCriteria($criteria->getCriteria('vaga.cargo.descricao','LIKE',"$cond"));
        $criteria->addCriteria($cc);
        
        $criteria->addColumnAttribute('vaga.numeroVaga');
        $criteria->addColumnAttribute('vaga.cargo.descricao');
        $criteria->addColumnAttribute('vaga.dataInicio');
        $criteria->addColumnAttribute('vaga.dataFim');
        $criteria->addColumnAttribute('idVinculo');
        
        $criteria->addOrderAttribute('vaga.cargo.descricao');
        
        
        return $criteria->retrieveAsQuery();
        
