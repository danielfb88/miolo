class BusinessRhCargo extends MBusiness
{
	public $idGrupoCargo;
	public $idCargo;
	public $escolaridadeMinima;
	public $idJornada;
	public $descricao;

	public $jornada;

	function __construct($data = null)
	{
		parent::__construct('sigaept', $data);
	}

	 function OnCreate($data)
    {
        if (empty($data))
        {
//            $this->initialize();
        }
        else
        {
            $this->GetById($data);
        }
    }

	function GetById($idGrupo,$idCargo)
	{
		$this->idGrupoCargo = $idGrupo;
		$this->idCargo = $idCargo;
		$this->retrieve();
		return $this;
	}
	
/*	function GetNewId()
	{
		$this->idCargo = $this->_db->GetNewId('seq_rh_cargo');	
	}
	*/

	function ListAll()
	{
		$criteria = $this->getCriteria();
        $criteria->addOrderAttribute('descricao');
		return $criteria->retrieveAsQuery();
	}
	
	function listAllDistinct()
	{
		$criteria = $this->getCriteria();
		$criteria->addColumnAttribute('descricao', 'descricao');
		$criteria->SetDistinct(true);
        $criteria->addOrderAttribute('descricao');
		return $criteria->retrieveAsQuery();
	}

	function setCargo($id)
	{
		$this->idCargo = $id;
	}

	function setGrupoCargo($id)
	{
		$this->idGrupoCargo = $id;
	}

	function setEscolaridadeMinima($desc)
	{
		$this->escolaridadeMinima = $desc;
	}

	function setIdJornada($id)
	{
		$this->idJornada = $id;
	}

	function setDescricao($desc)
	{
		$this->descricao = $desc;			
	}

	function getCargo()
	{
		return $this->idCargo;
	}

	function getGrupoCargo()
	{
		return $this->idGrupoCargo;
	}

	function getEscolaridadeMinima()
	{
		return $this->escolaridadeMinima;
	}

    function getEscolaridadeMinimaSIAPE()
	{
		switch ($this->escolaridadeMinima) {
            case 'NA': return 6;
            break;
            case 'NI': return 8;
            break;
            case 'NS': return 10;
            break;
        }
	}

	function getJornada()
	{
		return $this->idJornada;
	}

	function getDescricao()
	{
		return $this->descricao;
	}
	
	function getId()
	{
        	$sql = new sql('Max(idcargo)','rh_cargo');
		$id = $this->Query($sql);
		return $id->result[0][0];
	}

}
