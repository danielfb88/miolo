<?xml version="1.0" standalone="yes"?> 
<map>
    <moduleName>rh</moduleName>
    <className>formacao</className>
    <tableName>rh_formacao</tableName>
    <databaseName>sigaept</databaseName>
    <attribute>
        <attributeName>idFormacao</attributeName>
        <columnName>idformacao</columnName>
		<key>primary</key>
    </attribute>
    <attribute>
        <attributeName>formacao</attributeName>
        <columnName>formacao</columnName>
		<converter>
			<converterName>CaseConverter</converterName>
			<parameter>
				<parameterName>case</parameterName>
				<parameterValue>upper</parameterValue>
			</parameter>
		</converter>
    </attribute>
    <attribute>
        <attributeName>escolaridade</attributeName>
        <columnName>escolaridade</columnName>
    </attribute>
    <attribute>
        <attributeName>habSiape</attributeName>
        <columnName>habSiape</columnName>
    </attribute>
    <attribute>
        <attributeName>funcionarios</attributeName>
    </attribute>

   <association>
      <toClassModule>rh</toClassModule>
      <toClassName>histformacao</toClassName>
      <cardinality>oneToMany</cardinality>
      <target>funcionarios</target>
	  <retrieveAutomatic>false</retrieveAutomatic>
	  <saveAutomatic>false</saveAutomatic>
	  <inverse>true</inverse>
	  <entry>
	     <fromAttribute>idFormacao</fromAttribute>
	     <toAttribute>idFormacao</toAttribute>
      </entry>
   </association>

</map>
