<?xml version="1.0" standalone="yes"?> 
<map>
    <moduleName>rh</moduleName>
    <className>cidcategoria</className>
    <tableName>rh_cidcategoria</tableName>
    <databaseName>sigaept</databaseName>
    <attribute>
        <attributeName>idCidCategoria</attributeName>
        <columnName>idcidcategoria</columnName>
		<key>primary</key>
    </attribute>
    <attribute>
        <attributeName>opc</attributeName>
        <columnName>opc</columnName>
    </attribute>
    <attribute>
        <attributeName>descricao</attributeName>
        <columnName>descricao</columnName>
		<converter>
			<converterName>CaseConverter</converterName>
			<parameter>
				<parameterName>case</parameterName>
				<parameterValue>upper</parameterValue>
			</parameter>
		</converter>
    </attribute>
    <attribute>
        <attributeName>subCategorias</attributeName>
    </attribute>

   <association>
      <toClassModule>rh</toClassModule>
      <toClassName>cidsubcategoria</toClassName>
      <cardinality>oneToMany</cardinality>
      <target>subCategorias</target>
	  <retrieveAutomatic>false</retrieveAutomatic>
	  <deleteAutomatic>true</deleteAutomatic>
	  <saveAutomatic>true</saveAutomatic>
	  <indexAttribute>
	      <indexAttributeName>descricao</indexAttributeName>
      </indexAttribute>
	  <inverse>true</inverse>
	  <entry>
	     <fromAttribute>idCidCategoria</fromAttribute>
	     <toAttribute>idCidCategoria</toAttribute>
      </entry>
   </association>

</map>
