class BusinessRhCidCategoria extends MBusiness
{
	public $idCidCategoria;
	public $opc;
	public $descricao;

	function __construct($data = null)
	{
		parent::__construct('sigaept', $data);
	}
	
    function onCreate($data)
    {
        if (empty($data))
        {
//            $this->initialize();
        }
        else
        {
            $this->GetById($data);
        }
    }

	function getById($id)
	{
		$this->idCidCategoria = $id;
		$this->retrieve();
		return $this;
	}
	
    function getSubCategorias()
    {
        $this->retrieveAssociation('subCategorias');
        if ($this->subCategorias != NULL)
        {
            if (!is_array($this->subCategorias))
            {
                $this->subCategorias = array($this->subCategorias);  
            }
        }
    }

	function getSubCategoria($idCidSubCategoria)
	{
		global $MIOLO;
		if ( $this->subCategorias != NULL )
		{
			foreach ( $this->subCategorias as $s )
			{
				if ( $s->idCidSubCategoria == $idCidSubCategoria )
					return $s;
			}
		}
		$s = $MIOLO->GetBusiness('rh','cidsubcategoria');
		$s->idCategoria = $this->idCategoria;
		return $s;
	}

	function listAll()
	{
        $criteria =  $this->getCriteria();
        return $criteria->retrieveAsQuery();
	}

    function listAllDescricao()
    {
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('idCidCategoria');
        $criteria->addColumnAttribute('descricao');
        return $criteria->retrieveAsQuery();
    }

    function getDescricao($id) {        
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('idCidCategoria','=',$id);
        $r = $criteria->retrieveAsQuery();        
        return $r->result[0][2];
    }
}
