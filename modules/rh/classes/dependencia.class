class BusinessRhDependencia extends MBusiness
{
    public $idDependente;
    public $idTipoDependencia;
    public $dataInicio;
    public $dataFim;
    public $tipoDependencia;

    function __construct($data=null)
    {
       parent::__construct('sigaept',$data);
    }

    function save()
    {
        global $MIOLO;
        if ( $this->idTipoDependencia == 'AP')
        {
            $dependente = $MIOLO->getBusiness('rh','dependente',$this->idDependente);
            $k = new MKrono();
            $diasNascimento = $k->daysDiff($dependente->pessoa->datanasc,date('d/m/Y'));
            if ( $diasNascimento > 2555 )
            {
                throw new Exception("O tipo de dependência assistência pré-escolar só é permitido para dependentes até 7 (sete) anos de idade.");
            }
        }
        parent::save();


    }
}
