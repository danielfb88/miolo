class BusinessRhGrupoCargo extends MBusiness
{
	public $idGrupoCargo;
	public $descricao;
	public $cargos;
    public $vagas;

	function __construct($data = null)
	{
		parent::__construct('sigaept', $data);
	}

	 function OnCreate($data)
    {
        if (empty($data))
        {
//            $this->initialize();
        }
        else
        {
            $this->GetById($data);
        }
    }

	function GetById($id)
	{
		$this->setGrupoCargo($id);
		$this->retrieve();
		return $this;
	}

	function ListByGrupoCargo($descricao)
	{
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('descricao','LIKE', "$descricao");
        $criteria->addOrderAttribute('descricao');
        return $criteria->retrieveAsQuery();
	}

      function getCargos()
    {
        $this->retrieveAssociation('cargos');
	    if ($this->cargos != NULL)
        {
            if (!is_array($this->cargos))
            {
                $this->cargos = array($this->cargos);  
            }
        }
    }

    function getCargo($idcargo)
	{
		global $MIOLO;
		if ( !is_null($this->cargos))
		{
			foreach ( $this->cargos as $r )
			{
				if ( $r->idCargo == $idcargo )
					return $r;
			}
		}
        $r = $MIOLO->GetBusiness('rh','cargo');
		$r->idGrupoCargo = $this->getGrupoCargo();
		$r->idCargo = $idcargo;
        $r->retrieve();
		return $r;
	}

	function setGrupoCargo($id)
	{
		$this->idGrupoCargo = $id;
	}

	function setDescricao($desc)
	{
		$this->descricao = $desc;
	}

	function setCargos($cargos)
	{
		$this->cargos[] = $cargos;
	}

	function getGrupoCargo()
	{
		return $this->idGrupoCargo;
	}

	function getDescricao()
	{
		return $this->descricao;
	}

    function listAll()
    {
        $criteria = $this->getCriteria();
        $criteria->addOrderAttribute('descricao');
        return $criteria->retrieveAsQuery();
    }
    
    function listWithVagas()
    {
        $criteria = $this->getCriteria();
        $criteria->addColumnAttribute('idGrupoCargo');
        $criteria->addColumnAttribute('descricao');
        $criteria->addCriteria('idGrupoCargo','=','vagas.idGrupoCargo');
        $criteria->addGroupAttribute('idGrupoCargo');
        $criteria->addGroupAttribute('descricao');
        $criteria->addOrderAttribute('descricao');
        return $criteria->retrieveAsQuery();

    }

    function listCargos()
    {
        $criteria = $this->getCriteria();
        $criteria->addColumnAttribute('cargos.idCargo');
        $criteria->addColumnAttribute('cargos.descricao');
        $criteria->addCriteria('cargos.idGrupoCargo','=',$this->idGrupoCargo);
        $criteria->addOrderAttribute('cargos.descricao');
        return $criteria->retrieveAsQuery();

    }

	/*function GetNewId()
	{
		$this->idgrupocargo = $this->_db->GetNewId('seq_rh_grupocargo');	
	}
	*/
}
