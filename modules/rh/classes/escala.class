class BusinessRhEscala extends MBusiness
{
	public $idEscala;  // NUMBER(2)
	public $descricao;  // VARCHAR2(20)

	function __construct($data = null)
	{
		parent::__construct('sigaept', $data);
	}

     function OnCreate($data)
	 {
        if (empty($data))
        {
//            $this->initialize();
        }
        else
        {
            $this->GetById($data);
        }
    }

    function GetById($id)
    {
       $this->idEscala = $id;
       $this->retrieve();
       return $this;
    }

    function SetData($data)
    {
       $this->idEscala = $data->idEscala;
       $this->descricao = $data->descricao;
    }

	function ListAll()
	{
        $criteria = $this->getCriteria();
        return $criteria->retrieveAsQuery();
	}

	function ListByDescricao($descricao)
	{
        $criteria = $this->getCriteria();
        $criteria->addCriteria('descricao','LIKE', "$descricao");
        $criteria->addOrderAttribute('descricao');
        return $criteria->retrieveAsQuery();
	}

