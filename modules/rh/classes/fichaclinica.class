    function getFichaByVinculo($vinculo)
    {
        $criteria = $this->getCriteria();
        $criteria->addColumnAttribute('idfichaclinica');
        $criteria->addColumnAttribute('tipoexame');
        $criteria->addColumnAttribute('data','data');
        $criteria->addCriteria('idvinculo','=',$vinculo);
        $criteria->addOrderAttribute('data');
        $r = $criteria->retrieveAsQuery();
        return $r;
    }

    function getById($id) {
        $criteria = $this->getCriteria();
        $criteria->addCriteria('idfichaclinica','=',$id);
        return $criteria->retrieve();
