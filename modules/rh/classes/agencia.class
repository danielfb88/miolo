// alterar para persistencia
class BusinessRhAgencia extends Business
{
   var $idagenc;
   var $idbanco;
   var $nome;  
 
	function BusinessRhAgencia($data=null)
	{
       $this->Business('common',$data);
    }

    function SetData($data)
   
    {
	   $this->idagenc = $data->idagenc;	 
       $this->idbanco = $data->idbanco;
       $this->nome = strtoupper($data->nome);
    }

    function GetById($idagenc)
    {
     
	  if (!$idagenc==null){

        $sql = new sql('*','cm_agencia','(idagenc=?)');
        $query = $this->Query($sql,$idagenc);
        if ( !$query->eof() )
        {
            $this->SetData($query->GetRowObject());
        }
         return $this;
	   }
       
    }

    function Insert()
    {   global $MIOLO;
        $sql = new sql('idagenc, idbanco, nome','cm_agencia');
        $args = array(
			$this->idagenc,
    		$this->idbanco,
		    strtoupper($this->nome)
        );
        $ok = $this->Execute($sql->Insert($args));
        if ($ok) {$this->Log(OP_INS,"idagenc = $this->idagenc; idbanco = $this->idbanco");} 
        return $ok;
    }

    function Update()
    {
        $sql = new sql('idbanco,nome','cm_agencia','idagenc = ?');
        $args = array(
			$this->idbanco,
		    strtoupper($this->nome),
           	$this->idagenc
        );
        $ok = $this->Execute($sql->Update($args));
        if ($ok) {$this->Log(OP_UPD,"idagenc = $this->idagenc; idbanco = $this->idbanco");} 
        return $ok;
    }
    
    function Delete()
    {
        $sql = new sql('','cm_agencia', 'idagenc = ?');
        $ok = $this->Execute( $sql->Delete($this->idagenc) );
        if ($ok) {$this->Log(OP_DEL,"idagenc = $this->idagenc; idbanco = $this->idbanco");} 
        return $ok;
    }

    function ListRange($range=NULL)
    {
        $sql = new sql('idagenc, idbanco,nome', 'cm_agencia', '','nome');
        $sql->SetRange($range); 
        $query = $this->Query($sql);
        return $query;
    }

	function ListAll()
    {
		return $this->ListRange();
    }
   
    function CountWhere($where='')
    {
        $sql = new sql('*','cm_agencia',$where);
        return $this->_db->Count($sql->Select());
    }
}
