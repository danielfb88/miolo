class BusinessRhBaseAposentadoria extends MBusiness
{
    var $idVinculo;
    var $ano;
    var $mes;
    var $valorBase;
    var $valorPss;
    var $valorCorrigido;

    function __construct($data=null)
    {
        parent::__construct('sigaept',$data);
    }

    function setIdVinculo($idVinculo)
    {
        $this->idVinculo = $idVinculo;
    }

    function setMes($mes)
    {
        $this->mes = $mes;
    }

    function setAno($ano)
    {
        $this->ano = $ano;
    }

    function setValor($valor)
    {
        $this->valorBase = $valor;
    }

    function setValorCorrigido()
    {
        if ( $this->mes == 13 )
        {
            $mes = 11;
        }
        else
        {
            $mes = $this->mes;
        }
        $indiceMensal = $this->_miolo->getBusiness('common','indicemensal');
        $this->valorCorrigido = round(str_replace(',','.',$indiceMensal->getValor($this->ano,$mes,'BASE'))*$this->valorBase,2);
        
    }
}
