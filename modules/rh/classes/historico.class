class BusinessRhHistorico extends MBusiness
{
	public $idHistorico; 
	public $idVinculo;
	public $dataInicio;
	public $dataFim;
	public $obs;

	
	function __construct($data=null)
	{   	
		parent::__construct('sigaept',$data);
	}

	
	function GetById($id)
	{
    	$this->idHistorico = $id;    
		$this->retrieve();
		return $this;
	}


	function listAll($filter='')
	{
		$criteria = $this->getCriteria();
		$criteria->addColumnAttribute('idHistorico');
		$criteria->addColumnAttribute('idVinculo');
		$criteria->addColumnAttribute('dataInicio');
		$criteria->addColumnAttribute('dataFim');
		$criteria->addColumnAttribute('obs');
        if ($filter != '')
        {
			$filter = strtoupper($filter);
            $criteria->addCriteria('obs','LIKE',"%'{$filter}%'");
        }
		$criteria->addOrderAttribute('dataInicio');
		$query = $criteria->retrieveAsQuery();
        return $query;
	}
}
