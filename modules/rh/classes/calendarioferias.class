MIOLO::Import('modules::rh::classes::exception');
class BusinessRhCalendarioFerias extends MBusiness
{
    public $idDtLimiteFerias;     // NUMBER(4)
    public $mesPrevisto;          // CHAR(2)
    public $anoPrevisto;          // CHAR(4)
    public $dtLimite;             // DATE
    

    function __construct($data=null)
    {
        parent::__construct('sigaept',$data);
    }


    function OnCreate($data)
    {
        if (empty($data))
        {
//            $this->initialize();
        }
        else
        {
            $this->GetById($data);
        }
    }


    function GetById($id)
    {
        $this->idDtLimiteFerias = $id;
        $this->retrieve();
        return $this;
    }


    function GetByMesAno($mes,$ano)
    {
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('mesPrevisto','=',"$mes");
        $criteria->addCriteria('anoPrevisto','=',"$ano");
        $this->retrieveFromCriteria($criteria);
        
            /*
            SELECT rh_dtlimiteferias.iddtlimiteferias,
                        rh_dtlimiteferias.mesprevisto,
                        rh_dtlimiteferias.anoprevisto,
                        rh_dtlimiteferias.dtlimite 
            FROM rh_dtlimiteferias 
            WHERE ((mesprevisto = 12) AND (anoprevisto = 2006))
            */
    }
    

    function liberadoParaFerias($mes,$ano)
    {
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('mesPrevisto','=',"$mes");
        $criteria->addCriteria('anoPrevisto','=',"$ano");
        return $criteria->retrieveAsQuery();
        
            /*
            SELECT rh_dtlimiteferias.iddtlimiteferias,
                        rh_dtlimiteferias.mesprevisto,
                        rh_dtlimiteferias.anoprevisto,
                        rh_dtlimiteferias.dtlimite 
            FROM rh_dtlimiteferias 
            WHERE ((mesprevisto = 12) AND (anoprevisto = 2006))
            */
    }
    

    function ListAll()
    {
        $criteria = $this->getCriteria();
        $criteria->addOrderAttribute('dtLimite');
		return $criteria->retrieveAsQuery();
	}
	

	function existeDataMarcada()
	{
		$query = $this->liberadoParaFerias("'$this->mesPrevisto'","'$this->anoPrevisto'");
		return $query->result;
	}
	

	function salvar()
	{
		if (!$this->existeDataMarcada())
		{
			$this->save();
			return true;
			
		}
		else
		{
			return false;
		}
	}
	

	function deletar()
	{
		$this->retrieve();
		$this->delete();
	}
}
?>
