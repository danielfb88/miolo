// alterar para persistencia
class BusinessRhBanco extends Business
{
   var $idbanco;
   var $nome;  
 
	function BusinessRhBanco($data=null)	{

       $this->Business('common',$data);
    }

    function SetData($data)    {

       $this->idbanco = $data->idbanco;
       $this->nome = strtoupper($data->nome);
    }

    function GetById($idbanco)    {

		 if (!$idbanco==null){
		
		$sql = new sql('*','cm_banco','(idbanco=?)');
        $query = $this->Query($sql,$idbanco);
        if ( !$query->eof() )
        {
            $this->SetData($query->GetRowObject());
        }

        return $this;
		 }

    }

    function Insert()
    {   global $MIOLO;
        $sql = new sql('idbanco, nome','cm_banco');
        $args = array(
    		$this->idbanco,
		    strtoupper($this->nome)
        );
        $ok = $this->Execute($sql->Insert($args));
        if ($ok) {$this->Log(OP_INS,"idbanco = $this->idbanco");} 
        return $ok;
    }

    function Update()    {

        $sql = new sql('nome','cm_banco','idbanco = ?');
        $args = array(
		    strtoupper($this->nome),
           	$this->idbanco
        );
        $ok = $this->Execute($sql->Update($args));
        if ($ok) {$this->Log(OP_UPD,"idbanco = $this->idbanco");} 
        return $ok;
    }
    
    function Delete()    {

        $sql = new sql('','cm_banco', 'idbanco = ?');
        $ok = $this->Execute( $sql->Delete($this->idbanco) );
        if ($ok) {$this->Log(OP_DEL,"idbanco = $this->idbanco");} 
        return $ok;
    }

   function ListRange($range=NULL)    {

        $sql = new sql('idbanco, nome', 'cm_banco', '','nome');
        $sql->SetRange($range); 
        $query = $this->Query($sql);
        return $query;
    }

	function ListAll()    {

		return $this->ListRange();
    }
   

    function CountWhere($where='')    {

        $sql = new sql('*','cm_banco',$where);
        return $this->_db->Count($sql->Select());
    }
}
