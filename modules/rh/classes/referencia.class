class BusinessRhReferencia extends MBusiness
{
	public $idClasse;
	public $idReferencia;
	public $nivelPadrao;
    public $idClasseGrupoCargo;
    
    public $classeGrupoCargo;

	function __construct($data = null)
	{
		parent::__construct('sigaept', $data);
	}

	
    function OnCreate($data)
    {
        if (empty($data))
        {
//            $this->initialize();
        }
        else
        {
            $this->GetById($data);
        }
    }

    
	function GetById($id)
	{
		$this->idReferencia = $id;
		$this->retrieve();
		return $this;
	}
	
	
	function listAll()
    {
        $criteria = $this->getCriteria();
        $criteria->addColumnAttribute('idreferencia');
        $criteria->addColumnAttribute('nivelpadrao');
        return $criteria->retrieveAsQuery();
    }

    
    function listReferencias($idreferencia, $idclassegrupocargo, $nivelMinimo)
    {
        $criteria = $this->getCriteria();
        $criteria->addColumnAttribute('idreferencia');
    	$criteria->addColumnAttribute('nivelpadrao');
        $criteria->addCriteria('idclassegrupocargo' ,'=', "'$idclassegrupocargo'");
        $criteria->addCriteria('nivelpadrao','>', "'$nivelMinimo'");
        $query = $criteria->retrieveAsQuery();
        //echo"<pre>"; var_dump($query->resultChunk()); echo"</pre>";
        return $query;
    }  

	function listReferenciaByClasse($idClasse)
    {
        $criteria = $this->getCriteria();
        $criteria->addColumnAttribute('idreferencia');
        $criteria->addColumnAttribute('nivelpadrao');
        $criteria->addCriteria('idClasse' ,'=', "$idClasse");
        return $criteria->retrieveAsQuery();
    }


}
