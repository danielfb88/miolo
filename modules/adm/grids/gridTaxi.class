/**
 * Grid Taxi
 * Grid de uso geral para selecionar Taxi
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linktaxi.class','adm');

class gridTaxi extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkTaxi = new LinkTaxi('linktaxi','%0%');
        $columns = array(
            new DataGridColumn('dataIni','Data Inicial','center', true,'30%'),			
            new DataGridColumn('dataFim','Data Final','center', true,'30%'),
            new DataGridColumn('valor','Valor','center', true,'30%'),	
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('taxi');
        $taxi = empty($filter) ? '%' : $filter;
        $this->AddFilterText('taxi','Taxi',$taxi);
        $this->SetIndex(1);
        $objTaxi = $MIOLO->GetBusiness('adm','taxi');
		$query = $objTaxi->ListAll();
        
		$href_grid = $MIOLO->GetActionURL('adm','main:taxi:edit', '#0#');
		
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->AddActionText('alt','Editar',$href_grid);
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
