$MIOLO->Uses('controls/linkpatrimonio.class','adm');

class gridPatrimonioLog extends MDataGrid
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self, $perms;
		
		$columns = array(
		   new MDataGridColumn( 'dataFormat', 'Data', 'left', false, '10%' ),
		   new MDataGridColumn( 'login', 'login', 'left', false, '14%' ),
		   new MDataGridColumn( 'descricao', 'Descrição', 'left', false, '43%' ),		   
		   new MDataGridColumn( 'log', 'Log', 'left', false, '43%' ),		   
		);		

		$idItemPatrimonio = $_SESSION['idItemPatrimonio'];		
		
		$sql = new sql(
			"IdLog, IdUsuario, data, to_char(data::timestamp with time zone, 'DD/MM/YYYY'::text) AS dataformat, login, nome, descricao, log",
		    'VLog', //$tables
			'', // where
			'idLog', //ordenacao
			'' //group by
		);						
						
		// SE idPatrimonioEspecifico IGNORADO ...
		if  (  empty($idItemPatrimonio) ) { $sql->where = 'IdLog = 0'; }
		else { $sql->where .= "modulo = 'ADM' AND classe = 'ITEMPATRIMONIO' AND descricao like '% " . $idItemPatrimonio . "'"; } 

						
		$href_grid = $MIOLO->GetActionURL('adm',$self);	
	
		$aux =   $MIOLO->getBusiness('adm', 'executoralmox');
		$query = $aux->Query($sql);	
		
        parent::__construct($query, $columns, $href_grid,20, 0, 'gridPatrimonioLog');
		//$this->SetClose( $MIOLO->GetActionURL('adm','main:itempatrimonio:find') );
		
    }	
}
