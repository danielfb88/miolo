global $MIOLO;
$MIOLO->Uses('controls/linkempresamanutencaoveiculo.class','adm');
class gridEmpresaManutencaoVeiculo extends DataGrid	
{

    protected $empresa;

    function __construct()
    {
	global $MIOLO;

        // variáveis
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
                
        $objEmpresa = $MIOLO->GetBusiness('adm','empresamanutencaoveiculo');
		$query = $objEmpresa->listAll();
        $this->SetFilter(false);
        $this->SetIndex(1);
		$linkEmpresa = new LinkEmpresaManutencaoVeiculo('linkempresamanutencaoveiculo','%0%');
        $columns = array(
            new DataGridControl($linkEmpresa,'idEmpresa','Empresa','left','','10%'),
            new DataGridColumn('nome','Nome','',true,'30%'),
	    	new DataGridColumn('cnpj','CNPJ','',true,'0%',true),
	    	new DataGridColumn('razaoSocial','Razão Social','',true,'20%')
         				);
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Empresas');
        $this->width = '100%';
        $this->EventHandler();

    }
    function GenerateFooter()
    {
    	if (!$this->data) $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
