class gridRubricaTipoReqs extends ObjectGrid
{
	protected $objRubrica;
    function __construct($objRubrica)
    {
        global $MIOLO, $module,$self ;
		$this->objRubrica = $objRubrica;
		
        $columns = array(
            new ObjectGridColumn('idTipoReq','Número','right', false,'0%',false),
            new ObjectGridColumn('descricao','Tipos de requisição autorizadas para esta rubrica','left', false,'100%',true),
        );
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);


        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($objRubrica->tipoReqs, $columns, $href_grid,25);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$action = $MIOLO->GetActionURL($module,$self,$objRubrica->idRubrica,array('form'=>'tiporeqs','id'=>'#0#'));
		$this->AddActionDelete($action);
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
