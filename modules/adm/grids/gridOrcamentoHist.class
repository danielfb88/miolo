<?php
/**
 * Grid OrcamentoHist
 * Grid de uso geral para selecionar orçamento
 * @package br.org.miolo.ufjf.adm.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkorcamentohist.class','adm');

class gridOrcamentoHist extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkOrcamentoHist = new LinkOrcamentoHist('linkorcamentohist','%0%');
        $columns = array(
	        new DataGridControl($linkOrcamentoHist,'orcamentohist','Codigo','left', true,'10%'),
           	new DataGridColumn('ano','Ano','center', true,'10%'),
           	new DataGridColumn('esfera','Esfera','center', true,'10%'),
           	new DataGridColumn('ptr','PTR','center', true,'25%'),
           	new DataGridColumn('fonte','Fonte','center', true,'25%'),
           	new DataGridColumn('idRubrica','Rubrica','center', true,'15%'),
			new DataGridColumn('ug','UG','center', true,'15%'),			
//           	new DataGridColumn('data','Data','center', true,'10%'),
//           	new DataGridColumn('tipoOrcDescricao','Tipo','left', true,'20%'),
           	new DataGridColumn('valor','Valor','right', true,'15%'),
         );

        $this->SetFilter(false);

		$objOrcamento = $MIOLO->GetBusiness('adm','orcamento');
		
		/* Removida  a referencia a tabela
		$sql = new MSql('anoref','ad_controle');
		$anoReferencia = $objOrcamento->Query($sql)->result[0][0];
		*/
		
		#$anoReferencia = Date('Y');
		
		$filterAno = Form::GetFormValue('ano');
		$filterPtr = Form::GetFormValue('ptr');
		$filterEsfera = Form::GetFormValue('esfera');
		$filterFonte = Form::GetFormValue('fonte');
		$filterRubrica = Form::GetFormValue('rubrica');
		$filterUg = Form::GetFormValue('selUg');
        $ano = empty($filterAno) ? '%' : $filterAno;
        $ptr = empty($filterPtr) ? '%' : $filterPtr;
        $esfera = empty($filterEsfera) ? '%' : $filterEsfera;
        $fonte = empty($filterFonte) ? '%' : $filterFonte;
        $rubrica = empty($filterRubrica) ? '%' : $filterRubrica;
		$ug = $filterUg == null ? '%' : $filterUg;
        $this->AddFilterText('ano','Ano',$ano);
        $this->AddFilterText('ptr','PTR',$ptr);
        $this->AddFilterText('esfera','Esfera',$esfera);
        $this->AddFilterText('fonte','Fonte',$fonte);
        $this->AddFilterText('rubrica','Rubrica',$rubrica);
        $this->AddFilterText('ug','UG',$ug);
        $this->SetIndex(1);
//		$objOrcamentoHist = $MIOLO->GetBusiness('adm','orcamentohist');
//		$query = $objOrcamentoHist->ListByClassOrcamentaria($ano), strtoupper("'$ptr%'"), strtoupper("'$esfera%'"), strtoupper("'$fonte%'"), strtoupper("'$rubrica%'"));
		$query = $objOrcamento->ListByClassOrcamentaria($ano, strtoupper("$ptr%"), strtoupper("$esfera%"), strtoupper("$fonte%"), strtoupper("$rubrica%"), $ug);

		$href_grid = $MIOLO->GetActionURL('adm',$self);

		for($i = 0; $i < count($query->result); $i++ )
		{
			$query->result[$i][6] = number_format(str_replace(',','.',$query->result[$i][6]),2,',','.');
		}

        parent::__construct($query, $columns, $href_grid,25);
		$this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
