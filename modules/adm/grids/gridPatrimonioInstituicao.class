$MIOLO->Uses('controls/linkpatrimonio.class','adm');

class gridPatrimonioInstituicao extends MDataGrid
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self, $perms;

		$columns = array(
		   new MDataGridColumn( 'NomeInstituicao', 'Instituição', 'left', false, '40%' ),
		   new MDataGridColumn( 'Total', 'Total', 'right', false, '10%' ),
		   new MDataGridColumn( 'Patrimonio', 'Patrimônio', 'right', false, '10%' ),
		   new MDataGridColumn( 'Biblioteca', 'Biblioteca Total / Livros', 'right', false, '10%' ),
		   new MDataGridColumn( 'OutrosSetores', 'Outros Setores', 'right', false, '10%' ),
		   new MDataGridColumn( 'Carteiras', 'Carteiras Total / NÃO distribuídas', 'right', false, '10%' ),
		   new MDataGridColumn( 'NumeroSerieInformado', 'Nº série informados', 'right', false, '10%' ),		   
		);
		
		$sql = new sql("IdInstituicao, Total, NomeInstituicao, Patrimonio, Biblioteca, OutrosSetores, NumeroSerieInformado, Carteiras",
		                'VAD_PatrimonioInstituicao', //$tables
						'', // where
						'', //ordenacao
						'' //group by
						);						

		
		if ( !($perms->checkAccess('ADM_PATRIMONIOADMIN', A_EXECUTE)) )
		{
			$setor = $MIOLO->GetBusiness('common','setor');
			$user  = $MIOLO->GetBusiness('common','usuario');
			$usuario = $user->GetByLogin($MIOLO->login->id);
			$instituicao_usuario = $setor->getById($usuario->idSetor)->idinstituicao;
		
			$sql->where .= 'IdInstituicao = ' . $instituicao_usuario;
		}		
		
						
		$href_grid = $MIOLO->GetActionURL('adm',$self);	
	
		$aux = $MIOLO->getBusiness('adm', 'executoralmox');
		$query = $aux->Query($sql);	
		
        parent::__construct($query, $columns, $href_grid,20, 0, 'gridPatrimonioInstituicao');
		
		
		
		$this->SetClose( $MIOLO->GetActionURL('adm','main:itempatrimonio:find') );
		//var_dump('gridPatrimonioInstituicao');
		//exit();
		
    }	
}
?>
