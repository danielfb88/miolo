class gridEmpenho extends MDataGrid
{
    function __construct($param)
    {
        global $MIOLO, $page,$self;
        $href = $MIOLO->getActionURL('adm','main:empenho:new','#0#');
        $columns = array(
			new MDataGridColumn('idEmpenho','Referência','center','true','10%'),
            new MDataGridHyperlink('licitacao','Licitação',$href,'20%'),
			new MDataGridColumn('fornecedor','Fornecedor','left','true','70%'),
		);
		$this->SetLinkType('hyperlink');
        $this->setFilter(false);
        $objEmpenho = $MIOLO->GetBusiness('adm','empenho');
		$licitacaoEmpenho = trim(strtoupper($param[1]));
		$fornecedorEmpenho = trim(strtoupper($param[2]));
		$status = trim(strtoupper($param[3]));
		if ($status<>''){
			$query = $objEmpenho->ListByStatus($status);//padrão da página
		}else{
			$query = $objEmpenho->ListByStatus('1');
		}
			
		if($fornecedorEmpenho<>''){
			$query = $objEmpenho->ListByFornecedor($fornecedorEmpenho,$status);
		}else if($licitacaoEmpenho<>''){
			$query = $objEmpenho->ListByLicitacao($licitacaoEmpenho,$status);
		}
		$href_grid = $MIOLO->GetActionURL('adm',$self,$param);
		parent::__construct($query, $columns, $href_grid,25);
		$href = $this->manager->GetActionURL('adm','main:empenho:new','', array('idEmpenho'=>'$id') );
    }
}
?>
