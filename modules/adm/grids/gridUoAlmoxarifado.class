/**
 * Grid Uo
 * Grid de uso geral para selecionar almoxarifados
 * @package br.org.miolo.ufjf.adm.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkuoalmoxarifado.class','adm');

class gridUoAlmoxarifado extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self,$page;

        $linkUo = new LinkUoAlmoxarifado('linkuoalmoxarifado','%0%');
        $columns = array(
            new DataGridControl($linkUo,'uo','Nome','left', true,'100%')
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('uo');
        $uo = empty($filter) ? '%' : $filter;
        $this->AddFilterText('uo','Uo',$uo);
        $this->SetIndex(1);
        $objUo = $MIOLO->GetBusiness('adm','uo');
        $login = $MIOLO->GetLogin();
        $idUsuario = $login->idkey;
        $query = $objUo->ListAlmoxarifadosByUsuario($idUsuario);
        if (count($query->result)==1)
        {
		    	$objUo->getById($query->result[0][0]);
        		$go = $MIOLO->GetActionURL('adm','main:uoalmoxarifado',$objUo->idUo);
		        $page->Redirect($go);
        }
        $href_grid = $MIOLO->GetActionURL('adm',$self);


        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
