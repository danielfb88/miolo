/**
 * Grid Veiculo
 * Grid de uso geral para selecionar veiculo
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkveiculo.class','adm');

class gridVeiculo extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

		$idInstituicao = Form::GetFormValue('idInstituicao');
        $btnPost = Form::GetFormValue('btnPost');

        $linkVeiculo = new LinkVeiculo('linkveiculo','%0%');
        $columns = array(
            new DataGridControl($linkVeiculo,'veiculo','Nome','center', true,'10%'),
            new DataGridColumn('marca','Marca','center', true,'20%'),
            new DataGridColumn('modelo','Modelo','center', true,'30%'),
            new DataGridColumn('renavam','Renavam','center', true,'20%'),
            new DataGridColumn('instituicao','Instituição','center', true,'30%')
         );
        $this->SetFilter(false);
	    $filter = Form::GetFormValue('veiculo');
	    $veiculo = empty($filter) ? '%' : $filter;
	    $this->AddFilterText('veiculo','Veiculo',$veiculo);
	    $this->SetIndex(1);
         
        $objVeiculo = $MIOLO->GetBusiness('adm','veiculo');

		if ( $btnPost && $idInstituicao )
		{
			$query = $objVeiculo->listByInstituicao($idInstituicao);
		}
		else
		{
		    $query = $objVeiculo->ListByMarcaModPlaca(strtoupper("'%$veiculo%'"));
		}
        $href_grid = $MIOLO->GetActionURL('adm',$self,'',array('idInstituicao'=>$idInstituicao, 'btnPost'=>$btnPost));
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
