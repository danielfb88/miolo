/**
 * Grid LicitacaoPropostas
 * Grid de uso geral para lançar propostas dos participantes da licitação
 * @package br.org.miolo.ufjf.adm.listing
 */

/**
 * Use Module Control
 */


class gridLicitacaoPropostas extends MGrid
{
	protected $objLicitacao;
    /**
     * Constructor
     */
    function __construct($objLicitacao)
    {
		global $MIOLO;
		$this->objLicitacao = $objLicitacao;

		$columns = array(
            new MGridColumn('idinstituicao','left',true,'0%',false),
			new MGridColumn('Fornecedor','left',true,'70%',true),
    		new MGridColumn('idLicitacao','left',true,'0%',false),
    		new MGridColumn('idParticipante','left',true,'0%',false),
			new MGridColumn('Status','center',true,'10%',true),
		);
// retirado tag ",'idf'=>'#3#'" após array('form'=>'propostas' 
	 	$href_grid = $MIOLO->GetActionURL('adm','main:licitacoes',$objLicitacao->idLicitacao,array('form'=>'propostas','idf'=>'#3#'));

        $query = $this->objLicitacao->ListFornecedoresByLicitacao($this->objLicitacao->idLicitacao);

        parent::__construct($query, $columns, $href_grid,100);

        $this->SetTitle('Fornecedores Participantes');
        $this->SetRowMethod($this,'MyRowMethod');
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$action = $this->manager->GetActionURL('adm','main:licitacoes',$this->objLicitacao->idLicitacao,array('form'=>'propostas','idf'=>'#4#','idp'=>'#3#'));
		$this->AddActionText('alt','Proposta',$href_grid);
    }

    // Método a ser executado antes de renderizar cada linha
    function MyRowMethod($i, $row, $actions, $columns)
    {
        if ($this->objLicitacao->getTotalDePropostasNaoLancadas($row[3]) == 0)
        {
            $columns[4]->control[$i]->setValue("CONCLUÍDO");
        }
        else
        {
            $columns[4]->control[$i]->setValue("NÃO CONCLUÍDO");
        }
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
