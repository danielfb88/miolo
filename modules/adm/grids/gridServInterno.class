global $MIOLO;
$MIOLO->Uses('controls/linkservicointerno.class','adm');
class gridServInterno extends DataGrid2
{
    function __construct()
    {
        global $MIOLO, $self;

        $linkServInterno = new LinkServicoInterno('linkservicointerno','%0%');
        $columns = array(
            new DataGridControl($linkServInterno,'servIntenro','Descrição','left', true,'100%')
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('servInterno');
        $servInterno = empty($filter) ? '%' : $filter;
        $this->AddFilterText('servInterno','Tipo de Serviço Interno',$servInterno);
        $this->SetIndex(1);
        $objServInterno = $MIOLO->GetBusiness('adm','tiposervint');
        $query = $objServInterno->ListByNome(strtoupper("'%$servInterno%'"));
        $href_grid = $MIOLO->GetActionURL('adm',$self);
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
