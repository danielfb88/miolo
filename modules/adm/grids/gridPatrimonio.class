/**
 * Grid Patrimonio
 * Grid de uso geral para selecionar itens do patrimonio
 * @package br.org.miolo.ufjf.adm.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkpatrimonio.class','adm');

class gridPatrimonio extends DataGrid2
{

	/**
	* Constructor
	*/
	function __construct()
	{
		global $MIOLO, $self;
		
		
		//echo '<pre>'; print_r ('gridPatrimonio'); echo '</pre>'; 
		//exit();
	

		$linkPatrimonio = new LinkPatrimonio('linkpatrimonio','%0%');
		$columns = array(
			new DataGridColumn('idItemPatrimonio','Número','center', true,'10%',true,null,true),
			new DataGridControl($linkPatrimonio,'patrimonio','Descrição','left', false,'60%'),
			new DataGridColumn('sigla','Setor','left', true,'20%',true,null,true),
			new DataGridColumn('numero','Empenho','center', true,'10%',true,null,true),
		);

		$this->SetFilter(false);
		
		$idItemPatrimonio = MForm::GetFormValue('idItemPatrimonio');
		$descricao = strtoupper(MForm::GetFormValue('patrimonio'));
		$classificador = strtoupper(MForm::GetFormValue('classificador'));
		$empenho = strtoupper(MForm::GetFormValue('empenho'));
		$idSetor = MForm::GetFormValue('idSetor');
		$this->AddFilterText('patrimonio','Item',$patrimonio);
		$this->SetIndex(1);
		$objPatrimonio = $MIOLO->GetBusiness('adm','itempatrimonio');
		$href_grid = $MIOLO->GetActionURL('adm',$self);

		if (($idItemPatrimonio>0) and is_numeric($idItemPatrimonio))
		{
			    $query = $objPatrimonio->ListById($idItemPatrimonio);
			parent::__construct($query, $columns, $href_grid,25);
		}
		else{
			if((($idItemPatrimonio!="") and ($idItemPatrimonio!='%')) and (!is_numeric($idItemPatrimonio)))
			{
				$MIOLO->Information('O campo número deverá possuir o n° do patrimônio',$MIOLO->GetActionURL($module, $self));
			
			}
			elseif($idItemPatrimonio=='%')
			{
				$query = $objPatrimonio->ListByDesc($idItemPatrimonio);
				parent::__construct($query, $columns, $href_grid,25);
			
			}
			elseif($descricao!="")
			{
				$query = $objPatrimonio->ListByDesc($descricao);
				parent::__construct($query, $columns, $href_grid,25);
			
			}
			elseif(($classificador!='') or ($empenho!='')){
				$query = $objPatrimonio->ListByClassificadorOuEmpenho($classificador, $empenho, $descricao, $idItemPatrimonio);
				parent::__construct($query, $columns, $href_grid,25);
			}
			elseif($idSetor)
			{
				$query = $objPatrimonio->ListByIdSetor($idSetor);
				parent::__construct($query, $columns, $href_grid,25);
			}
		}
		$this->SetLinkType('hyperlink');
	}
}
