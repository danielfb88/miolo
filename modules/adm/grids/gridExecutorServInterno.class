class gridExecutorServInterno extends ObjectGrid
{
	protected $objServInterno;
    /**
     * Constructor
     */
    function __construct($objServInterno)
    {
        global $MIOLO, $module, $self, $page;
        
		$this->objServInterno = $objServInterno;
        $this->objServInterno->retrieveAssociation('executores');
		
        $columns = array(
            new ObjectGridColumn('idExecutorServInt','Número','right', false,'0%',false),
            new ObjectGridColumn('usuario->login','Login','left', false,'10%',true),
            new ObjectGridColumn('usuario->pessoa->nome','Nome','left', false,'50%',true),
            new ObjectGridColumn('dataInicio','Data Inicial','center', false,'20%',true),
            new ObjectGridColumn('dataFim','Data Final','center', false,'20%',true),
        );
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);

        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($this->objServInterno->executores, $columns, $href_grid,25);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$action = $MIOLO->GetActionURL($module,$self,$objServInterno->idTipoServInt,array('form'=>'executores','idExecutorServInt'=>'#0#'));
		$this->AddActionDelete($action);
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
