global $MIOLO;
class gridEmpenhoEntregaMaterial extends MGrid
{
    function __construct($objEmpenho)
    {
        global $MIOLO, $page, $action;
        $objEmpenho->retrieveAssociation('empenhado');
        foreach ($objEmpenho->empenhado as $empenhado)
        {
            if ($empenhado->idEmpenhado == Form::getFormValue('idEmpenhado'))
            {
                $empenhado->retrieveAssociation('itemreq');
                foreach ($empenhado->itemreq as $itemRequisicao)
                {
                    $itemRequisicao->retrieveAssociation('requisicao');
                    $itemRequisicao->requisicao->retrieveAssociation('uoRequisitante');
                    $dados[$itemRequisicao->idRequisicao][0] = $itemRequisicao->idRequisicao;
                    $dados[$itemRequisicao->idRequisicao][1] = $itemRequisicao->idMaterial;
                    $dados[$itemRequisicao->idRequisicao][2] = $itemRequisicao->requisicao->uoRequisitante->nome;
                    $dados[$itemRequisicao->idRequisicao][3] = $itemRequisicao->quantPedida;
                    $dados[$itemRequisicao->idRequisicao][4] = ($itemRequisicao->quantAutorizada) ? $itemRequisicao->quantAutorizada : 0; 
                }
            }
        }
        $href = $MIOLO->getActionUrl('adm',$self,$objEmpenho->idEmpenho,array("form"=>"entrega","idEmpenhado"=>Form::getFormValue('idEmpenhado'),"idRequisicao"=>"#0#","idMaterial"=>"#1#"));
        $quantAutorizada = new MTextField('quantAutorizada[%0%]','','','4');
        $columns = array(
            new MGridColumn('idRequisicao','left',false,'',false),
            new MGridColumn('idMaterial','left',false,'',false),
            new MGridHyperlink('Requisitante',$href,false,'54%'),
            new MGridColumn('Quantidade Pedida','center',true,'12%'),
            new MGridColumn('Quantidade Entregue','center',true,'12%'),
            new MGridControl($quantAutorizada,'Quantidade Autorizada','center',true,'12%'),
        );
        $this->SetFilter(false);
        parent::__construct($dados,$columns,$action,25);
        $this->SetLinkType('hyperlink');
    }
    function GenerateHeader()
    {
        return null;
    }
    function GenarateFooter()
    {
        return null;
    }
}
