class gridItensServExtEmpenho extends MGrid
{
	protected $objEmpenhado;
    /**
     * Constructor
     */
    function __construct($idEmpenho)
    {
		global $MIOLO;

		$this->objEmpenhado = $MIOLO->getBusiness('adm','empenhado');
		$columns = array(
				new MDataGridColumn('idEmpenhado','idEmpenhado','','','','',false),
				new MDataGridColumn('item','item','','','','',false),
				new MDataGridColumn('descricao','Serviço/Material','','','50%'),
				new MDataGridColumn('quantidadeEmp','Quantidade','','','25%'),
				new MDataGridColumn('valorEmp','Valor do empenho','','','25%'),
				new MDataGridColumn('idRubrica','Rubrica','','','25%'),
				//new MGridColumn('Valor','center','true','15%'),
		);
		$empenhados = $this->objEmpenhado->getByIdEmpenho($idEmpenho);//lista qualquer tipo de empenho
		$tipoLicitacao = $empenhados->result[0][3];
		
		if($tipoLicitacao=='1' OR $tipoLicitacao=='4')
        {
            //material
			$result = $this->objEmpenhado->ListByIdEmpenho($idEmpenho);
		}
        elseif($tipoLicitacao=='2')
        {
            //conterá serviço
			$result = $this->objEmpenhado->ListItensServExtEmpenhadosByEmpenho($idEmpenho);
		}
		//Acervo
		 elseif($tipoLicitacao=='3')
        {
            //conterá acervo
			$result = $this->objEmpenhado->ListAcervoByIdEmpenho($idEmpenho);
		}

		if ($result->result)
        {
			$cf = new MCurrencyFormatter();
            foreach ($result->result as $resultado)
            {
                $dados[] = array($resultado[0],
								$resultado[1],
								$resultado[2],
								$resultado[3],
								$cf->formatWithSymbol( $cf->toDecimal($resultado[4])),
								$resultado[5],
					);
	         }
        }


		
	    $href_grid = NULL;

		parent::__construct($dados, $columns, $href_grid,25);
        $this->SetTitle('Itens Empenho');
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
		//$this->SetRowMethod('MyRowMethod');
    }
	

	function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
