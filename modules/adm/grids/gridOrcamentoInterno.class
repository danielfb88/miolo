class gridOrcamentoInterno extends ObjectGrid
{
	protected $objUo;
    
    function __construct($objUo)
    {
        
        global $MIOLO, $module,$self,$item;
        
        $this->objUo = $objUo;
	
		$columns = array(
			   new ObjectGridColumn('idRubrica','IdRubrica','left', false,'1%',false),
               new ObjectGridColumn('rubrica->descricao','Rubrica','left', false,'80%',true),
			   new ObjectGridColumn('ano','Ano','center', false,'10%',true),
			   new ObjectGridColumn('idUo','Uo','left', false,'1%',false),
			   new ObjectGridColumn('saldo','Crédito','left', false,'10%',true),
        );
        
        $this->SetFilter(false);
        $this->SetIndex(1);

        $href_grid = $MIOLO->GetActionURL($module,$self);
        $this->objUo->getOrcamentos();
        parent::__construct($this->objUo->orcamento, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
		$action = $MIOLO->GetActionURL($module,$self,$objUo->idUo,array('form'=>'orcamentointerno','idRubrica'=>'#0#','ano'=>'#2#'));
		$this->AddActionIcon('ID','select.gif',$action);
        $ctlArray = array (new FormButton('btnNew', 'Incluir Novo Orçamento Interno', $MIOLO->GetActionURL($module,$self,$this->objUo->idUo,array('form'=>'orcamentointerno','idRubrica'=>'new','ano'=>'new'))));
        $this->SetControls($ctlArray);
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
