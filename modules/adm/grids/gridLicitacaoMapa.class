/**
 * Grid LicitacaoParticipantes
 * Grid de uso geral para selecionar tipos de licafast
 * @package br.org.miolo.ufjf.adm.listing
 */

/**
 * Use Module Control
 */


class gridLicitacaoMapa extends MGrid
{
	protected $objLicitacao;
    /**
     * Constructor
     */
    function __construct($objLicitacao)
    {
		global $MIOLO;

		$columns = array(
			new GridColumn('Ítem','center','','5%'),
			new GridColumn('Status','center','','20%'),            
			new GridColumn('Participante','left','','55%'),
			new GridColumn('QTD','center','','5%'),
			new GridColumn('Valor Unit.','right','','15%'),
		);

        if (is_array($objLicitacao->listMapa()))
        {
            foreach ($objLicitacao->listMapa() as $rs)
            {
                if ($rs[5] == '2' or  $rs[5] == '3' or $rs[5] == '4' or $rs[5] == 'B')
                    $list[] = array($rs[0],$rs[1],$rs[2],$rs[1],$rs[1]);
                else
                    $list[] = array($rs[0],$rs[1],$rs[2],$rs[4],"R$ ".number_format(str_replace(',','.',$rs[3]),2,',','')); 
            }
        }
	$hrefGrid = $MIOLO->GetActionURL($module,$self,$objLicitacao->idLicitacao,array('form'=>'vencedores',''));
        parent::__construct($list, $columns, $hrefGrid,10);

        $this->SetTitle("Propostas");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
