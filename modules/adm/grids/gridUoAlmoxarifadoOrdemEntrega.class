global $MIOLO;
class gridUoAlmoxarifadoOrdemEntrega extends MGrid
{
    function __construct($movimentos)
    {
        global $MIOLO, $page, $action, $item;
        $this->setTitle('Lista de materias');
		$cf = new MCurrencyFormatter();
        foreach ($movimentos as $movimento)
        {
            $movimento->retrieveAssociation('itemreq');
            $movimento->itemreq->retrieveAssociation('material');
            $data[$movimento->itemreq->material->codmaterial][0] =  $movimento->idMaterial;
            $data[$movimento->itemreq->material->codmaterial][1] =  $movimento->itemreq->material->codmaterial;
            $data[$movimento->itemreq->material->codmaterial][2] =  $movimento->itemreq->material->descricao;
            $data[$movimento->itemreq->material->codmaterial][3] +=  $movimento->quantidade;
            $data[$movimento->itemreq->material->codmaterial][4] +=  $cf->toDecimal($movimento->valorTotal);
        }
        foreach ($data as $d)
        {
            $resultado[] = array($d[0],$d[1],$d[2],$d[3],$cf->formatWithSymbol($d[4]));
        }
        $columns = array(
            new MGridColumn('IdMaterial','','','',false),
            new MGridColumn('Código','center',false,'8%'),
            new MGridColumn('Material','left',false,'70%'),
            new MGridColumn('Quantidade','center',false,'11%'),
            new MGridColumn('Valor Total','center',false,'11%'),
        );
        $this->SetFilter(false);
        parent::__construct($resultado,$columns,$action,0);
        $this->setClose(null);
        $this->SetLinkType('hyperlink');
    }
    function GenerateFooter()
    {
        $footer[] = new Separator();
        return $footer;
    }
}
