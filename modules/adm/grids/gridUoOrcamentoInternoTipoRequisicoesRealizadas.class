<?php
class gridUoOrcamentoInternoTipoRequisicoesRealizadas extends MDataGrid
{
	protected $objUo;
    function __construct($objUo)
    {
        global $MIOLO, $module,$self;

		$this->objUo = $objUo;
        $orcamento = $this->objUo->getOrcamento(Form::getFormValue('idRubrica'),Form::getFormValue('ano'));
        $query = $orcamento->getReqsPermitidasGrid($objUo->idUo,Form::getFormValue('idRubrica'),Form::getFormValue('ano'));
		
        $columns = array(
            new MDataGridColumn('idTipoReq','Número','right', false,'0%',false),
            new MDataGridColumn('descricao','Tipos de requisição permitidos para a rubrica','left', false,'100%',true),
        );
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);

        $href_grid = $MIOLO->GetActionURL($module,$self);
		
        parent::__construct($query, $columns, $href_grid,25);
		
        $this->SetLinkType('hyperlink');
        $action = $MIOLO->GetActionURL($module,$self,$this->objUo->idUo,array('form'=>'orcamentointerno','subform'=>'tipoRequisicoesRealizadasSetInativo','idRubrica'=>$orcamento->idRubrica,'ano'=>$orcamento->ano,'idTipoReq'=>'%0%'));
		$this->AddActionDelete($action);
        $ctlArray = array (new FormButton('btnNew', 'Incluir Novo Tipo de Requisição', $MIOLO->GetActionURL($module,$self,$this->objUo->idUo,array('form'=>'orcamentointerno','subform'=>'tipoRequisicoesRealizadas','idRubrica'=>$orcamento->idRubrica,'ano'=>$orcamento->ano,'idTipoReq'=>'new'))));
        $this->SetControls($ctlArray);
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
