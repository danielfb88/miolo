/**
 * Grid Rubrica
 * Grid de uso geral para selecionar rubrica
 * @package br.org.miolo.ufjf.adm.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkrubrica.class','adm');

class gridRubrica extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkRubrica = new LinkRubrica('linkrubrica','%0%');
        $columns = array(
            new DataGridControl($linkRubrica,'rubrica','Código','center', true,'20%'),
            new DataGridColumn('descricao','Descrição','left', true,'80%'),
        );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('rubrica');
        $rubrica = empty($filter) ? '%' : $filter;
        $this->AddFilterText('rubrica','Rubrica',$rubrica);
        $this->SetIndex(1);
        $objRubrica = $MIOLO->GetBusiness('adm','rubrica');
        $query = is_numeric($rubrica) ? $objRubrica->ListById("$rubrica") : $objRubrica->ListByDescricao(strtoupper("$rubrica"));
        $href_grid = $MIOLO->GetActionURL('adm',$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}
