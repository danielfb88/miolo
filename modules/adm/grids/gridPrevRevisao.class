global $MIOLO;
$MIOLO->Uses('controls/linkprevrevisao.class','adm');

class gridPrevRevisao extends DataGrid	
{

    protected $pr;

    function __construct()
    {
		global $MIOLO;

        // variáveis
        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
                
        $pr = $MIOLO->GetBusiness('adm','prevrevisao');
		$query = $pr->listAll();
		if ($query->result)
		{
			$y = 0;
			$x = true;
			while($x == true)
			{
				if ($query->result[$y])
				{
					if ($query->result[$y][4] == "1")
					{
						$query->result[$y][4] = "PREVISTA";
					}
					if ($query->result[$y][4] == "2")
					{
						$query->result[$y][4] = "FINALIZADA";
					}
					$x = true;
					$y ++;
				}
				else
				{
					$x = false;
				}
			}
		}
		$this->SetFilter(false);
        $this->SetIndex(1);
		$linkPrevRevisao = new LinkPrevRevisao('linkprevrevisao','%0%');
        $columns = array(
            new DataGridControl($linkPrevRevisao,'idPrevRevisao','Prev Revisao','left','','20%'),
            new DataGridColumn('placa','Placa','',true,'40%'),
	    new DataGridColumn('data_prevista','Data Prevista','',true,'20%',true),
	    //new DataGridColumn('kmEstimada','KM Estimada','',true,'30%'),
	    new DataGridColumn('situacao','Situação','',true,'20%')
         );
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Previsão de Revisão');
        $this->width = '100%';
        $this->EventHandler();
    }
    function GenerateFooter()
    {
        if (!$this->data) $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
