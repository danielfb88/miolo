global $MIOLO;
$MIOLO->Uses('controls/linknotafiscalmanutencaoveiculo.class','adm');

class gridNotaFiscalManutencaoVeiculo extends DataGrid	
{

    protected $notaFiscal;

    function __construct()
    {
	global $MIOLO;

        global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
                
        $nf = $MIOLO->GetBusiness('adm','notafiscalmanutencaoveiculo');
		$query = $nf->listAll();
       	$this->SetFilter(false);
        $this->SetIndex(1);
		$linkNotaFiscal = new LinkNotaFiscalManutencaoVeiculo('linknotafiscalmanutencaoveiculo','%0%');
        $columns = array(
            new DataGridControl($linkNotaFiscal,'idNotaFiscal','Nota','left','','10%'),
            new DataGridColumn('placa','Placa','',true,'20%'),
	    new DataGridColumn('nome','Empresa','',true,'30%'),
	    new DataGridColumn('valorTotal','Valor Total','',true,'20%'),
	    new DataGridColumn('to_char','Data','',true,'20%'),		
         );
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Notas');
        $this->width = '100%';
        $this->EventHandler();

    }
    function GenerateFooter()
    {
        if (!$this->data) $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
