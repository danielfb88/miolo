class gridPatrimonioEntradaByEmpenhoFind extends MDataGrid
{
    protected $uoalmoxarifado;
    function __construct($objUo)
    {
        global $MIOLO, $page;
        $this->uoalmoxarifado = $objUo;
		$cf = new MCurrencyFormatter();
        $this->setTitle('Resultados encontrados');
        $href = $MIOLO->getActionURL('adm','main:uoalmoxarifado',$this->uoalmoxarifado->idUo,array('form'=>'entradamaterial','idEmpenho'=>'#0#'));
        $columns = array(
            new MDataGridColumn('idEmpenho','','center', true,'',false),
            new MDataGridColumn('numero','Número','center', true,'18%'),
			new MDataGridColumn('numLicitacao','Licitação','center','true','18%'),
            new MDataGridHyperlink('fornecedor','Fornecedor',$href,'48%'),
			new MDataGridColumn('dataEmpenho','Data','center','true','16%'),
			//new MGridColumn('Valor','center','true','16%'),
         );
        $this->setFilter(false);
        $objEmpenho = $MIOLO->GetBusiness('adm','empenho');
        $numero = Form::getFormValue('numero');
        $fornecedor = Form::getFormValue('fornecedor');
        $query = $objEmpenho->ListByPatrimonio(2,$numero,strtoupper(trim($fornecedor)));
        if ( count($query->result) == 1 )
        {
            $page->redirect($MIOLO->getActionURL('adm','main:uoalmoxarifado:main',$this->uoalmoxarifado->idUo,array('form'=>'entradamaterial','idEmpenho'=>$query->result[0][0])));
        }
        $href_grid = $MIOLO->getActionURL('adm','main:uoalmoxarifado',$this->uoalmoxarifado->idUo,array('form'=>'entradamaterial'));
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->with = '100%';
        $href = $this->manager->GetActionURL('adm','main:empenho:new','', array('idEmpenho'=>'$id') );
    }
}
