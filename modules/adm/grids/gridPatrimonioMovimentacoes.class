$MIOLO->Uses('controls/linkpatrimonio.class','adm');

class gridPatrimonioMovimentacoes extends MDataGrid
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self, $perms;
				
		$columns = array(
		   new MDataGridColumn( 'dataFormat', 'Data', 'left', false, '12%' ),
		   new MDataGridColumn( 'tipoMovimento', 'Tipo Movimento', 'left', false, '12%' ),
		   new MDataGridColumn( 'historico', 'Histórico', 'left', false, '76%' ),		   
		);		

		$idItemPatrimonio = $_SESSION['idItemPatrimonio'];
		//var_dump('AQUI', $idItemPatrimonio);	
		
				$sql = new sql("idMovimentacao, idItemPatrimonio, dataFormat, tipoMovimento, historico",
		                'Vad_MovimentoPatri', //$tables
						'', // where
						'', //ordenacao
						'' //group by
						);						
						
		// SE idPatrimonioEspecifico IGNORADO ...
		if  (  empty($idItemPatrimonio) ) { $sql->where = 'idItemPatrimonio = 0'; }
		else { $sql->where .= ' idItemPatrimonio = ' . $idItemPatrimonio; } 

						
		$href_grid = $MIOLO->GetActionURL('adm',$self);	
	
		$aux = $MIOLO->getBusiness('adm', 'executoralmox');
		$query = $aux->Query($sql);	
		
        parent::__construct($query, $columns, $href_grid,20, 0, 'gridPatrimonioMovimentacoes');
		//$this->SetClose( $MIOLO->GetActionURL('adm','main:itempatrimonio:find') );
		
    }	
}
