<?php
class gridFornecedor extends MDataGrid
{
	function __construct($param)
	{
		global $MIOLO, $page,$self;
		$href = $MIOLO->getActionURL('adm','main:fornecedor:edit','#0#');
		$columns = array(
			new MDataGridColumn('idFornecedor','Id Fornecedor','center',false,0,false,NULL, false,false),
			new MDataGridColumn('cgc','CNPJ','center','30%'),
			new MDataGridHyperlink('instit','Instituição',$href,'70%'),
		);

		$this->SetLinkType('hyperlink');
		$this->setFilter(false);

		$objFornecedor = $MIOLO->GetBusiness('adm','fornecedor');

		if(isset($param)){
			$query = $objFornecedor->ListByNomeOuDocumento($param);
		}else{
			$query = $objFornecedor->ListAll();
		}

		$href_grid = $MIOLO->GetActionURL('adm',$self,$param);

		$action = $MIOLO->GetActionURL($module,$self,'%0%_|_%1%',array('event'=>'btnDel:click'));
		$this->AddActionDelete($action);


		parent::__construct($query, $columns, $href_grid,25);
		$href = $this->manager->GetActionURL('adm','main:fornecedor:edit','#0#', array('idFornecedor'=>'$id') );
	}
}
?>
