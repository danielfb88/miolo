/**
 * Listing Bolsista
 * @package br.org.miolo.ufjf.adm.listing
 */
class lstBolsistaPorBolsa extends DataGrid2
{
	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function lstBolsistaPorBolsa()
	{
		global $MIOLO, $module, $self, $state, $item;

		$aux = explode('_',$item);
		$idbolsa = $aux[0];
		$mesano = $aux[1];

		$this->listURL = $MIOLO->GetActionURL($module,$self,$item);
		
		$objBolsista = $MIOLO->GetBusiness($module,'bolsista');

		//Lista somente os bolsistas ativos que *possuem conta*
		$query = $objBolsista->ListBolsistasNaoPagosPorBolsa($idbolsa,$mesano,'temConta');
		
		$columns = array(
			new DataGridColumn('idbolsista','Id','right', true, '0%',false),
			new DataGridColumn('nome','Nome','left', true, '50%',true, null, false,true),
			new DataGridColumn('datainclusao','DtIncl','left',true, '20%',true, null, false,true),
			new DataGridColumn('dataexclusao','DtExcl','left', true, '30%',true, null, false,true),
		);
		
		$datagrid = new Grid($query->result, $columns, $this->listURL,20,0);

		$datagrid->AddFilterText('1','Nome:','');
		
		if (($f = $state->get('filtro')) === NULL)
			$f = true;
			
		$datagrid->SetFilter($f);
		$state->set('filtro',$f);

		$datagrid->SetTitle('Bolsistas Por Bolsa');
		
		$href_edit = $MIOLO->GetActionURL($module,'pagbolsa','%0%_'.$mesano.'_'.$idbolsa, array('event'=>'btnPrepara:click'));
		
		$datagrid->AddActionUpdate($href_edit);

		$datagrid->HeaderLink('voltar', 'Voltar',$MIOLO->GetActionURL($module,'listapagbolsa',$item));

		$datagrid->SetClose($MIOLO->GetActionURL($module,'main:pagbolsa'));
		
		$MIOLO->theme->InsertContent($datagrid);
	}
}
?>
