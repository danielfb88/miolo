<?php
class repSubElemento extends PDFReport
{
	var $img;
	var $timestamp;
	var $objRequisicao;

	function __construct($info)
	{
		global $MIOLO, $module, $page, $context, $self, $action, $perms;

		$this->idsetoralmox = $info['idsetoralmox'];
		$this->dataInicio = $info['dataInicio'];
		$this->dataFim = $info['dataFim'];	

		$ui = $MIOLO->GetUI();
		$this->img = $ui->GetImageSrc('logonet.png'); 
		$columns = array(
		    	new PDFReportColumn('idelemento','Código','center',true,60,true,null,true),
			new PDFReportColumn('descricao','Especificação','left',true,220,true,null,true),
			new PDFReportColumn('saldoAnterior','Saldo Anterior','right',true,80,true,null,true),
			new PDFReportColumn('totalEntradas','Entradas','right',true,60,true,null,true),
			new PDFReportColumn('totalSaidas','Saídas','right',true,60,true,null,true),
			new PDFReportColumn('saldoAtual','Saldo Atual','right',true,70,true,null,true)			
		);
        
		$this->objRequisicao = $MIOLO->GetBusiness($module,'requisicao');
		$query = $this->objRequisicao->ListSubElementosBySetor($info['idsetoralmox']);
	
		foreach($query->result as $row)
		{
			$data_id[] = $row[0];
			$data_descricao[] = $row[1];
		}

		$quantidade = count($data_id);
	
		for($i=0;$i<$quantidade;$i++)
		{
			$totalEntradas = $this->objRequisicao->GetTotalMovimentoBySubElementoDataSetor($info['idsetoralmox'],$info['dataInicio'],$info['dataFim'],$data_id[$i],'1');

			$totalSaidas = $this->objRequisicao->GetTotalMovimentoBySubElementoDataSetor($info['idsetoralmox'],$info['dataInicio'],$info['dataFim'],$data_id[$i],'3');

			$saldoAtual = $this->objRequisicao->GetSaldoAtualBySubElementoSetor($info['idsetoralmox'],$data_id[$i]);
		
			$data_final[] = array(
					$data_id[$i],
					$data_descricao[$i],
					number_format(str_replace(',','.',$saldoAtual-$totalEntradas+$totalSaidas),2,',',''),
					number_format(str_replace(',','.',$totalEntradas),2,',',''),
					number_format(str_replace(',','.',$totalSaidas),2,',',''),
					number_format(str_replace(',','.',$saldoAtual),2,',',''),	
					);
		}

		parent::__construct($data_final,$columns,40);
        
		$this->SetTitle('Relatório de movimentos por sub-elemento');
		$this->SetOption('showTableTitle',1);
		$this->SetOption('showLines',0);
		$this->timestamp = date('d/m/Y'); 
	}
		
	function GeneratePageHeader()
	{  
		global $MIOLO;

		$setor = $MIOLO->GetBusiness('common','setor');
		$setor->GetById($this->idsetoralmox);
	
		$h = $this->pdf->getFontHeight(12);
		$this->pdf->addText(520,800,9,$this->timestamp);
	      	$this->pdf->addText(520,800-$h,10,'Página: ' . $this->pn->pageNumber . '/' . $this->pn->pageCount);


		$x00=$this->pdf->left;
		$hh = $this->pdf->getFontHeight(12);
		$this->pdf->addText($x00, 800, 12, $this->manager->getConf('instituicao.sigla')." - ".$this->manager->getConf('instituicao.nome'));
		$this->pdf->addText($x00, 800 - $hh, 12, $this->manager->getConf('theme.system'));

/*		
$this->pdf->ezImage($this->img,5,50,'none','left');
		$this->pdf->addText(90,800,12,'UFJF - Universidade Federal de Juiz de Fora');
		
$this->pdf->addText(90,800-$h,12,'CGCO - Centro de Gestão do Conhecimento Organizacional');
		$this->pdf->addText(90,800-$h-$h,12,'SIGA - Sistema Integrado de Gestão Acadêmica');

*/

		$this->pdf->addText(90,800-$h-$h-$h,10,'Coordenadoria de Suprimentos - Setor Almoxarifado: '.$setor->nomesetor);	
		$this->pdf->addText(90,800-4*$h,10,'Boletim diário no período de '.$this->dataInicio.' a '.$this->dataFim);	
		$this->pdf->ezSetY(770-$h-$h-$h);
	}

	function GeneratePageFooter()
	{
      		if( $this->pn->pageNumber == $this->pn->pageCount )
	      	{
			$totalEntradas = $this->objRequisicao->GetTotalTipoMovimentoByDataSetor($this->idsetoralmox,$this->dataInicio,$this->dataFim,'1');
			$totalSaidas = $this->objRequisicao->GetTotalTipoMovimentoByDataSetor($this->idsetoralmox,$this->dataInicio,$this->dataFim,'3');
			$saldoAtual = $this->objRequisicao->GetSaldoByAlmoxarifado($this->idsetoralmox);

			$objNomeCargo = $this->objRequisicao->GetNomeCargoByAlmoxarifado($this->idsetoralmox);			
			$nomeCargo = $objNomeCargo->result;

			foreach ($nomeCargo as $rs)
			{
				$nome = $rs[0];
				$cargo = $rs[1];
			}
			
			$this->pdf->SetStrokeColor(0,0,0); 
			$this->pdf->ezSetDy(-10);
    
	 		$this->pdf->line(20,$this->pdf->y,570,$this->pdf->y);
			$this->pdf->ezSetDy(-15);
			$this->pdf->addTextWrap(20,$this->pdf->y,200,10,'TOTAIS:','left');
			$this->pdf->addTextWrap(303,$this->pdf->y,70,10,number_format(str_replace(',','.',$saldoAtual-$totalEntradas+$totalSaidas),2,',',''),'right');

			$this->pdf->addTextWrap(363,$this->pdf->y,70,10,number_format(str_replace(',','.',$totalEntradas),2,',',''),'right');
			$this->pdf->addTextWrap(423,$this->pdf->y,70,10,number_format(str_replace(',','.',$totalSaidas),2,',',''),'right');
			$this->pdf->addTextWrap(493,$this->pdf->y,70,10,number_format(str_replace(',','.',$saldoAtual),2,',',''),'right');
			
			$this->pdf->ezSetDy(-10);		
	 		$this->pdf->line(20,$this->pdf->y,570,$this->pdf->y);
		
			$this->pdf->ezSetDy(-80);
			$this->pdf->line(75,$this->pdf->y,225,$this->pdf->y);
			$this->pdf->line(325,$this->pdf->y,475,$this->pdf->y);

			$this->pdf->ezSetDy(-15);
			$this->pdf->addTextWrap(75,$this->pdf->y,150,8,'COORDENADOR DE SUPRIMENTOS','center');
			$this->pdf->addTextWrap(325,$this->pdf->y,150,8,$cargo,'center');

			$this->pdf->ezSetDy(-15);
			$this->pdf->addTextWrap(75,$this->pdf->y,150,8,'WANDERLEY RODRIGUES','center');
			$this->pdf->addTextWrap(325,$this->pdf->y,150,8,$nome,'center');
		}	
	}
}
