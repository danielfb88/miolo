class frmRepItensPorEmpenho extends MForm
{
    function __construct()
    {
        parent::__construct('Relatório de Itens Patrimoniais por Empenho');
        $this->EventHandler();
		$this->defaultButton = false;
    }

	function CreateFields()
    {
		global $MIOLO, $module, $action, $item, $theme;
		
		$opcaoOrdenacao = array(
			"id"			=>"Número do Patrimônio",
			"nf_id"		    =>"Nota Fiscal + Número do Patrimônio",
			"nf_desc"		=>"Nota Fiscal + Descrição",
			"desc"			=>"Descrição",
		);		

		$fields = array(
			new MTextField('empenho','','Empenho',20),
			new MSelection('ordenacao','','Ordenação', $opcaoOrdenacao)
		);
		$this->SetFields($fields);

		$buttons = array(
			new MButton('btnPost','Gerar Relatório','PDF'),
		);
		$this->SetButtons($buttons);
	}

 function btnPost_click()
    {
	global $MIOLO, $module, $item;
	
		$empenho = trim(Form::GetFieldValue('empenho'));
		
		
		$ordem = Form::GetFormValue('ordenacao');
		
		$opcaoOrdenacao = array(
			"id"			=>"Número do Patrimônio",
			"nf_id"		    =>"Nota Fiscal + Número do Patrimônio",
			"nf_desc"		=>"Nota Fiscal + Descrição",
			"desc"			=>"Descrição",
		);		
		
		if(empty($empenho))
		{
			$this->AddError('É necessário informar o empenho!');	
		}
		else if (empty($ordem))
		{
		    $this->AddError('É necessário escolher uma opção de ordenação!');
		
		}
		else
		{
        	$report = new MJasperReport('sigaept'); 
        	$parameters['SUBREPORT_DIR']	   = $MIOLO->GetConf('home.modules');
        	$parameters['int_pIdUsuario']	   = $MIOLO->login->idkey;
     		$parameters['str_pNumeroEmpenho']  = $empenho;
			$parameters['str_pOrdenacao']      = $ordem;
        	$parameters['pURL']				   = $MIOLO->GetConf('home.url');
			//$report->Execute('adm', 'repItensPorEmpenho', $parameters);
			$report->Execute('adm', 'repEmpenhoConferencia', $parameters);			
		}
	}
}
