	function GetidSetor()
	{
       global $MIOLO, $module, $self, $action;
	   
	   $objUsuario = $MIOLO->GetBusiness('common','usuario');
       $data = new FormData();
	   $data->idsetor = $objUsuario->GetSetorProvimento();		
       return $data;
	}
}
