		if ($cobaia->tiporequisicao == 1)  
	      {
		     $this->pdf->addText(90,700,8,'339030');		   
		  } 
        else
	      {
		     $a = $objRequisicao->GetSetorByIdRequisicao($this->idrequisicao);

			 $this->pdf->addText(90,700,8,$a[0]);
