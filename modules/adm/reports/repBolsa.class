<?php
class repBolsa extends PDFReport
{
	var $img;
	var $timestamp;
	var $objBolsa;

	function __construct()
	{
		global $MIOLO, $module, $page, $context, $self, $action, $perms;

	    $ui = $MIOLO->GetUI();
	    $this->img = $ui->GetImageSrc('logonet.png'); 
	    $columns = array(
			new PDFReportColumn('idbolsa','<b><i>ID</i></b>','right',true,20,true,null,true),
    		new PDFReportColumn('descricao','<b><i>Descrição</i></b>','left',true,80,true,null,true),
	    );
        
		$this->objBolsa = $MIOLO->GetBusiness($module,'bolsa');
    	$query = $this->objBolsa->ListAll();
		
	    $query->SetOrder('descricao,idbolsa');
    
		foreach($query->result as $row)
		{
			$data[] = $row;
		}

		parent::__construct($data,$columns,40);
	    $this->SetColumnAttr('idbolsa','index',0);
	    $this->SetColumnAttr('descricao','index',1);
		$this->SetTitle('Relação de Bolsas');
	    $this->SetOption('showTableTitle',1);
		$this->SetOption('showLines',0);
	    $this->timestamp = date('d/m/Y'); //G:i
	}
		
	function GeneratePageHeader()
	{   
  		$h = $this->pdf->getFontHeight(12);
    
//		$this->pdf->ezImage($this->img,5,50,'none','left');

		$this->pdf->addText(520,800,9,$this->timestamp);
		$this->pdf->addText(520,800-$h,10,'Página: ' . $this->pn->pageNumber . '/' . $this->pn->pageCount);

		$x0=$this->pdf->left;	
		$this->pdf->addText($x0, 800, 12, $this->manager->getConf('instituicao.sigla')." - ".$this->manager->getConf('instituicao.nome'));
		$this->pdf->addText($x0, 800 - $h, 12, $this->manager->getConf('theme.system'));


/*  $this->pdf->addText(90,800,12,'UFJF - Universidade Federal de Juiz de Fora');	  
  $this->pdf->addText(90,800-$h,12,'CGCO - Centro de Gestão do Conhecimento Organizacional');  $this->pdf->addText(90,800-$h-$h,12,'SIGA - Sistema Integrado de Gestão Acadêmica');
*/

		$this->pdf->addText(90,800-$h-$h-$h,12,'Módulo Administrativo');
	    $this->pdf->ezSetY(800-$h-$h-$h-$h);
	}
}
?>
