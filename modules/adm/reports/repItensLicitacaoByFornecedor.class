*/

		$this->pdf->addText(90,800-$h-$h-$h,10,'Coordenadoria de Suprimentos - Setor de Compras');
		$this->pdf->ezSetY(770-3*$h);

		$this->pdf->addText(20,720-$h,10,$participante->nome);
		$this->pdf->addText(20,720-2*$h,10,$participante->rua.', '.$participante->numero);
		$this->pdf->addText(20,720-3*$h,10,'BAIRRO '.$participante->bairro.'- CEP '.$participante->cep);	
		$this->pdf->addText(20,720-4*$h,10,$participante->municipio.'/'.$participante->uf);	

		$this->pdf->ezSetY(680-4*$h);
	}

