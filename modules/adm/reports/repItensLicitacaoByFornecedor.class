class repItensLicitacaoByFornecedor extends PDFReport
{
	var $img;
	var $timestamp;
	var $objItem;
	var $objRequisicao;
	var $objLicitacao;

	function __construct($info)
	{
		global $MIOLO, $module, $page, $context, $self, $action, $perms;

		$this->idParticipante = $info['idParticipante'];
		$this->idLicitacao = $info['idLicitacao'];

		$ui = $MIOLO->GetUI();
		$this->img = $ui->GetImageSrc('logonet.png'); 
		$columns = array(
			new PDFReportColumn('material','Material','left',true,300,true,null,true),
			new PDFReportColumn('quantentregue','Quantidade','center',true,80,true,null,true),
			new PDFReportColumn('descricao','Descrição','center',true,170,true,null,true),
		);
 
		$objLicitacao = $MIOLO->GetBusiness($module,'licitacao');
		$objLicitacao->GetbyId($this->idLicitacao);

		$this->objItem = $MIOLO->GetBusiness($module,'item');
		$query = $this->objItem->ListItensSemDescricaoByLicitacao($this->idLicitacao,$this->idParticipante);
		$query2 = $this->objItem->ListItensComDescricaoByLicitacao($this->idLicitacao,$this->idParticipante);	

		if ($query->result)
		{
			foreach($query->result as $row)
			{
				$data[] = $row;
			}
		}
	
		if ($query2->result)
		{
			foreach($query2->result as $row2)
			{
				$data[] = $row2;
			}
		}
		parent::__construct($data,$columns,40);
        
		$this->SetTitle('Convite para Licitação número '.$objLicitacao->numero.' a ser aberta em '.$objLicitacao->dataAbertura);
		$this->SetOption('showTableTitle',1);
		$this->SetOption('showLines',0);
		$this->timestamp = date('d/m/Y'); //G:i
	}
		
