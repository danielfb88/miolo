class repMovimentosPorData extends PDFReport
{
	var $img;
	var $timestamp;
	var $objRequisicao;

	function __construct($info)
	{
		global $MIOLO, $module, $page, $context, $self, $action, $perms;

		$this->idsetoralmox = $info['idsetoralmox'];
		$this->dataInicio = $info['dataInicio'];
		$this->dataFim = $info['dataFim'];	

		$ui = $MIOLO->GetUI();
		$this->img = $ui->GetImageSrc('logonet.png'); 
		$columns = array(
		    	new PDFReportColumn('idmaterial','Cód.','center',true,40,true,null,true),
			new PDFReportColumn('descricao','Descrição','left',true,340,true,null,true),
			new PDFReportColumn('unidade','UN','center',true,50,true,null,true),
			new PDFReportColumn('numero','Req.','center',true,40,true,null,true),
			new PDFReportColumn('idordement','','Ord.Ent.','center',true,40,true,null,true),
			new PDFReportColumn('quantidade','Qtde.','center',true,10,true,null,true),
			new PDFReportColumn('valortotal','Valor','center',true,60,true,null,true)
		);
        
		$this->objRequisicao = $MIOLO->GetBusiness($module,'requisicao');

		$query = $this->objRequisicao->ListMovimentosByDataSetor($info['idsetoralmox'],$info['dataInicio'],$info['dataFim']);
		

		//$setor = $MIOLO->GetBusiness('common','setor');
		//$setor->GetById($this->idsetoralmox);		


        if (is_array($query->result))
        {
            foreach($query->result as $row)
            {
                $dataIdMaterial[] = $row[0];
                $dataDescricao[] = $row[1];
                $dataUnidade[] = $row[2];
                $dataIdRequisicao[] = $row[3];
                $dataIdOrdemEnt[] = $row[4];
                $dataQuandidade[] = $row[5];
                $dataValorTotal[] = $row[6];
            }
            
            $quantidade = count($dataIdMaterial);

            for($i=0;$i<$quantidade;$i++)
            {
                $dataFinal[] = array(
                    $dataIdMaterial[$i],
                    $dataDescricao[$i], 
                    $dataUnidade[$i],
                    $dataIdRequisicao[$i],
                    $dataIdOrdemEnt[$i],
                    $dataQuandidade[$i],
                    number_format(str_replace(',','.',$dataValorTotal[$i]),2,',','')				
                );
                $i++;
            }
		}
		parent::__construct($dataFinal,$columns,40);
        
		$this->SetTitle('Relatório de Movimento de Material do Almoxarifado: '.$setor->nomesetor);
		$this->SetOption('showTableTitle',1);
		$this->SetOption('showLines',0);
		$this->timestamp = date('d/m/Y'); 
	}
		
