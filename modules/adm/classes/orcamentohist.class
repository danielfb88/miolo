class BusinessAdmOrcamentoHist extends Business
{
    var $idOrcamento;
    var $data;
    var $tipoOrc;
    var $valor;
    var $tipoOrcDescricao;
    var $orcamento;

    function __construct($data = null)
    {
        parent::__construct('sigaept',$data);
    }

    function OnCreate($data)
    {
        if (!empty($data))
        {
            $this->GetById($data);
        }
    }

    function GetById($idOrcamento)
    {
        $this->idOrcamento = $idOrcamento;
        $this->retrieve();
        return $this;
    } 

    function ListByClassOrcamentaria($ano,$ptr,$esfera,$fonte,$rubrica)
    {
        $criteria = $this->getCriteria();
        $criteria->AddColumnAttribute('idOrcamento');
        $criteria->AddColumnAttribute('orcamento.ano','ano');
        $criteria->AddColumnAttribute('orcamento.ptr.idPtr','ptr');
        $criteria->AddColumnAttribute('orcamento.fonte.idFonte','fonte');
        $criteria->AddColumnAttribute('orcamento.idRubrica','idRubrica');
        $criteria->AddColumnAttribute('orcamento.rubrica.descricao','rubrica');
        $criteria->AddColumnAttribute('data');
        $criteria->AddColumnAttribute('tipoOrc');
        $criteria->AddColumnAttribute('tabelaGeral.item2','tipoOrcDescricao');
        $criteria->AddColumnAttribute('valor');
        $criteria->AddColumnAttribute('orcamento.esfera');
        $criteria->addCriteria('tabelaGeral.tabela','=',"'AD_TIPOORC'");
        $criteria->addCriteria('orcamento.ano','=', $ano);
        $criteria->addCriteria('orcamento.ptr.idPtr','LIKE', "$ptr");
        $criteria->addCriteria('orcamento.fonte.idFonte','LIKE', "$fonte");
        $criteria->addCriteria('orcamento.rubrica.idRubrica','LIKE', "$rubrica");
        $criteria->addCriteria('orcamento.esfera','LIKE', "$esfera");
        $criteria->addOrderAttribute('idOrcamento');
        return $criteria->retrieveAsQuery();
    }
}
