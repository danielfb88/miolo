class BusinessAdmEmpresaManutencaoVeiculo extends Business
{
	public $idEmpresa;
    public $nome;
    public $cnpj;
    public $razaoSocial;
    public $rua;
    public $numero;
    public $bairro;
    public $cep;
    public $telefone;
    public $idMunicipio;
    
    public $municipio;
        
    function __construct($data=NULL)
    {
        $this->Business('sigaept',$data);
    }
    function GetById($id)
    {
		$this->idEmpresa = $id;
		$this->retrieve();
    }
    function setData($data)
    {
        $this->nome = ltrim(strtoUpper($data->nome));
		$this->cnpj = ltrim($data->cnpj);
	    $this->razaoSocial = ltrim(strtoUpper($data->razaoSocial));
		$this->rua = ltrim(strtoUpper($data->rua));
		$this->numero = ltrim(strtoUpper($data->numero));
		$this->bairro = ltrim(strtoUpper($data->bairro));
		$this->cep = ltrim($data->cep);
		$array = array("(",")","-");
		$this->telefone = ltrim(str_replace($array,"",$data->telefone));        
    }
    function getData()
    {
		$data->idEmpresa = $this->idEmpresa;
		$data->nome = $this->nome;
		$data->cnpj = $this->cnpj;
	    $data->razaoSocial = $this->razaoSocial;
		$data->rua = $this->rua;
		$data->numero = $this->numero;
		$data->bairro = $this->bairro; 
		$data->cep = $this->cep;
		$data->telefone = $this->telefone;
		return $data;
    }
    function setMunicipio($id)
    {
		$this->idMunicipio = $id;
    }
    function getMunicipio()
    {
        $this->retrieveAssociation('municipio');
    }
    function listAll()
    {
        global $MIOLO;
        
		$criteria =  $this->getCriteria();
        $criteria->addOrderAttribute('idEmpresa');
        return $criteria->retrieveAsQuery();
    }	
    function listByCnpj($cnpj)
    {
		global $MIOLO;
        
		$criteria =  $this->getCriteria();
        $criteria->addCriteria('cnpj','=',"'$cnpj'");
        return $criteria->retrieveAsQuery();
    }
    function checkSpace($objEmpresa)
    {
	if ($objEmpresa->nome == '')
		$var = "nome";
	else if ($objEmpresa->cnpj == '')
		$var = "CNPJ";
	else if ($objEmpresa->razaoSocial == '')
		$var = "Razao Social";
	else if ($objEmpresa->rua == '')
		$var = "Rua";
	else if ($objEmpresa->numero == '')
		$var = "Numero";
	else if ($objEmpresa->bairro == '')
		$var = "Bairro";
	else if ($objEmpresa->cep == '')
		$var = "CEP";
	else if ($objEmpresa->telefone == '')
		$var = "Telefone";


	return $var;
    }
}
