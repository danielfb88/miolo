class frmNovoServicoDel extends MForm
{
    protected $objServico;
    function __construct($objServico)
    {
        $this->objServico = $objServico;
        parent::__construct('Excluir Novo Servico');
        $this->EventHandler();
    }
    function CreateFields()
    {
        $action_sim = $this->manager->GetActionURL('adm','main:novoservico',$this->objServico->idNovoServico, array('form'=>'excluir','conf'=>'sim'));
        $action_nao = $this->manager->GetActionURL('adm','main:novoservico',$this->objServico->idNovoServico);
        $conf = $this->GetFormValue('conf');
        if ($conf == 'sim')
        {
            try
            {
                $this->objServico->setStatus(4);
                $this->objServico->save();
                $this->objServico->Log(OP_UPD,'Novo servico cancelado ['.$this->objServico->idNovoServico.']');
                $this->manager->Information('Novo servico cancelado com sucesso',$this->manager->GetActionURL('adm','main:novoservico:find'));
            }
            catch (Exception $e)
            {
                $this->manager->Error($e->GetMessage(),$this->manager->GetActionURL('adm','main:novoservico', $this->objServico->idNovoServico));
            }
        }
        else
        {
               $this->manager->Question("Tem certeza que deseja cancelar a sugestão de servico [{$this->objServico->idNovoServico}]?",$action_sim,$action_nao);
        }
    }
 }
