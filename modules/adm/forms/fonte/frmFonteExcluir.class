class frmFonteExcluir extends Form
{
	protected $objFonte;

    function __construct($objFonte)
    {
		$this->objFonte = $objFonte;
        parent::__construct('Excluir Fonte');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:fonte',$this->objFonte->idFonte,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:fonte',$this->objFonte->idFonte);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objFonte->Delete();
				$this->objFonte->Log(OP_DEL,"Fonte excluída");
				$this->manager->Information('Fonte excluída com sucesso',$this->manager->GetActionURL('adm','main:fonte:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:fonte',$this->objFonte->idFonte));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir essa fonte?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
