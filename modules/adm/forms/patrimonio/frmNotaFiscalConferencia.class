class frmNotaFiscalConferencia extends MForm
{
    function __construct()
    {
        parent::__construct('Relatório de Itens Patrimoniais por Nota Fiscal');
        $this->EventHandler();
		$this->defaultButton = false;
    }

	function CreateFields()
    {
		global $MIOLO, $module, $action, $item, $theme;
		
		$opcaoOrdenacao = array(
			"id"			=>"Número do Patrimônio",
			"desc"			=>"Descrição",
		);		

		$fields = array(
			new MTextField('notaFiscal','','Nota Fiscal',10),
			new MCheckBox('listarItens','S','Listar itens?', true,''),
			new MSelection('ordenacao','id','Ordenação', $opcaoOrdenacao)
		);
		$this->SetFields($fields);

		$buttons = array(
			new MButton('btnPost','Gerar Relatório','PDF'),
		);
		$this->SetButtons($buttons);
	}

 function btnPost_click()
    {
	global $MIOLO, $module, $item;
	
		$notaFiscal = trim(Form::GetFieldValue('notaFiscal'));		
		$listarItens     = Form::GetFormValue('listarItens') ;
		
		
		if (empty($listarItens)) { $listarItens = 'N';}
		
		var_dump($listarItens);
		//exit();	
		
		
		$ordem = Form::GetFormValue('ordenacao');
		
		$opcaoOrdenacao = array(
			"id"			=>"Número do Patrimônio",
			"desc"			=>"Descrição",
		);		
		
		if(empty($notaFiscal))
		{
			$this->AddError('É necessário informar a nota fiscal!');	
		}
		else if (empty($ordem))
		{
		    $this->AddError('É necessário escolher uma opção de ordenação!');
		
		}
		else
		{
        	$report = new MJasperReport('sigaept'); 
        	$parameters['SUBREPORT_DIR']	   = $MIOLO->GetConf('home.modules');
        	$parameters['int_pIdUsuario']	   = $MIOLO->login->idkey;
     		$parameters['str_pNotaFiscal']     = $notaFiscal;
			$parameters['str_pOrdenacao']      = $ordem;
        	$parameters['pURL']				   = $MIOLO->GetConf('home.url');
			$parameters['plistarItens']        = $listarItens;			
			$report->Execute('adm', 'repNotaFiscalConferencia', $parameters);			
			//echo('<pre>');
			//	var_dump($parameters);
			//echo('</pre>');
		}
	}
}
