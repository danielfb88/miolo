class frmRepTermo2 extends MForm
{
    function __construct()
    {
        parent::__construct('Termo de Responsabilidade');
        $this->EventHandler();
		$this->defaultButton = false;
    }

	function CreateFields()
    {
		global $MIOLO, $module, $action, $item, $theme;

		$fields = array(
		                 new MTextField('iditempatrimonio','','Numero item de',6),
		                 new MTextField('iditempatrimonio1','','Até Número ',6),
		                

		);
		
		$this->SetFields($fields);

		$buttons = array(
			new MButton('btnPost','Gerar Relatório','PDF'),
		);
		$this->SetButtons($buttons);
	}

function btnPost_click()
    {
	global $MIOLO, $module, $item;
		
		$numItem = Form::GetFieldValue('iditempatrimonio');
		$ateNum  = Form::GetFieldValue('iditempatrimonio1');
		
		if($numItem == '' || $ateNum == '' || (!is_numeric($numItem)) || (!is_numeric($ateNum))){
			$this->AddError('Os campos \'Número item\' e \'Até Número\' deve ser preenchido com valor númerico!');
		}
		else if($numItem > $ateNum){
			$this->AddError('O valor do campo \'Número item\' deve ser menor que o valor do campo \'Até Número\'!');			
		}
		else{			
	        $report = new MJasperReport('sigaept'); 
	        /*$parameters['SUBREPORT_DIR']	= $MIOLO->GetConf('home.modules');
	        $parameters['int_pIdUsuario']	= $MIOLO->login->idkey;
	        $parameters['int_pIdItem']	= Form::GetFormValue('iditempatrimonio'); 
	        $parameters['int_pItem2']	= Form::GetFormValue('iditempatrimonio1'); 
	       
	        $parameters['pURL']		= $MIOLO->GetConf('home.url');*/
			
			$parameters['SUBREPORT_DIR']	= $MIOLO->GetConf('home.modules');
	        $parameters['int_pIdUsuario']	= $MIOLO->login->idkey;
	        $parameters['int_pIdInicial']	= Form::GetFormValue('iditempatrimonio'); 
	        $parameters['int_pIdFinal']	= Form::GetFormValue('iditempatrimonio1'); 
	       
	        $parameters['pURL']		= $MIOLO->GetConf('home.url');
	        $report->Execute('adm', 'repTermoPorNumero', $parameters); //Modificado por edson.castro
       }
    }
}
