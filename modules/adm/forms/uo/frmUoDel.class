/**
 * Formulário de exclusão uo
 */
class frmUoDel extends Form
{
    /**
     * Objeto uo
     * @access protected
     * @var BusinessRhUo
     */
    protected $objUo;

    function __construct($objUo)
    {
        $this->objUo = $objUo;
        parent::__construct('Excluir Unidade Orçamentária');
        $this->EventHandler();
    }

    function CreateFields()
    {
        $action_sim = $this->manager->GetActionURL('adm','main:uo',$this->objUo->idUo,array('form'=>'excluir','conf'=>'sim'));
        $action_nao = $this->manager->GetActionURL('adm','main:uo',$this->objUo->idUo);

        $conf = $this->GetFormValue('conf');

        if ($conf == 'sim')
        {
            try {
	        $this->objUo->ativo = "N";
                $this->objUo->Update();
                $this->objUo->Log(OP_DEL,"UO excluída (Inativada)");
                $this->manager->Information('Unidade orçamentária excluída com sucesso. (Inativa)',$this->manager->GetActionURL('adm','main:uo:find'));
            }
            catch (Exception $e)
            {
                $this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage(),$this->manager->GetActionURL('adm','main:uo',$this->objUo->idUo));
            }
        }
        else
        {
            $this->manager->Question("Tem certeza que deseja excluir essa unidade orçamentária?",$action_sim,$action_nao);
        }
    }
}
