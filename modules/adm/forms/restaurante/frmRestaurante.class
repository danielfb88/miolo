/**
 * Form Restaurante
 */
class frmRestaurante extends CompoundForm
{
	public $oid;
    protected $restaurante;
    /**
     * Construtor
     */
    function __construct($objRestaurante)
    {
        global $MIOLO;
        $this->restaurante = $objRestaurante;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:restaurante:find'));
        $this->SetTitle($this->restaurante->nome);
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $restaurante = $this->restaurante;
        if ($this->oid == NULL) $this->oid = $restaurante->idRestaurante;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmRestauranteEditar', $restaurante, 'restaurante'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmRestauranteExcluir', $restaurante, 'restaurante'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:restaurante',$uo->idRestaurante));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$this->_info[1]	= new TextLabel('txtNome',$this->restaurante->nome,'Nome');
		$this->restaurante->ativo?$a="Sim":$a="Não";
		$this->_info[2]	= new TextLabel('txtAtivo',$a,'Ativo');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_restaurante_editar',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ad_restaurante_excluir',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
 	}
}
