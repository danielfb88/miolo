<?
class frmRestauranteEditar extends Form
{

	protected $objRestaurante;
	
    function __construct($objRestaurante)
    {
		$this->objRestaurante = $objRestaurante;
        $this->Form('Dados do Restaurante');
        $this->EventHandler();
    }

    function CreateFields()
    {
       global $MIOLO;
		$fields = array
			(
               new TextField('nome','','Nome','30','Máx. 30 caracteres'),
			   new Selection('ativo','','Ativo'),
            );
		
        $this->SetFields($fields);
		
		$buttons = array
			(
        	   new FormButton('btnSalvar', 'Salvar')
            );
		$this->SetButtons($buttons);

		$validators = array
			(
			   new RequiredValidator('nome'),
		    );
		$this->SetValidators($validators);
		$this->SetData();
    }

	function SetData()
	{
		$data = $this->objRestaurante;
		$this->SetFieldValue('ativo',$data->ativo);
		$this->SetFieldValue('nome',$data->nome);
	}
	
	function GetData()
	{
		$data = $this->objRestaurante;
		$data->ativo = $this->GetFieldValue('ativo');
		$data->nome = $this->GetFieldValue('nome');
	}
	
	public function btnSalvar_click()
	{
		$this->objRestaurante->SetData($this->GetData());
		$nome  =  $this->objRestaurante->nome;
		$ativo =  $this->objRestaurante->ativo;
		var_dump($nome);
		if ( strlen(trim($nome)) < 5 )
		{
			$this->AddError("O nome do restaurante deve possuir mais que quatro caracteres");
		}
		else if (!strcmp($ativo,''))
		{
			$this->AddError("Especifique se o restaurante está ativo.");
		}
		else {
			try
			{
				$this->objRestaurante->nome = strtoupper($this->objRestaurante->nome);

				$this->objRestaurante->save();

				$this->objRestaurante->Log(OP_UPD,"Dados de restaurante modificados");

				$go = $this->manager->GetActionURL('adm','main:restaurante:find',$this->objRestaurante->idRestaurante);
				$this->manager->Information('Restaurante modificado com sucesso.',$go);
			}
			catch (Exception $e)
			{
				$this->addError($e->getMessage());
			}
	    }
	}
 }
?>
