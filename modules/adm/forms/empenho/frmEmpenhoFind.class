class frmEmpenhoFind extends MForm
{
    function __construct()
    {
		global $MIOLO, $module;
        parent::__construct('Pesquisa de empenhos');
		$this->SetClose($MIOLO->GetActionURL($module,'main'));
        $this->EventHandler();
    }
    function CreateFields()
    {
		$optionsStatus = Array('1'=>'A Numerar','2'=>'Empenhado' );
		$busca = new MThemeBox('&nbsp;&nbsp;Buscar', array(
			//new MLabel('Número:'), new MTextField('numero',Form::getFormValue('numero'),'',8),
			new MLabel('Fornecedor:'),new MTextField('fornecedor',Form::getFormValue('fornecedor'),'',30),
			new MLabel('ou Licitação:'),new MTextField('licitacao',Form::getFormValue('licitacao'),'',8),
	        new MSelection('status','','Status',$optionsStatus),
			new MButton('btnPost','Buscar')));
		$param = array('1'=>Form::getFormValue('licitacao'), '2'=>Form::getFormValue('fornecedor'),'3'=>Form::getFormValue('status'));		
		$grid = $this->manager->getUI()->getGrid('adm','gridEmpenho',$param);
		$fields = array($busca,
						$grid
					);
        $this->setFields($fields);
	    $this->defaultButton = false;

    }
 }
