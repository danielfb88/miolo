class frmUoAlmoxarifadoRepTomadaDeContaPorMaterial extends MForm
{
    public $uoalmoxarifado;
    
    function __construct($objUo)
    {
        global $MIOLO;
		parent::__construct("Tomada de Conta Por Material");
        $this->uoalmoxarifado = $objUo;
        $this->eventHandler();
    }

	function CreateFields()
	{
		global $module, $item;
		$fields = array
	        (
			new MText('','Material:'),
            new MLookupTextField('material','','',50),
			new MHiddenField('idmaterial',''),
			new MHiddenField('idUo', $item)
        	);
	        $this->setFields($fields);
		$buttons = array
	        (
	        	new MButton('btnRelatorioJasper','Gerar Relatório','PDF'),
		);
        $this->setButtons($buttons);

		$this->SetFieldAttr('material','module','adm');
        $this->SetFieldAttr('material','item','materialestoque');
        $this->SetFieldAttr('material','event','filler');
	    $this->SetFieldAttr('material','filter','idUo,material');
		$this->SetFieldAttr('material','related','idmaterial,codmaterial,material,unidade');
	}    
	
	function btnRelatorioJasper_click()
	{
		global $MIOLO, $item;

		$idMaterial = $this->getFieldValue('idmaterial');
	
		if ( $idMaterial == "" ) 
			$this->addError('É necessário informar o material!');
		else {                        
			$report = new MJasperReport('sigaept');
			$parameters['SUBREPORT_DIR']    = $MIOLO->GetConf('home.modules');
			$parameters['pURL']             = $MIOLO->GetConf('home.url');
			$parameters['int_pIdUsuario']       = $MIOLO->login->idkey;
			$parameters['int_idMaterial']  = $idMaterial;
			$parameters['int_pIdUo']         = $item;

			$report->Execute('adm', 'repTomadaContaPorMaterial', $parameters);
		}
	}
}
?>
