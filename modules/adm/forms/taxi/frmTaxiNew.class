MIOLO::Import('modules::adm::forms::taxi::frmTaxiPai');

class frmTaxiNew extends frmTaxiPai
{
	function __construct()
	{
		$this->Form('Incluir Novo Taxi');
		$this->EventHandler();
	}

	function CreateFields()
	{
		$this->CommonFields();
		$buttons = array
		(
			new FormButton("btnNew","Cadastrar Valor")
		);

		$this->SetButtons($buttons);
		$this->valor->addAttribute('maxlength',8);
	}

	function btnNew_click()
	{
		$data = $this->GetData();
		$taxi = $this->manager->GetBusiness('adm','taxi');
		$taxi->SetData($data);
        $cf = new MCurrencyFormatter();
        
        //aplicando a máscara no valor
        $mascara = array("R","$");
        $taxi->valor = str_replace($mascara, "", $taxi->valor);
                
		if (substr_count($taxi->valor, ",") == 0)
        {
                $taxi->valor = str_replace(".",",",$taxi->valor);
        }
        else
        {
                $taxi->valor = str_replace(".","",$taxi->valor);
        }
        $taxi->valor = $cf->toDecimal($taxi->valor);
        
		$inicio = $taxi->dataIni;
        $final = $taxi->dataFim;

        $partes_da_data = explode('/',$inicio);
        $datainicial =  $partes_da_data[2].'/'.$partes_da_data[1].'/'.$partes_da_data[0];
        $partes_da_data = explode('/',$final);
        $datafinal =  $partes_da_data[2].'/'.$partes_da_data[1].'/'.$partes_da_data[0];
        
		if ($taxi->dataIni == '') {
			$this->AddError("Selecione a Data Início.");
		}
		else if ($taxi->dataFim == '') {
			$this->AddError("Selecione a Data Fim.");
		}
		else if ($taxi->valor == '') {
			$this->AddError("Informe o valor do Taxi.");
		}
		else if ($datafinal < $datainicial) {
			$this->AddError("A Data fim não deve ser anterior a Data Início.");
		}
		else if ($taxi->valor < 0) {
			$this->AddError("O valor do Taxi não pode ser negativo.");
		}
		else if ($this->valor == 0) {
			$this->AddError("Forneça um valor válido.");
		}
		else if ($this->findByNome($datainicial) > 0) {
			$this->AddError("Já existe um taxi cadastrado para essa data.");
		}
		else
		{
			try
			{
				$taxi->save();
				$taxi->Log(OP_INS,"Novo Taxi criado");
				$go = $this->manager->GetActionURL('adm','main:taxi:find',$taxi->dataIni);
				$this->manager->information("Valor de taxi cadastrado com sucesso.",$this->manager->getActionUrl('adm','main:taxi:find') );
			}
			catch (Exception $e)
			{
				$this->addError($e->getMessage());
			}
		}
	}
}
