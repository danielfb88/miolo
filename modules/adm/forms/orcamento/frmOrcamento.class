/**
 * Form OrcamentoHist
 */
class frmOrcamento extends CompoundForm
{
	public $oid;
    protected $orcamentoHist;
    /**
     * Construtor
     */
    function __construct($objOrcamentoHist)
    {
        global $MIOLO;
        $this->orcamentoHist = $objOrcamentoHist;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:orcamento:find'));
        $this->SetTitle($this->orcamentoHist->idOrcamento);
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $orcamentoHist = $this->orcamentoHist;
        if ($this->oid == NULL) $this->oid = $orcamentoHist->idOrcamento;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmOrcamentoEditar', $orcamentoHist, 'orcamento');
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmOrcamentoExcluir', $orcamentoHist, 'orcamento');
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:orcamento',$orcamentoHist->idOrcamento));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$Instituicao = $MIOLO->GetBusiness('common','instituicao');
		$ug = $Instituicao->GetInstByUG($orcamentoHist->orcamento->ug);

		$tabelaGeral = $MIOLO->GetBusiness('common','tabelageral');
		$tipo = $tabelaGeral->GetByItem('AD_TIPOORC',$orcamentoHist->tabelaGeral->item1);
		$this->_info[8]	= new TextLabel('txtUG',$ug->result[0][0],'Campus');		
		$this->_info[0]	= new TextLabel('txtAno',$orcamentoHist->orcamento->ano,'Ano');
		$this->_info[1]	= new TextLabel('txtPtr',$orcamentoHist->orcamento->ptr->descricao,'PTR');
		$this->_info[2]	= new TextLabel('txtEsfera',$orcamentoHist->orcamento->esfera,'Esfera');
		$this->_info[3]	= new TextLabel('txtFonte',$orcamentoHist->orcamento->fonte->idFonte,'Fonte');
		$this->_info[4]	= new TextLabel('txtRubrica',$orcamentoHist->orcamento->rubrica->descricao,'Rubrica');
		$this->_info[5]	= new TextLabel('txtData',$this->invert($orcamentoHist->data,'-'),'Data');
		$this->_info[6]	= new TextLabel('txtTipo',$tipo->item2,'Tipo');
		$this->_info[7]	= new TextLabel('txtValor',$orcamentoHist->valor,'Valor');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_orcamento_editar',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ad_orcamento_excluir',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
 	}
 	
	function invert($datainv,$sep)
	
			{//recebe a data e o separador

		$ano=substr("$datainv",0, 4);
		$mes=substr("$datainv",5, 2);
		$dia=substr("$datainv",8, 2);
		$datainv="$dia$sep$mes$sep$ano";
		return $datainv;
			}	
	 	
}
?>
