<?php
class frmRepMaterialConsumo extends Form
{
    protected $material;
    protected $subelemento;
	
    function __construct()
    {
    	global $MIOLO;
        $this->material = $MIOLO->getBusiness('adm','material');
        $this->subelemento = $MIOLO->getBusiness('adm','subelemento');
        $this->Form('Relatório de Material de Consumo');
        $this->EventHandler();       
    }

    function CreateFields()
    {	
        $consumo = $this->material->ListSubElementoByIdElemento(339030);	
        $yesNo = array("S"=>"SIM","N"=>"NÃO");	
        $fields = Array(
            new Text('','Selecione uma categoria:'),
            new Selection('idconsumo','','', $consumo->result),
            new Text('','Listar somente os materiais estocáveis?'),
            new Selection('estocavel','','', $yesNo)
        );

	$this->SetFields($fields);
	$buttons = Array (
            new FormButton('btnRelatorioJasper', 'Gerar Relatório','pdf'),
        );
        $this->SetButtons($buttons);
    }		

    function btnRelatorioJasper_click()
    {
        global $MIOLO;

        $data = $this->getData();		
        
        if (!$data->estocavel || !$data->idconsumo)
            $this->manager->Error("Voce precisa selecionar uma das opções.");		
        else
        {
            $parameters['NUM_SUBELEMENTO'] = Form::getFormValue('idconsumo');
            $parameters['ESTOCAVEL_N'] = Form::getFormValue('estocavel');
            $parameters['int_ID_USUARIO'] = $MIOLO->login->idkey; 
            $parameters['URL_LOGO'] = $MIOLO->GetConf('home.url');
            //$parameters['INSTITUICAO'] = $MIOLO->GetConf('instituicao.nome');
            $parameters['str_HEADER_DIR'] = $MIOLO->GetConf('home.modules') . '/common/reports/';
            $report = new MJasperReport('sigaept');
            $report->Execute('adm', 'MaterialDeConsumo', $parameters);
        }
    }
}
