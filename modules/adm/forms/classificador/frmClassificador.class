<?php
/**
 * Form Classificador
 */
class frmClassificador extends CompoundForm
{
	public $oid;
    protected $classificador;
    /**
     * Construtor
     */
    function __construct($objClassificador)
    {
        global $MIOLO;
        $this->classificador = $objClassificador;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:classificador:find'));
        $this->SetTitle($this->classificador->idClassificador);
        $this->SetIcon($MIOLO->GetUi()->GetImageTheme('','icons/default.png'));
	
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $classificador = $this->classificador;
        if ($this->oid == NULL) $this->oid = $classificador->idClassificador;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmClassificadorEditar', $classificador, 'classificador'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmClassificadorExcluir', $classificador, 'classificador'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:classificador',$classificador->idClassificador));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$this->_info[0]	= new TextLabel('txtNome',$this->classificador->descricao,'Descricao');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
		// ALTERADO DE "ad_classificador_editar" e "ad_classificador_excluir" para "ADM_PATRIMONIO"
        $panel->AddUserAction('ADM_PATRIMONIO',A_EXECUTE,'Editar',$ui->GetImageTheme('','icons/editar.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ADM_PATRIMONIO',A_EXECUTE,'Excluir',$ui->GetImageTheme('','icons/excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
 	}
}
?>
