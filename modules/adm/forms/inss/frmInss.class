<?
class frmInss extends MCompoundForm
{
    protected $inss;
  
    function __construct($objInss)
    {
        global $MIOLO;
        $this->inss = $objInss;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:inss:find'));
        $this->SetTitle('Dados do INSS');
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context;

        $inss = $this->inss;
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmInssDados', $inss, 'inss'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmInssDel', $inss, 'inss'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:inss',$inss->idInss));
        }
		
		$this->_info[0]	= new MTextLabel('idInss',$this->inss->idInss,'Código');
		$this->_info[1]	= new MTextLabel('',$this->inss->dataIni,'Data Início');
		$this->_info[2]	= new MTextLabel('',$this->inss->dataFim,'Data Fim');
		$this->_info[4]	= new MTextLabel('ate',$this->inss->ate,'Valor Máximo');
		$this->_info[5]	= new MTextLabel('percentual',$this->inss->percentual,'Percentual');
		$this->_info[6]	= new MTextLabel('fixo',$this->inss->fixo,'Fixo');
		$this->_info[7]	= new MTextLabel('percPatronal',$this->inss->percPatronal,'Percentual Patronal');
        
        $action = $context->action;
        $this->_panel[0] = $panel = new MActionPanel('pnlCompound','Opções','',false);
        $panel->addAction('Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->inss->idInss, array("form"=>"editar"));
        $panel->addAction('Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->inss->idInss, array("form"=>"excluir"));
 	}
}
?>

	
