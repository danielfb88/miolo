<?
class frmPtrEditar extends Form
{

    protected $objPtr;
	
    function __construct($objPtr)
    {
        $this->objPtr = $objPtr;
        $this->Form('Dados do PTR');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;
        $fields = array	(
            new TextField('idPtr','','Código','20'),
            new TextField('descricao','','Descrição','50','Máx. 50 caracteres'),
            new TextField('progTrab','','Prog. Trabalho','20'),
    //        new TextField('uorcamento','','Unidade Orçamentária','20'),
        );
		
        $this->SetFields($fields);
        $this->SetFieldAttr('idPtr', 'readonly', true);
		
        $buttons = array (
            new FormButton('btnSalvar', 'Salvar')
        );
        $this->SetButtons($buttons);

        $validators = array (
            new RequiredValidator('idPtr'),
            new RequiredValidator('progTrab'),
            new RequiredValidator('descricao'),
        );
        $this->SetValidators($validators);
        $this->SetData();
    }

    function SetData()
    {
        $data = $this->objPtr;
        $this->SetFieldValue('idPtr',$data->idPtr);
        $this->SetFieldValue('descricao',strtoupper($data->descricao));
        $this->SetFieldValue('progTrab',strtoupper($data->progTrab));
    //    $this->SetFieldValue('uorcamento',strtoupper($data->uorcamento));
    }
	
    public function btnSalvar_click()
    {
        $this->objPtr->SetData($this->GetData());
        try {
            $this->objPtr->save();
            $this->objPtr->Log(OP_UPD,"Dados de ptr modificados");
            $go = $this->manager->GetActionURL('adm','main:ptr',$this->objPtr->idPtr);
            $this->manager->Information('PTR alterado com sucesso',$go);
        }
        catch (Exception $e)
        {
            $this->addError($e->getMessage());
        }
    }
}
