class frmPtrNew extends Form
{
	function __construct()
	{
		$this->Form('Incluir Novo PTR');
		$this->EventHandler();
	}

	function CreateFields()
	{
		$fields = array (
			new TextField('idPtr','','Código','6','Máx. 6 caracteres'),
			new TextField('descricao','','Descricao','50','Máx. 50 caracteres'),
			new TextField('progTrab','','Prog. Trabalho','20','Máx. 15 caracteres'),
	//		new TextField('uorcamento','','Unidade Orçamentária','3'),
		);
		$this->SetFields($fields);

		$this->descricao->addAttribute('maxlength',50);
		$this->idPtr->addAttribute('maxlength',6);
		$this->progTrab->addAttribute('maxlength',15);

		$buttons = array (
			new FormButton('btnNew', 'Cadastrar PTR')
		);
		$this->SetButtons($buttons);

		$validators = array (
			//new MMaskValidator('idPtr','','999999','required'),
			new RequiredValidator('idPtr'),
			new RequiredValidator('descricao'),
			new RequiredValidator('progTrab'),
		);
		$this->SetValidators($validators);
	}

	function btnNew_click()
	{
		$data = $this->GetData();

		$zeros = substr('000000', 0, (6 - strlen($data->idPtr)));
		$data->idPtr = $zeros . $data->idPtr;
		$this->SetFieldValue('idPtr', $data->idPtr);

	      
		//passa a descrição toda para maiúclulo
		$data->descricao = strtoupper($data->descricao);
		$data->progTrab = strtoupper($data->progTrab);
		$this->SetFieldValue('descricao', $data->descricao);
//		$data->uorcamento = strtoupper($data->uorcamento);
	//	$this->SetFieldValue('uorcamento', $data->uorcamento);
		
		if( strlen(trim($data->descricao)) < 4 )
		{
			$this->AddError('É necessário descrever a PTR.');
		}
		elseif( strlen(trim($data->progTrab)) < 3 )
		{
			$this->AddError('Informe o Programa de Trabalho.');
		}
		else
		{
			$ptr = $this->manager->GetBusiness('adm','ptr');
			$ptr->SetData($data);
			
			if($ptr->findByCodigo($ptr->idPtr))
			{
				$this->AddError('Código já cadastrado.');	
			}
			else
			{
				try
				{
					$ptr->save();
					$ptr->Log(OP_INS,"Novo ptr criado");
					$go = $this->manager->GetActionURL('adm','main:ptr:find',$ptr->idPtr);
					$this->manager->Information('PTR criada com sucesso.',$go);
				}
				catch (Exception $e)
				{
					$this->addError($e->getMessage());
				}
			}
		}
	}

}
