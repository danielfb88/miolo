/**
 * Form Dependencia
 */
class frmDependencia extends CompoundForm
{
	public $oid;
    protected $dependencia;
    /**
     * Construtor
     */
    function __construct($objDependencia)
    {
        global $MIOLO;
        $this->dependencia = $objDependencia;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:dependencia:find'));
        $this->SetTitle($this->dependencia->dependencia);
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $dependencia = $this->dependencia;
        if ($this->oid == NULL) $this->oid = $dependencia->idDependencia;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmDependenciaEditar', $dependencia, 'dependencia'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmDependenciaExcluir', $dependencia, 'dependencia'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:dependencia', $dependencia->idDependencia));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$this->dependencia->retrieveAssociation('setor');
		$this->_info[0]	= new TextLabel('txtNome',$this->dependencia->dependencia,'Descricao');
		$this->_info[1]	= new TextLabel('txtSetor', $this->dependencia->setor->nome . ' (' . $this->dependencia->setor->sigla . ')','Setor');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ADM_PATRIMONIO',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ADM_PATRIMONIO',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
 	}
}
?>
