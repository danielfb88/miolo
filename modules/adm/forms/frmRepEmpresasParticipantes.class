<?
class frmRepEmpresasParticipantes extends Form
{
	function __construct()
	{   
		global $item;
		// nome do formulário
		parent::__construct('Imprimir Empresas Participantes Licitação Nº '.$item);
		// eventos
		$this->EventHandler();
	}
		
	Function CreateFields()
	{
		global $MIOLO,$module,$item,$self;
		$objLicitacao = $MIOLO->GetBusiness($module,'licitacao');
		$list = $objLicitacao->ListAbertas();
		$buttons = Array(
	        	new FormButton('btnReport','Exibir Empresas Participantes','pdf')
	 	);
		$this->SetButtons($buttons);
	}
	
	function btnReport_click()
	{
		global $MIOLO,$module,$item;
		
		$idLicitacao = $item;
		$objLicitacao = $MIOLO->GetBusiness($module,'licitacao',$idLicitacao);			
		$objLicitacao = $objLicitacao->getById($idLicitacao);

		$report = new MEzPDFReport('2','portrait');
		$h  = $report->pdf->getFontHeight(10);
		$ui = $this->manager->GetUI();
		$report->pdf->ezImage($ui->GetImage('','logonet.png'),5,50,'none','left',0);
		$report->pdf->addText(110,810       ,10,'UNIVERSIDADE FEDERAL DE JUIZ DE FORA');
		$report->pdf->addText(110,810-$h    ,10,'CENTRO DE GESTÃO DO CONHECIMENTO ORGANIZACIONAL - CGCO');
		$report->pdf->addText(110,810-(2*$h),10,'SISTEMA INTEGRADO DE GESTÃO ACADÊMICA - SIGA');
		$report->pdf->ezText('EMPRESAS PARTICIPANTES ',16,array('justification'=>'center'));
		$report->pdf->ezText('LICITAÇÃO NÚMERO '.$objLicitacao->numero,10,array('justification'=>'center'));			
		$report->pdf->ezText('',20);
		$options['textCol']      = array(0,0,0);
		$options['shaded']       = 1;
		$options['showLines']    = 1;		
		$options['fontSize']     = 10;
		$options['width']        = 540;
		$options['xPos']         = 'left';
		$options['xOrientation'] = 'right';			

				
		$participantes = $objLicitacao->ListCgcParticipantesByLicitacao();
				
		if (is_array($participantes))

		{
			foreach($participantes as $val)
			{
				$cnpj = str_split($val[0]);
				
				$cnpj1 = $cnpj[0].$cnpj[1];
				$cnpj2 = $cnpj[2].$cnpj[3].$cnpj[4];
				$cnpj3 = $cnpj[5].$cnpj[6].$cnpj[7];
				$cnpj4 = $cnpj[8].$cnpj[9].$cnpj[10].$cnpj[11];
				$cnpj5 = $cnpj[12].$cnpj[13];
				//PARA FORMATAR O CNPJ
				$cnpj = $cnpj1.'.'.$cnpj2.'.'.$cnpj3.'/'.$cnpj4.'-'.$cnpj5;
				
				$nome = $val[1];
				$dataRel[] = array($nome,$cnpj);
			}	
		}
				
		$cols = array('<b>EMPRESA</b>','<b>CNPJ</b>');
		$report->pdf->ezTable($dataRel,$cols,'',$options);
		$report->Execute();
	}	
}
?>
