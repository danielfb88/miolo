/**
 * Form Hotel
 */
class frmHotel extends CompoundForm
{
	public $oid;
    protected $hotel;
    /**
     * Construtor
     */
    function __construct($objHotel)
    {
      global $MIOLO;
      $this->hotel = $objHotel;
      parent::__construct();
      $this->SetClose($MIOLO->GetActionURL('adm','main:hotel:find'));
      $this->SetTitle($this->hotel->nome);
      $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $hotel = $this->hotel;
        if ($this->oid == NULL) $this->oid = $hotel->idHotel;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmHotelEditar', $hotel, 'hotel'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmHotelExcluir', $hotel, 'hotel'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:hotel',$uo->idHotel));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$this->_info[1]	= new TextLabel('txtNome',$this->hotel->nome,'Nome');
		$this->hotel->ativo?$a="Sim":$a="Não";
		$this->_info[2]	= new TextLabel('txtAtivo',$a,'Ativo'); 

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_hotel_editar',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ad_hotel_excluir',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
 	}
}
