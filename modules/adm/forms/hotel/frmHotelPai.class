class frmHotelPai extends Form
{
	function __construct()
	{
		$this->Form('Pai');
		$this->EventHandler();
	}

	function CommonFields()
	{
		$this->AddField(new HiddenField('idHotel'));
		$this->AddField(new TextField('nome','','Nome','30','Máx. 30 caracteres'));
		$this->AddField(new MCurrencyField('valorDiaria','','Valor da Diária',8,'Máx. 8 caracteres'));
		$this->AddField(new Selection('ativo','','Ativo'));
	} 

	function SetData()
	{
		$data = $this->objHotel;
		$this->SetFieldValue('idHotel',$data->idHotel);
		$this->SetFieldValue('ativo',$data->ativo);
		$this->SetFieldValue('nome',$data->nome);
		$this->SetFieldValue('valorDiaria',$data->valorDiaria);
	}
}
