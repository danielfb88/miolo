class frmRubricaNew extends Form
{
	function __construct()
	{
		$this->Form('Incluir Nova Rubrica');
		$this->EventHandler();
	}

	function CreateFields()
	{
		$fields = array (
			new TextField('idRubrica','','Código','20', 'Min. 8 números'),
			new TextField('descricao','','Descricao','60', 'Máx. 60 caracteres.'),
		);
		$this->SetFields($fields);

		$this->idRubrica->addAttribute('maxlength',20);
		$this->descricao->addAttribute('maxlength',60);

		$buttons = array (
			new FormButton('btnNew', 'Cadastrar Rubrica')
		);
		$this->SetButtons($buttons);

		$validators = array (
			new MRequiredValidator('idRubrica'),
			new MRequiredValidator('descricao'),
		);
		$this->SetValidators($validators);
	}

	function btnNew_click()
	{
		if( !preg_match("/^[0-9]{8,}/" ,Form::GetFormValue('idRubrica')) )
		{
			$this->AddError('Informe um código válido.');
		}
		elseif( strlen(trim(Form::GetFormValue('descricao'))) < 3 )
		{
			$this->AddError('Informe corretamente a descrição da rubrica.');
		}
		else
		{
			$data = $this->GetData();
			$rubrica = $this->manager->GetBusiness('adm','rubrica');
			$rubrica->SetData($data);

			if($rubrica->findByCodigo($rubrica->idRubrica))
			{
				$this->AddError('Código já cadastrado.');	
			}
			else
			{
				try
				{
					$rubrica->descricao = strtoupper($rubrica->descricao);
					$rubrica->save();
					$rubrica->Log(OP_INS,"Nova rubrica criada");
					$go = $this->manager->GetActionURL('adm','main:rubrica',$rubrica->idRubrica);
					$this->manager->Information('Rubrica criada com sucesso.',$go);
				}
				catch (Exception $e)
				{
					$this->addError($e->getMessage());
				}
			}
		}
	}
}
