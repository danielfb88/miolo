class frmServInterno extends CompoundForm
{
	public $oid;
    protected $servInterno;
    
    function __construct($objServInterno)
    {
      global $MIOLO;
      $this->servInterno = $objServInterno;
      parent::__construct();
      $this->SetClose($MIOLO->GetActionURL('adm','main:servInterno:find'));
      $this->SetTitle($this->servInterno->descricao);
      $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $servInterno = $this->servInterno;
        if ($this->oid == NULL) $this->oid = $servInterno->idTipoServInt;

        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmServInternoNew', $servInterno, 'servInterno'); 
            break;
            
            case 'executores' : 
				if ( ($idExecutorServInt = $this->getFormValue('idExecutorServInt')) != NULL )
				{
                    $executor = $this->manager->getBusiness('adm','executorservint');
                    $executor->getById($idExecutorServInt);
                    $executor->delete();
				}
				$this->_form[0] = $ui->GetGrid($module,'gridExecutorServInterno', $servInterno);
				$this->_form[1] = $ui->GetForm($module,'frmServInternoExecutores', $servInterno, 'servInterno');                
			break;
            
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmServInternoExcluir', $servInterno, 'servInterno'); 
            break;
        }
		
		$this->_info[1]	= new TextLabel('txtNome',$this->servInterno->descricao,'Descrição');

        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_adminorcamento',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ad_adminorcamento',A_EXECUTE,'Executores',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"executores"));
        $panel->AddUserAction('ad_adminorcamento',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
        $panel->SetIconType('small');
 	}
}
?>
