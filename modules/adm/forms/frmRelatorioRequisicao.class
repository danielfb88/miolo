class frmRelatorioRequisicao extends Form
{
   var $objRelatorioRequisicao;
   
   function __construct()
   {
 	  global $MIOLO, $module, $self;
  	  $this->listURL = $MIOLO->GetActionURL($module,$self,'',Array('event'=>'btnList:click') );
 	  $this->objEstoque = $MIOLO->GetBusiness('adm','requisicao');
 	  $this->Form('Relatório de Requisição');
 	  $this->EventHandler();
   }

   function CreateFields()
   {
      global $MIOLO,$module,$self, $action, $auth;
	  $fields = array
      (
         new LookupTextField('lkpRequisicao','','Número da Requisição',20)
	  );
	  $this->SetFields($fields);

	  $this->SetFieldAttr('lkpRequisicao','module',$module);
      $this->SetFieldAttr('lkpRequisicao','item','RelatorioRequisicao');
	  $this->SetFieldAttr('lkpRequisicao','event', 'btnPost:click');
	  
	  $buttons = array
      (
	     new FormButton('btnPost', 'Gerar Relatório'),
	  );
      $this->SetButtons($buttons);
	  $this->SetButtonAttr('btnPost','visible',false);
   }

   function btnPost_click($cobaia)
   {
	 global $MIOLO, $module, $item;
     
     $ui = $MIOLO->GetUI();
     $report = $ui->GetReport($module,'repRequisicao',array('idrequisicao'=>$cobaia));
	 $report->Generate();

   }
}
