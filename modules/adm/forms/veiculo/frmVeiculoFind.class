global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkveiculo.class','adm');

/**
 * Formulário básico para seleção de Hotéis
 * 
 */
class frmVeiculoFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
		
        $this->Form('Pesquisar Veículos');
		$this->SetClose($MIOLO->GetActionURL($module,'main:manutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

		// Inclusão do Filtro por Tipo de Requisição
    	$objInstituicao = $this->manager->GetBusiness('common','instituicao');
		$instituicao = $objInstituicao->listAll();
		while ( !$instituicao->eof() )
		{
			if(($instituicao->fields('ug')!='') or ($instituicao->fields('uasg')!=''))
			{
				$options[$instituicao->fields('idinstituicao')] = $instituicao->fields('instituicao');
            }
			$instituicao->moveNext();
		}
		$this->SetFieldAttr('idinstituicao','options', $options);
		$controleInstituicao = array( 
					new Text('','Instituição'),
					new Selection('idInstituicao','','',$options) ,
					new FormButton('btnPost', 'Enviar'));
		$controlInstituicao = new BaseGroup('controlInstituicao','Filtragem por Instituição:',$controleInstituicao,'horizontal','css');

        $ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridVeiculo');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkVeiculo('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','Veiculo:'),
                new TextField('veiculo','','',15),
                $findButton,
                $lnkNew
            ),
            $controlInstituicao,
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>
