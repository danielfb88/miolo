class frmLicitacaoPlanilha extends MForm
{
    protected $licitacao;
	protected $planilha;

	function __construct($licitacao)
	{
        $this->licitacao = $licitacao;
		parent::__construct('Imprimir Planilha de Especificação da Licitação');
		$this->eventHandler();
	}

	function createFields()
	{
		$this->addField(new MMultiLineField('obs','','Observação',400,3,80));
		$this->addField(new MTextField('pag','','Primeira Página'));
		$this->addField(new MHiddenField('numero', $this->licitacao->numero));
		$this->addField(new MHiddenField('idlicitacao', $this->licitacao->idLicitacao));
		$this->addField(new MHiddenField('dataAbertura', $this->licitacao->dataAbertura));
		$observacao = urldecode($this->licitacao->obs);
		$this->SetFieldValue('obs',$observacao);
		$this->addButton(new MButton('btnReport','Exibir Planilha de Especificação de Materiais', 'pdf'));
	}

	function btnReport_click()
	{

		$this->licitacao->setObs(urlencode($this->GetFormValue('obs')));
		$this->licitacao->save();
		global $MIOLO;

		
		$parameters['int_idinstituicao'] = 1;
		$parameters['str_numero'] = $this->getFieldValue('numero');
		$parameters['str_obs'] = ($this->GetFormValue('obs'))?$this->GetFormValue('obs'):' ';
		/*-
		caso não for informado o número do parâmetro pag, este é passado como 0 (e não -2)
		a correção do número de página é feita no relatorio
		*/
		$parameters['int_pag'] = $this->GetFormValue('pag')-2; 
		$report = new MJasperReport('sigaept');
		$parameters['str_SUBREPORT_DIR'] = $this->manager->getConf('home.modules') . "/adm/reports/";
		$parameters['str_IMAGE_DIR'] = $this->manager->getConf('home.modules') . "/common/html/images/";
		$report->Execute('adm', 'PlanilhaDeEspecificacao', $parameters);
    }
}
