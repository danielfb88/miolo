class frmLicitacaoChangeStatus extends Form
{
    protected $objLicitacao;
    
	function __construct($licitacao)	
	{
 		global $MIOLO;
        
        $this->objLicitacao = $licitacao;
        $this->Form('Alterar status da licitação');
        $this->EventHandler();     
	}

	function CreateFields()
	{
		global $MIOLO, $module, $action;
		
		$queryStatus = $this->objLicitacao->ListAllStatus();

		$fields = Array(
			new Selection('status',$this->objLicitacao->status,'Alterar para',$queryStatus),
		);
		$this->SetFields($fields);

		$buttons = Array(
	        new FormButton('btnAlteraStatus','Alterar'),
		);
		// cria os botões
		$this->SetButtons($buttons);
	}


	/*------------------------------------------------

	btnAlteraStatus_click()
	
	------------------------------------------------*/
	function btnAlteraStatus_click()	
	{
		global $MIOLO, $module,$item;

		$status = $this->GetFormValue('status');

        $this->objLicitacao->alteraStatus($status);    
		try
		{
			$this->objLicitacao->save();
            $action = $this->manager->GetActionURL('adm','main:licitacoes',$this->objLicitacao->idLicitacao);
    		$this->manager->information("Status da Licitação alterado com sucesso.",$action);
		}
		catch (Exception $e)
		{
			$this->AddError("Informe o seguinte erro a equipe do CGCO: ".$e->getMessage());
		}
    }	
}
