class frmListarEmAndamento extends MForm
{
	private $radioOpcoesEscolha;

	function __construct()
    {
       parent::__construct();
       $this->EventHandler();            
    }

    function CreateFields()    
    {
       global $MIOLO, $action;
       $ui = $MIOLO->GetUI();
           
       $this->radioOpcoesEscolha = $this->GetFormValue('radioOpcoes');

       if (!$this->radioOpcoesEscolha)
       		$this->radioOpcoesEscolha = "Todos";
       
       $this->SetTitle('Licitações em Andamento: ' . $this->radioOpcoesEscolha);

       $this->defaultButton = false;
        
       /**
        * Filtro por UFJF ou HU
        */
      // $opcoes = array( 'UFJF', 'HU', 'Todos' ); 
       
       //$radioOpcoes  = new MRadioButtonGroup( 'radioOpcoes', 'Escolha o local da licitação', $opcoes, $this->radioOpcoesEscolha, '', 'horizontal', 'css' );
      // $radioOpcoes->setAutoPostBack(true); 

       $findButton = new ButtonFind('');
       $findButton->SetName('btnFind');

       $fields = array
	   (
            array(
                new Text('','Número da Licitação:'),
    			new TextField('numero','','','15'),
                new FormButton('btnLocalizar', 'Localizar'),
                ),
	       		new MSpacer(1),
    			$radioOpcoes,
    			new MSpacer(1),
			$ui->GetGrid('adm','gridLicitacao',$this->radioOpcoesEscolha)
	  );
                    
       $this->SetFields($fields); 
    }  

	function btnLocalizar_click()
	{
        $licitacao = $this->manager->GetBusiness('adm','licitacao');
        $numero = $this->getFormValue('numero');
        
        $query = $licitacao->GetByNumero($numero);
        $idLicitacao = $query[0][0];

        if ($idLicitacao)
        {
            $go = $this->manager->GetActionURL('adm','main:licitacoes',$idLicitacao,'');
    	    $this->page->Redirect($go);
        }
        else
        {
            $this->addError("Não existe uma licitação com o número ".$numero.".");
        }
    }
}
