class frmItensALicitar extends Form
{
	function __construct()
	{   
		parent::__construct('Relação de itens a serem licitados');
		$this->EventHandler();
	}

	function CreateFields()
	{
		global $MIOLO, $module, $action;
		
		$objItem = $MIOLO->GetBusiness($module,'itemreq');
		
		$query = $objItem->ListItensAtendidosByCosup();
		$columns = array(
			new DataGridColumn('idmaterial','Código','center','','5%'),
			new DataGridColumn('descricao','Material','left','','35%'),
			new DataGridColumn('idrequisicao','Req.','center','','10%'),
			new DataGridColumn('quantpedida','Ped.','center','','5%'),
			new DataGridColumn('quantautorizada','Lib.','center','','5%'),
			new DataGridColumn('valor','Valor','center','','10%'),
			new DataGridColumn('descreq','Descrição','left','','30%'),	
			new DataGridColumn('iditemreq','IdItemreq','center',true,'1%',false)
		);
		$datagrid = new DataGrid2($query,$columns,$action,20);
		$this->AddField($datagrid);
		$this->AddField(new Separator('<b>Legenda:</b>'));
		$this->AddField(new Text('aviso1','Req: Número da Requisição a qual pertence o item.'));
		$this->AddField(new Text('aviso2','Ped: Quantidade pedida.'));
		$this->AddField(new Text('aviso3','Lib: Quantidade liberada.'));	

		$buttons = Array(
			new FormButton('btnMonta','Montar Licitação',$MIOLO->GetActionURL($module,'licitacoes')),
			new FormButton('btnVoltar','Voltar',$MIOLO->GetActionURL($module,'sectionsCompras')),
		);
		$this->SetButtons($buttons);
	}
}
?>
