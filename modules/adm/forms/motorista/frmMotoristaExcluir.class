/**
 * Formulário de exclusão motorista
 */
class frmMotoristaExcluir extends Form
{
	/**
	 * Objeto motorista
	 * @access protected
	 * 
	 */
	protected $objMotorista;

    	function __construct($objMotorista)
    	{
		$this->objMotorista = $objMotorista;
        	parent::__construct('Excluir Motorista');
        	$this->EventHandler();
    	}

    	function CreateFields()
    	{
		$action_sim = $this->manager->GetActionURL('adm','main:motorista',$this->objMotorista->idMotorista,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:motorista',$this->objMotorista->idMotorista);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objMotorista->ativo="N";
				$this->objMotorista->Save();
				$this->objMotorista->Log(OP_DEL,"Motorista excluído");
				$this->manager->Information('Motorista excluído com sucesso',$this->manager->GetActionURL('adm','main:motorista:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do SIGA-ADM: ".$e->getMessage,$this->manager->GetActionURL('adm','main:motorista',$this->objMotorista->idMotorista));
			}
		}
		else
		{
			$this->manager->Question("Tem certeza que deseja excluir esse motorista?",$action_sim,$action_nao);
		}
	   
    	}

}
