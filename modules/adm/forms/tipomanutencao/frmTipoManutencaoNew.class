class frmTipoManutencaoNew extends MForm
{
    public function __construct()
    {
        global $MIOLO;
        parent::__construct('Novo Tipo de Manutenção');
        $this->SetClose($MIOLO->GetActionURL('adm','main'));
        $this->EventHandler();
    }    
    public function CreateFields()
    {

		$fields = new MTextField('tipoManutencao','','Tipo de Manutencao',30, 'Máx. 30 caracteres');
		$buttons = new MButton('btnEnviar');
		$this->SetFields($fields);
		$this->SetButtons($buttons);
		$this->tipoManutencao->addAttribute('maxlength',30);
		$validators = array (
			new RequiredValidator('tipoManutencao'),
		);
		$this->SetValidators($validators);
	
    }
    function btnEnviar_click()
    {
		global $MIOLO;
		$objTipoManutencao = $MIOLO->GetBusiness('adm','tipomanutencao');
		$data = $this->getData();
		$objTipoManutencao->setData($data);
		$tipoM = $objTipoManutencao->listByTipo($objTipoManutencao->tipoManutencao);
		if ($objTipoManutencao->tipoManutencao == '')
		{
			$this->manager->Error('Favor preencher corretamente o campo Tipo de Manutencao',$this->manager->GetActionURL('adm','main:tipomanutencao:new'));
		}
		elseif ($tipoM->result)	
		{
			$this->addError('Já existe registro de um tipo de manutenção com este mesmo nome');
		}
		elseif(!preg_match("/^[A-Z|0-9]/" ,$objTipoManutencao->tipoManutencao))
		{
			$this->addError('Campo nome inválido');
		}
		else
		{
			try
			{
				$objTipoManutencao->Save();
				$msg = "Tipo de Manutenção Cadastrado com sucesso";
				$this->manager->Information($msg,$this->manager->GetActionURL('adm','main:tipomanutencao:find'));
			}
			catch(Exception $e)
			{
				$this->manager->Error($e->getMessage());
			}
		}
	}
    
}
