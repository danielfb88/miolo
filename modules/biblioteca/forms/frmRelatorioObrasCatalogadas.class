  @since 17-04-2013
 **/
class frmRelatorioObrasCatalogadas extends Form {

	function frmRelatorioObrasCatalogadas() {
		global $MIOLO, $action, $module, $item;

		$this->Form("Relatório de Obras Catalogadas");
		$this->EventHandler();
		$this->defaultButton = false;
		$this->SetClose($this->manager->GetActionURL($module, 'main:circulacao:relatorio'));
	}

	function CreateFields() {
		global $MIOLO, $action, $module, $item, $page;


		$opcoesOrdenacao = array(
				/**
				 * Numeração de acordo com ordem das colunas da query
				 * do relatório.
				 **/
				new MOption('catalogador', 3, 'Catalogador', true),
				new MOption('campus', 4, 'Campus', false),
				);


		$fields = Array (
				new MCalendarField('dataInicio','','Data Inicial',10,'informe a data inicial do relatório.'),
				new MCalendarField('dataFim','','Data Final',10,'informe a data final do relatório.'),
				new MRadioButtonGroup('ordenacao', 'Ordenar Por:</br></br>', $opcoesOrdenacao, '',
					'vertical', 'css')
				);

		$this->SetFields($fields);

		$buttons = Array(			
				new FormButton('btnRelatorio', 'Gerar Relatório', 'PDF'),
				);
		$this->SetButtons($buttons);
	}	

	function btnRelatorio_click() {	
		global $MIOLO,$module;
		$coluna = (int) $this->getFormValue('ordenacao');
		$dataInicio = $this->getFormValue('dataInicio');
		$dataFim = $this->getFormValue('dataFim');
		//		var_dump($coluna);die;

		$parameters['int_ORDERBY'] = $coluna; 
		$parameters['dta_DATAINICIO'] = $dataInicio;
		$parameters['dta_DATAFIM'] = $dataFim;

		$report = new MJasperReport('sigaept');
		$report->Execute('biblioteca', 'obrasCatalogadas', $parameters);

	}

}
