class frmRelatorioObrasPorUnidadeAssunto extends Form
{
	function frmRelatorioObrasPorUnidadeAssunto()
	{
		global $MIOLO, $action, $module, $item;

		$this->Form("Relatório de Obras por Unidade e Assunto");
		$this->EventHandler();
		$this->defaultButton = false;
		// Botão 'fechar', direcionando para o handler biblioteca/main/circulacao/relatorio
		$this->SetClose($this->manager->GetActionURL($module, 'main:circulacao:relatorio'));  		
	}

	function CreateFields()
	{
		global $MIOLO, $action, $module, $item, $page;

		$bussUnidade = $MIOLO->GetBusiness($module, 'unidade');

		$opcoes_unidades = $bussUnidade->selAll();
		array_unshift($opcoes_unidades->result,'TODAS');		

		$fields = 
			Array (
					new MSelection('slIDUnidade','','Unidade',$opcoes_unidades->result),
					new MTextField('txAssunto','','Assunto',40)
				  );


		$this->SetFields($fields);

		$buttons = 
			Array(			
					new FormButton('btnRelatorio', 'Gerar Relatório'),
				 );

		$this->SetButtons($buttons);
		$this->page->onLoad("MIOLO_GetElementById('Unidade').focus();");                       
	}	

	function btnRelatorio_click()
	{
		global $MIOLO, $module;

		$idUnidade = $this->getFieldValue('slIDUnidade'); 
		$assunto = $this->getFieldValue('txAssunto');

		// TODO: Bug sutil aqui. Realizar testes e comparar com script
		// em base de dados.

		$ui = $MIOLO->GetUI();
		$report = new MJasperReport('sigaept');

		$parameters[ 'str_ASSUNTO' ] = $assunto;
		$reportName = null;

		if (!is_null($idUnidade) && !empty($idUnidade) && 
				$idUnidade != 0 ) { 
			$reportName = 'repObrasPorUnidadeEAssunto';
			$parameters[ 'int_IDUNIDADE' ] = $idUnidade;

		}	else {
			$reportName = 'repObrasPorAssunto';

		}

		$report->Execute('biblioteca',$reportName,$parameters);
	}


}
