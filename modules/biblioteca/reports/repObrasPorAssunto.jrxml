	<parameter name="ASSUNTO" class="java.lang.String">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
	replace(o.titulo,'/','') as titulo,
	array_to_string(array_agg(distinct a.conteudo),' , ') as autor,
	count(e.idexemplar) as qtd_exemplares,
	array_to_string(array_agg(distinct ass.conteudo),' , ') as assunto

FROM
	bt_obra o JOIN
	bt_autor a ON (o.idautor = a.idautor) JOIN
	bt_exemplar e ON (o.idobra = e.idobra) JOIN
	bt_genero g ON (o.idgenero = g.idgenero) JOIN
	bt_unidade u ON (e.idunidade = u.idunidade) JOIN
	bt_assuntoobra ao ON (o.idobra = ao.idobra) LEFT OUTER JOIN
	bt_assunto ass ON (ao.idassunto = ass.idassunto)

WHERE
	g.idgenero = 1 AND
	UPPER(ass.conteudo) LIKE UPPER($P{ASSUNTO})

GROUP BY
	o.titulo

ORDER BY
	o.titulo]]>
	</queryString>
